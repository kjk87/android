<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bf000000"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/width_90"
        android:layout_marginEnd="@dimen/width_90"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_join_confirm_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_180"
            android:textColor="@color/color_232323"
            android:textSize="@dimen/textSize_84pt"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_10"
            android:gravity="center"
            android:paddingStart="@dimen/width_72"
            android:paddingEnd="@dimen/width_72"
            android:text="@string/msg_make_prnumber_confirm_description1"
            android:textColor="@color/color_ff4646"
            android:textSize="@dimen/textSize_46pt"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_60"
            android:gravity="center"
            android:paddingStart="@dimen/width_72"
            android:paddingEnd="@dimen/width_72"
            android:text="@string/msg_make_prnumber_confirm_description2"
            android:textColor="@color/color_737373"
            android:textSize="@dimen/textSize_46pt"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_171"
            android:layout_marginTop="@dimen/height_180"
            android:background="@color/color_579ffb"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_join_confirm_cancel"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_171"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/word_cancel"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_39pt"/>

            <View
                android:layout_width="@dimen/width_2"
                android:layout_height="@dimen/height_45"
                android:layout_gravity="center_vertical"
                android:background="@color/color_8bbbf8"/>

            <TextView
                android:id="@+id/text_join_confirm"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_171"
                android:layout_weight="1"
                android:background="@color/color_579ffb"
                android:gravity="center"
                android:text="@string/word_confirm"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_39pt"/>


        </LinearLayout>
    </LinearLayout>

</RelativeLayout>