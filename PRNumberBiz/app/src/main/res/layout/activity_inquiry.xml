<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/width_72"
            android:paddingRight="@dimen/width_72">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_56"
                android:text="@string/msg_inquiry_description"
                android:textColor="@color/color_737373"
                android:textSize="@dimen/textSize_34pt"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_2"
                android:layout_marginTop="@dimen/height_20"
                android:background="@color/color_ebebeb"/>

            <TextView
                android:id="@+id/text_inquiry_type_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_60"
                android:text="@string/word_type"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_36pt"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text_inquiry_type"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_132"
                android:layout_marginBottom="@dimen/height_54"
                android:layout_marginTop="@dimen/height_20"
                android:background="@drawable/border_color_a0a0a0_2px"
                android:drawableRight="@drawable/ic_dropbox_down"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/width_40"
                android:paddingRight="@dimen/width_40"
                android:text="@string/msg_inquiry"
                android:textColor="@color/black"
                android:textColorHint="@color/color_bbbbbb"
                android:textSize="@dimen/textSize_40pt"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_60"
                android:text="@string/word_subject"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_36pt"
                android:textStyle="bold"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_132"
                android:layout_marginBottom="@dimen/height_54"
                android:layout_marginTop="@dimen/height_20">

                <EditText
                    android:id="@+id/edit_inquiry_subject"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_132"
                    android:background="@drawable/border_color_a0a0a0_2px"
                    android:gravity="center_vertical"
                    android:hint="@string/hint_input_subject"
                    android:maxLength="50"
                    android:paddingLeft="@dimen/width_40"
                    android:paddingRight="@dimen/width_40"
                    android:textColor="@color/black"
                    android:textColorHint="@color/color_bbbbbb"
                    android:textSize="@dimen/textSize_40pt"/>

                <TextView
                    android:id="@+id/text_inquiry_subject"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_132"
                    android:background="@drawable/border_color_a0a0a0_2px"
                    android:text="@string/msg_apply_sale_cal_service"
                    android:paddingLeft="@dimen/width_40"
                    android:paddingRight="@dimen/width_40"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:visibility="gone"
                    android:textSize="@dimen/textSize_40pt"/>

            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_60"
                android:text="@string/word_contents"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_36pt"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/edit_inquiry_contents"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_396"
                android:layout_marginBottom="@dimen/height_54"
                android:layout_marginTop="@dimen/height_20"
                android:background="@drawable/border_color_a0a0a0_2px"
                android:gravity="top"
                android:hint="@string/hint_input_inquiry_contents"
                android:padding="@dimen/width_40"
                android:textColor="@color/black"
                android:textColorHint="@color/color_bbbbbb"
                android:textSize="@dimen/textSize_40pt"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_60"
                android:text="@string/word_email"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_36pt"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/layout_inquiry_selectMail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_20"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edit_inquiry_mailId"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_132"
                    android:layout_gravity="top"
                    android:layout_marginBottom="@dimen/height_54"
                    android:layout_marginRight="@dimen/width_40"
                    android:layout_weight="1"
                    android:background="@drawable/border_color_a0a0a0_2px"
                    android:gravity="center_vertical"
                    android:hint="@string/hint_input_not_alpha"
                    android:paddingLeft="@dimen/width_40"
                    android:paddingRight="@dimen/width_40"
                    android:textColor="@color/black"
                    android:textColorHint="@color/color_bbbbbb"
                    android:textSize="@dimen/textSize_40pt"/>

                <TextView
                    android:id="@+id/text_inquiry_selection"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_132"
                    android:layout_gravity="top"
                    android:layout_marginBottom="@dimen/height_54"
                    android:layout_marginRight="@dimen/width_40"
                    android:layout_weight="1"
                    android:background="@drawable/border_color_a0a0a0_2px"
                    android:drawableRight="@drawable/ic_dropbox_down"
                    android:gravity="center_vertical"
                    android:hint="@string/word_select"
                    android:paddingLeft="@dimen/width_40"
                    android:paddingRight="@dimen/width_40"
                    android:textColor="@color/black"
                    android:textColorHint="@color/color_bbbbbb"
                    android:textSize="@dimen/textSize_40pt"/>

            </LinearLayout>

            <EditText
                android:id="@+id/edit_inquiry_email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_132"
                android:layout_gravity="top"
                android:layout_marginBottom="@dimen/height_54"
                android:layout_marginRight="@dimen/width_40"
                android:layout_marginTop="@dimen/height_20"
                android:background="@drawable/border_color_a0a0a0_2px"
                android:gravity="center_vertical"
                android:hint="@string/msg_input_email"
                android:inputType="textEmailAddress"
                android:paddingLeft="@dimen/width_40"
                android:paddingRight="@dimen/width_40"
                android:textColor="@color/black"
                android:textColorHint="@color/color_bbbbbb"
                android:textSize="@dimen/textSize_40pt"/>

            <TextView
                android:id="@+id/text_inquiry_complete"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_140"
                android:layout_marginBottom="@dimen/height_100"
                android:layout_marginTop="@dimen/height_100"
                android:background="@drawable/btn_blue"
                android:gravity="center"
                android:text="@string/word_complete"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_38pt"/>


        </LinearLayout>


    </ScrollView>

</LinearLayout>