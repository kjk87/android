<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bf000000"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/width_90"
        android:layout_marginEnd="@dimen/width_90"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_232323"
            android:layout_marginTop="@dimen/height_180"
            android:text="@string/word_pay_complete"
            android:textStyle="bold"
            android:textSize="@dimen/textSize_64pt" />

        <ImageView
            android:layout_width="@dimen/width_188"
            android:layout_height="@dimen/height_177"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/height_60"
            android:src="@drawable/ic_nfc_check" />

        <TextView
            android:id="@+id/text_alert_nfcpay_complete_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_40"
            android:textColor="@color/color_ff4646"
            android:textSize="@dimen/textSize_60pt" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_737373"
            android:text="@string/msg_pay_complete_nfc_desc"
            android:gravity="center"
            android:textSize="@dimen/textSize_42pt" />

        <TextView
            android:id="@+id/text_alert_nfcpay_complete_confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_171"
            android:background="@color/color_579ffb"
            android:gravity="center"
            android:text="@string/word_confirm"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_44pt"
            android:layout_marginTop="@dimen/height_90"
            android:textStyle="bold" />


    </LinearLayout>



</RelativeLayout>