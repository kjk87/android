<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/height_100"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_240">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/width_54">

                    <TextView
                        android:id="@+id/text_point_history_detail_title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_232323"
                        android:textSize="@dimen/textSize_33pt"/>

                    <TextView
                        android:id="@+id/text_point_history_detail_contents1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/height_12"
                        android:textColor="@color/color_ff0000"
                        android:textSize="@dimen/textSize_45pt"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_2"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_eaeaea"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/layout_point_history_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_240">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/width_54">

                    <TextView
                        android:id="@+id/text_point_history_detail_title2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_232323"
                        android:textSize="@dimen/textSize_33pt"/>

                    <TextView
                        android:id="@+id/text_point_history_detail_contents2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/height_12"
                        android:textColor="@color/color_808080"
                        android:textSize="@dimen/textSize_45pt"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_2"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_eaeaea"/>
            </RelativeLayout>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <TextView
        android:id="@+id/text_point_history_mobile_gift_history_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/height_110"
        android:paddingEnd="@dimen/width_54"
        android:paddingStart="@dimen/width_54"
        android:text="@string/msg_point_history_detail_description"
        android:textColor="@color/color_808080"
        android:textSize="@dimen/textSize_39pt"/>


</RelativeLayout>