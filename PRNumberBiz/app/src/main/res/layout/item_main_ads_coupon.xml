<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/width_504"
        android:layout_height="@dimen/height_520"
        android:background="@drawable/border_color_d8d8d8_2px"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_375">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/height_70"
                android:layout_marginLeft="@dimen/width_40"
                android:layout_marginRight="@dimen/width_40"
                android:layout_marginTop="@dimen/height_70"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_main_ads_coupon_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_ff4141"
                    android:textSize="@dimen/textSize_36pt"
                    android:textStyle="bold"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/text_main_ads_coupon_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/color_232323"
                    android:textSize="@dimen/textSize_40pt"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/text_main_ads_coupon_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_20"
                    android:textColor="@color/color_a0a0a0"
                    android:textSize="@dimen/textSize_33pt"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_2"
                android:layout_alignParentBottom="true"
                android:background="@color/color_d8d8d8"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/text_main_ads_coupon_visit_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/width_40"
            android:layout_marginTop="@dimen/height_34"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize_38pt"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/layout_main_ads_coupon_visit_rate"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_6"
            android:layout_marginLeft="@dimen/width_40"
            android:layout_marginRight="@dimen/width_40"
            android:layout_marginTop="@dimen/height_14"
            android:background="@color/color_dddddd"
            android:orientation="horizontal"
            android:weightSum="1">

            <View
                android:id="@+id/view_main_ads_coupon_visit_rate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:background="@color/color_8700ff"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>