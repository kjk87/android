<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/width_72"
        android:paddingRight="@dimen/width_72">

        <ImageView
            android:id="@+id/image_user_profileImg"
            android:layout_width="@dimen/width_160"
            android:layout_height="@dimen/height_160"
            android:layout_marginRight="@dimen/width_40"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_gift_profile_default"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_46pt"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text_user_subInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_12"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_36pt"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_user_customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_user_recommend"
                android:layout_width="@dimen/width_120"
                android:layout_height="@dimen/height_92"
                android:background="@drawable/border_color_a0a0a0_2px"
                android:gravity="center"
                android:text="@string/word_recommend"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_32pt"/>

            <ImageView
                android:id="@+id/image_user_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_mylist_menu"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/image_user_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_contact_checkbox"
            android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>