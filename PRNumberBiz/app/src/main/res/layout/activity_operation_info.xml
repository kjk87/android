                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/layout_operation_info_method"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/width_40"
                            android:layout_marginTop="@dimen/height_24"
                            android:text="@string/word_operation_method"
                            android:textColor="@color/color_579ffb"
                            android:textSize="@dimen/textSize_36pt"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_140"
                            android:orientation="horizontal"
                            android:paddingStart="@dimen/width_40"
                            android:paddingEnd="@dimen/width_40">

                            <CheckBox
                                android:id="@+id/check_operation_info_store"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:button="@drawable/ic_check"
                                android:gravity="left|center_vertical"
                                android:paddingStart="@dimen/width_30"
                                android:text="@string/word_order_store"
                                android:textColor="@color/color_232323"
                                android:textSize="@dimen/textSize_48pt" />

                            <CheckBox
                                android:id="@+id/check_operation_info_packing"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
