                                android:gravity="left|center_vertical"
                                android:paddingStart="@dimen/width_30"
                                android:text="@string/word_order_packing"
                                android:textColor="@color/color_232323"
                                android:textSize="@dimen/textSize_48pt" />

                            <CheckBox
                                android:id="@+id/check_operation_info_delivery"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:button="@drawable/ic_check"
                                android:gravity="left|center_vertical"
                                android:paddingStart="@dimen/width_30"
                                android:text="@string/word_order_delivery"
                                android:textColor="@color/color_232323"
                                android:textSize="@dimen/textSize_48pt" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_2"
                            android:background="@color/color_f0f0f0" />

                    </LinearLayout>

                    <LinearLayout
