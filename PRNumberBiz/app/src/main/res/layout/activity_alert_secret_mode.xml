<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bf000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/width_90"
        android:layout_marginEnd="@dimen/width_90"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/width_54"
            android:layout_marginTop="@dimen/height_180"
            android:layout_marginEnd="@dimen/width_54"
            android:gravity="center"
            android:text="@string/word_setting_secret_mode"
            android:textColor="@color/color_232323"
            android:textSize="@dimen/textSize_46pt"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/image_alert_secret_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_main_popup_secret_on" />

        <TextView
            android:id="@+id/text_alert_secret_mode1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/msg_secret_mode_on"
            android:textColor="@color/color_579ffb"
            android:textSize="@dimen/textSize_50pt" />

        <TextView
            android:id="@+id/text_alert_secret_mode2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_100"
            android:gravity="center"
            android:text="@string/msg_secret_mode_on_description1"
            android:textColor="@color/color_737373"
            android:textSize="@dimen/textSize_42pt" />

        <TextView
            android:id="@+id/text_alert_secret_mode3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_44"
            android:gravity="center"
            android:text="@string/msg_secret_mode_on_description2"
            android:textColor="@color/color_232323"
            android:textSize="@dimen/textSize_42pt" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_171"
            android:layout_marginTop="@dimen/height_180"
            android:background="@color/color_579ffb"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_alert_secret_mode_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color_579ffb"
                android:gravity="center"
                android:text="@string/word_cancel"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_39pt" />

            <View
                android:layout_width="@dimen/width_2"
                android:layout_height="@dimen/height_45"
                android:layout_gravity="center_vertical"
                android:background="@color/color_8bbbf8" />

            <TextView
                android:id="@+id/text_alert_secret_mode_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color_579ffb"
                android:gravity="center"
                android:text="@string/word_confirm"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_39pt" />


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>