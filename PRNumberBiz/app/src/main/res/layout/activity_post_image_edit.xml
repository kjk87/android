<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/width_72">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_74"
            android:gravity="center"
            android:text="@string/msg_post_image_list_description"
            android:textColor="@color/color_737373"
            android:textSize="@dimen/textSize_40pt"/>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/pager_image_edit"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_630"
            android:layout_marginTop="@dimen/height_50"
            android:paddingEnd="@dimen/width_120"/>

    </LinearLayout>

    <TextView
        android:id="@+id/text_post_image_edit_complete"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_136"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/height_110"
        android:layout_marginLeft="@dimen/width_72"
        android:layout_marginRight="@dimen/width_72"
        android:background="@color/black"
        android:gravity="center"
        android:text="@string/word_complete"
        android:textColor="@color/color_ffffff_a3a3a3"
        android:textSize="@dimen/textSize_40pt"/>


</RelativeLayout>
