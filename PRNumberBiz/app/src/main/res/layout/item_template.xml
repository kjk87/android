<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/image_template"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_1153"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/width_18"
        android:layout_marginRight="@dimen/width_18"
        android:layout_marginTop="@dimen/height_190"
        android:scaleType="fitXY"/>


    <RelativeLayout
        android:id="@+id/layout_template_check"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_1153"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/width_18"
        android:layout_marginRight="@dimen/width_18"
        android:layout_marginTop="@dimen/height_190"
        android:background="@color/color_73000000"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_pr_check"/>
    </RelativeLayout>
</RelativeLayout>