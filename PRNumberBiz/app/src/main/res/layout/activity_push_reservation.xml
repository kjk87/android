<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_60"
            android:paddingLeft="@dimen/width_72"
            android:text="@string/word_reservation_time"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize_36pt"
            android:textStyle="bold"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/height_94"
            android:layout_marginTop="@dimen/height_20"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/width_72"
            android:paddingRight="@dimen/width_72">

            <TextView
                android:id="@+id/text_push_reservationt_date"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_92"
                android:layout_marginRight="@dimen/width_56"
                android:layout_weight="1"
                android:background="@drawable/border_color_a0a0a0_2px"
                android:drawableRight="@drawable/ic_dropbox_down"
                android:gravity="center_vertical"
                android:hint="@string/word_reservation_date"
                android:paddingLeft="@dimen/width_40"
                android:paddingRight="@dimen/width_40"
                android:textColor="@color/black"
                android:textColorHint="@color/color_bbbbbb"
                android:textSize="@dimen/textSize_40pt"/>

            <TextView
                android:id="@+id/text_push_reservation_time"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_92"
                android:layout_weight="1"
                android:background="@drawable/border_color_a0a0a0_2px"
                android:drawableRight="@drawable/ic_dropbox_down"
                android:gravity="center_vertical"
                android:hint="@string/word_reservation_time"
                android:paddingLeft="@dimen/width_40"
                android:paddingRight="@dimen/width_40"
                android:textColor="@color/black"
                android:textColorHint="@color/color_bbbbbb"
                android:textSize="@dimen/textSize_40pt"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_2"
            android:background="@color/color_d8d8d8"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_18"
            android:background="@color/color_f0f0f0"/>

        <TextView
            android:id="@+id/text_push_reservation_totalCount"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_87"
            android:layout_marginLeft="@dimen/width_72"
            android:layout_marginTop="@dimen/height_40"
            android:gravity="center_vertical"
            android:text="@string/msg_not_exist_reservation_push"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize_38pt"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_push_reservation"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="@dimen/width_72"
            android:paddingRight="@dimen/width_72"/>

        <TextView
            android:id="@+id/text_push_reservation_send"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_136"
            android:layout_marginBottom="@dimen/height_110"
            android:layout_marginLeft="@dimen/width_72"
            android:layout_marginRight="@dimen/width_72"
            android:layout_marginTop="@dimen/height_100"
            android:background="@color/black"
            android:gravity="center"
            android:text="@string/word_push_send"
            android:textColor="@color/color_ffffff_a3a3a3"
            android:textSize="@dimen/textSize_40pt"
            android:textStyle="bold"/>

    </LinearLayout>

</RelativeLayout>
