<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_319"
                android:background="@color/white"
                android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_319"
        android:background="@drawable/border_color_d8d8d8_2px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_select_post"
            android:layout_width="@dimen/width_420"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/width_40"
            android:paddingBottom="@dimen/height_2"
            android:paddingTop="@dimen/height_2"
            android:layout_marginStart="@dimen/width_2"
            android:scaleType="centerCrop"
            android:src="@drawable/prnumber_default_img"/>

        <TextView
            android:id="@+id/text_select_post_contents"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/width_40"
            android:layout_weight="1"
            android:maxLines="4"
            android:textColor="@color/color_565656"
            android:textSize="@dimen/textSize_34pt"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/image_select_post_check"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_a6f1f1f1"
        android:scaleType="center"
        android:src="@drawable/ic_push_check"
        android:visibility="gone"/>

</RelativeLayout>