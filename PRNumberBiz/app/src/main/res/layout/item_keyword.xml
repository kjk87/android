<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/text_keyword"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_120"
        android:paddingStart="@dimen/width_60"
        android:paddingEnd="@dimen/width_60"
        android:layout_marginEnd="@dimen/width_15"
        android:background="@drawable/bg_keyword_1"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLength="20"
        android:textColor="@color/color_232323"
        android:textSize="@dimen/textSize_47pt" />

    <ImageView
        android:id="@+id/image_delete_keyword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/btn_keyword_delete" />
</LinearLayout>