<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/height_100">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/width_72"
                    android:layout_marginTop="@dimen/height_110"
                    android:text="@string/msg_keyword_desc1"
                    android:textColor="@color/color_232323"
                    android:textSize="@dimen/textSize_88pt" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/width_72"
                    android:layout_marginTop="@dimen/height_20"
                    android:layout_marginEnd="@dimen/width_72"
                    android:text="@string/msg_keyword_desc2"
                    android:textColor="@color/color_b7b7b7"
                    android:textSize="@dimen/textSize_40pt"
                    android:textStyle="bold" />

                <com.pplus.prnumberbiz.apps.common.ui.custom.DirectionIndicator
                    android:id="@+id/indicator_keyword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="@dimen/height_140" />


                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/pager_keyword"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_800"
                    android:layout_marginStart="@dimen/width_72"
                    android:layout_marginTop="@dimen/height_40"
                    android:layout_marginEnd="@dimen/width_72" />

                <RelativeLayout
                    android:id="@+id/layout_keyword_config"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_320"
                    android:layout_marginStart="@dimen/width_62"
                    android:layout_marginTop="@dimen/height_60"
                    android:layout_marginEnd="@dimen/width_62"
                    android:background="@drawable/bg_box_shadow"
                    android:paddingStart="@dimen/width_60"
                    android:paddingEnd="@dimen/width_60">

                    <TextView
                        android:id="@+id/text_keyword_config"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/html_set_keyword"
                        android:textColor="@color/color_579ffb"
                        android:textSize="@dimen/textSize_62pt" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/btn_keyword_tag_arrow" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/width_54"
                    android:layout_marginTop="@dimen/height_30"
                    android:layout_marginEnd="@dimen/width_54"
                    android:text="@string/msg_keyword_desc3"
                    android:textColor="@color/color_b7b7b7"
                    android:textSize="@dimen/textSize_43pt" />


            </LinearLayout>

        </androidx.core.widget.NestedScrollView>


    </LinearLayout>


</RelativeLayout>
