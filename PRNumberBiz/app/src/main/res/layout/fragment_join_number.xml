<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".apps.signup.ui.JoinFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/width_72"
        android:paddingTop="@dimen/height_168"
        android:paddingEnd="@dimen/width_72">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_60"
            android:text="@string/msg_make_prnumber"
            android:textColor="@color/color_232323"
            android:textSize="@dimen/textSize_84pt" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_100"
            android:layout_marginBottom="@dimen/height_60"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_join_number_store"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@drawable/btn_write_radio"
                android:drawablePadding="@dimen/width_30"
                android:gravity="center_vertical"
                android:text="@string/word_wire_number"
                android:textColor="@color/color_737373_579ffb"
                android:textSize="@dimen/textSize_52pt" />

            <TextView
                android:id="@+id/text_join_number_free"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@drawable/btn_write_radio"
                android:drawablePadding="@dimen/width_30"
                android:gravity="center_vertical"
                android:text="@string/word_free_number"
                android:textColor="@color/color_737373_579ffb"
                android:textSize="@dimen/textSize_52pt" />

            <TextView
                android:id="@+id/text_join_number_mobile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@drawable/btn_write_radio"
                android:drawablePadding="@dimen/width_30"
                android:gravity="center_vertical"
                android:text="@string/word_mobile_number"
                android:textColor="@color/color_737373_579ffb"
                android:textSize="@dimen/textSize_52pt" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_join_number_store"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_140"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_join_number_store_prefix"
                    android:layout_width="@dimen/width_270"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/width_40"
                    android:background="@drawable/underbar_dcdcdc_ffffff_10px"
                    android:drawableEnd="@drawable/ic_input_arrow"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/width_20"
                    android:paddingEnd="@dimen/width_20"
                    android:text="02"
                    android:textColor="@color/color_232323"
                    android:textSize="@dimen/textSize_90pt"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edit_join_number_store_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/underbar_dcdcdc_ffffff_10px"
                    android:gravity="center_vertical"
                    android:inputType="number"
                    android:paddingStart="@dimen/width_20"
                    android:paddingEnd="@dimen/width_20"
                    android:textColor="@color/color_232323"
                    android:textSize="@dimen/textSize_90pt"
                    android:textStyle="bold" />


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_40"
                android:text="@string/msg_store_prnumber_description"
                android:textColor="@color/color_b7b7b7"
                android:textSize="@dimen/textSize_38pt"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_join_number_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_join_number_mobile_nmber"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_140"
                android:background="@drawable/underbar_dcdcdc_ffffff_10px"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/width_20"
                android:paddingEnd="@dimen/width_20"
                android:textColor="@color/color_232323"
                android:textSize="@dimen/textSize_90pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_join_number_mobile_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_40"
                android:text="@string/msg_mobile_prnumber_description1"
                android:textColor="@color/color_b7b7b7"
                android:textSize="@dimen/textSize_38pt"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_join_number_free"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_140"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_join_number_free_prefix"
                    android:layout_width="@dimen/width_270"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/width_40"
                    android:background="@drawable/underbar_dcdcdc_ffffff_10px"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/width_20"
                    android:paddingEnd="@dimen/width_20"
                    android:textColor="@color/color_232323"
                    android:textSize="@dimen/textSize_90pt"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/edit_join_number_free_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/underbar_dcdcdc_ffffff_10px"
                    android:gravity="center_vertical"
                    android:hint="@string/hint_free_number"
                    android:inputType="number"
                    android:maxLength="9"
                    android:paddingStart="@dimen/width_20"
                    android:paddingEnd="@dimen/width_20"
                    android:textColor="@color/color_232323"
                    android:textColorHint="@color/color_bbbbbb"
                    android:textSize="@dimen/textSize_90pt"
                    android:textStyle="bold" />


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_40"
                android:text="@string/msg_free_prnumber_description"
                android:textColor="@color/color_b7b7b7"
                android:textSize="@dimen/textSize_38pt"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_20"
            android:text="@string/msg_make_prnumber_confirm_description3"
            android:textColor="@color/color_ff4646"
            android:textSize="@dimen/textSize_36pt"
            android:textStyle="bold" />


    </LinearLayout>

    <TextView
        android:id="@+id/text_join_number_complete"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_140"
        android:layout_gravity="bottom"
        android:layout_marginStart="@dimen/width_72"
        android:layout_marginTop="@dimen/height_140"
        android:layout_marginEnd="@dimen/width_72"
        android:layout_marginBottom="@dimen/height_100"
        android:background="@drawable/btn_blue"
        android:gravity="center"
        android:text="@string/word_complete"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_38pt" />

</FrameLayout>