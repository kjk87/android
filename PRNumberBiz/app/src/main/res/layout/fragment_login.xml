<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/width_72"
            android:paddingEnd="@dimen/width_72">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_228"
                android:text="@string/word_login"
                android:textColor="@color/color_232323"
                android:textSize="@dimen/textSize_90pt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_150"
                android:text="@string/word_id"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_40pt"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edit_login_id"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_80"
                android:layout_marginTop="@dimen/height_30"
                android:background="@drawable/underbar_dcdcdc_ffffff_4px"
                android:hint="@string/msg_input_id"
                android:textColor="@color/black"
                android:textColorHint="@color/color_bbbbbb"
                android:textSize="@dimen/textSize_48pt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_90"
                android:text="@string/word_password"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_36pt"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_30"
                android:gravity="bottom"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edit_login_pw"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_80"
                    android:layout_marginEnd="@dimen/width_40"
                    android:layout_weight="1"
                    android:background="@drawable/underbar_dcdcdc_ffffff_4px"
                    android:hint="@string/msg_input_password"
                    android:textColor="@color/black"
                    android:textColorHint="@color/color_bbbbbb"
                    android:textSize="@dimen/textSize_48pt" />


                <TextView
                    android:id="@+id/text_login"
                    android:layout_width="@dimen/width_240"
                    android:layout_height="@dimen/height_120"
                    android:background="@drawable/btn_login_blue_1"
                    android:gravity="center"
                    android:text="@string/word_login"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_36pt"
                    android:textStyle="bold" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_37"
                android:layout_marginBottom="@dimen/height_37"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_login_auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/btn_check"
                    android:drawablePadding="@dimen/width_15"
                    android:text="@string/word_auto_signIn"
                    android:textColor="@color/color_737373"
                    android:textSize="@dimen/textSize_40pt" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_login_find_id"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/width_40"
                    android:background="@drawable/underbar_b7b7b7_ffffff"
                    android:text="@string/msg_find_id"
                    android:textColor="@color/color_b7b7b7"
                    android:textSize="@dimen/textSize_36pt" />

                <TextView
                    android:id="@+id/text_login_find_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/underbar_b7b7b7_ffffff"
                    android:text="@string/msg_find_password"
                    android:textColor="@color/color_b7b7b7"
                    android:textSize="@dimen/textSize_36pt" />

            </LinearLayout>

            <TextView
                android:id="@+id/text_login_signUp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_160"
                android:layout_marginTop="@dimen/height_110"
                android:background="@drawable/border_color_579ffb_6px"
                android:gravity="center"
                android:text="@string/word_pr_number_sign_up"
                android:textColor="@color/color_579ffb"
                android:textSize="@dimen/textSize_40pt"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/layout_login_facebook"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_132"
                android:layout_marginTop="@dimen/height_45"
                android:background="@color/color_475993"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_login_facebook" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="@string/word_login_facebook"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_36pt" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/layout_login_google"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_132"
                android:layout_marginTop="@dimen/height_15"
                android:layout_marginBottom="@dimen/height_110"
                android:background="@color/color_df4a3f"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_login_google" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="@string/word_login_google"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_36pt" />

            </RelativeLayout>

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

</RelativeLayout>
