<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".apps.main.ui.BizMainFragment2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?android:actionBarSize">


            <ImageView
                android:id="@+id/image_biz_main2_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/width_40"
                android:src="@drawable/ic_top_menu" />

            <TextView
                android:id="@+id/text_biz_main2_page_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/color_232323"
                android:textSize="@dimen/textSize_52pt"
                android:textStyle="bold" />

        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_440"
                    android:layout_marginStart="@dimen/width_62"
                    android:layout_marginTop="@dimen/height_60"
                    android:layout_marginEnd="@dimen/width_62"
                    android:layout_marginBottom="@dimen/height_36"
                    android:orientation="horizontal">


                    <RelativeLayout
                        android:id="@+id/layout_biz_main2_plus"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/width_16"
                        android:layout_weight="1"
                        android:background="@drawable/bg_box_shadow_black">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text_biz_main2_plus_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="@dimen/textSize_105pt"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/height_10"
                                android:drawableEnd="@drawable/ic_main_arrow"
                                android:drawablePadding="@dimen/width_10"
                                android:gravity="center"
                                android:text="@string/word_plus_customer"
                                android:textColor="@color/white"
                                android:textSize="@dimen/textSize_36pt" />

                        </LinearLayout>


                    </RelativeLayout>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/layout_biz_main2_nfc"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_260"
                    android:background="@drawable/bg_box_shadow_white"
                    android:layout_marginStart="@dimen/width_62"
                    android:layout_marginEnd="@dimen/width_62"
                    android:layout_marginBottom="@dimen/height_16">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textSize_48pt"
                        android:textColor="@color/color_232323"
                        android:drawableStart="@drawable/ic_main_nfc"
                        android:gravity="center"
                        android:drawablePadding="@dimen/width_30"
                        android:layout_centerInParent="true"
                        android:text="@string/msg_pay_nfc"/>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/layout_biz_main2_seller"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/width_62"
                    android:layout_marginBottom="@dimen/height_16"
                    android:layout_marginEnd="@dimen/width_62"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/layout_biz_main2_goods_config"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/height_480"
                        android:layout_weight="1"
                        android:background="@drawable/bg_box_shadow_white">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/width_60"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_main_goods" />

                            <TextView
                                android:id="@+id/text_biz_main2_goods_config"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/height_60"
                                android:text="@string/word_goods_config"
                                android:textColor="@color/color_232323"
                                android:textSize="@dimen/textSize_58pt" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/word_goods_config_desc"
                                android:textColor="@color/color_b7b7b7"
                                android:textSize="@dimen/textSize_35pt" />


                        </LinearLayout>


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/layout_biz_main2_sale_history"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/height_480"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/width_16"
                        android:background="@drawable/bg_box_shadow_white">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/width_60"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_main_selling" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/height_60"
                                android:text="@string/word_sale_history"
                                android:textColor="@color/color_232323"
                                android:textSize="@dimen/textSize_58pt" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/msg_sale_count_desc"
                                android:textColor="@color/color_b7b7b7"
                                android:textSize="@dimen/textSize_35pt" />


                        </LinearLayout>


                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/width_62"
                    android:layout_marginBottom="@dimen/height_16"
                    android:layout_marginEnd="@dimen/width_62"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/layout_biz_main2_coupon"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/height_480"
                        android:layout_weight="1"
                        android:background="@drawable/bg_box_shadow_white">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/width_60"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_main_coupon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/height_60"
                                android:text="@string/word_coupon_config"
                                android:textColor="@color/color_232323"
                                android:textSize="@dimen/textSize_58pt" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/msg_coupon_config_desc"
                                android:textColor="@color/color_b7b7b7"
                                android:textSize="@dimen/textSize_35pt" />


                        </LinearLayout>


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/layout_biz_main2_push"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/height_480"
                        android:layout_marginStart="@dimen/width_16"
                        android:layout_weight="1"
                        android:background="@drawable/bg_box_shadow_white">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/width_60"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_main_push" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/height_60"
                                android:text="@string/word_push_marketing"
                                android:textColor="@color/color_232323"
                                android:textSize="@dimen/textSize_58pt" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/msg_push_marketing_desc"
                                android:textColor="@color/color_b7b7b7"
                                android:textSize="@dimen/textSize_35pt" />

                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/width_62"
                    android:layout_marginEnd="@dimen/width_62"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/layout_biz_main2_review"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/height_480"
                        android:layout_weight="1"
                        android:background="@drawable/bg_box_shadow_white">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/width_60"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_main_review" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/height_60"
                                android:text="@string/word_review_config"
                                android:textColor="@color/color_232323"
                                android:textSize="@dimen/textSize_58pt" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/msg_review_config_desc"
                                android:textColor="@color/color_b7b7b7"
                                android:textSize="@dimen/textSize_35pt" />


                        </LinearLayout>


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/layout_biz_main2_store_config"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/height_480"
                        android:layout_marginStart="@dimen/width_16"
                        android:layout_weight="1"
                        android:background="@drawable/bg_box_shadow_white">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/width_60"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_main_edit" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/height_60"
                                android:text="@string/word_store_config"
                                android:textColor="@color/color_232323"
                                android:textSize="@dimen/textSize_58pt" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/word_store_config_desc"
                                android:textColor="@color/color_b7b7b7"
                                android:textSize="@dimen/textSize_35pt" />

                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

                <include
                    android:id="@+id/layout_biz_main2_footer"
                    layout="@layout/item_biz_main_footer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_100" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</FrameLayout>