<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/width_72"
                android:layout_marginRight="@dimen/width_72"
                android:layout_marginTop="@dimen/height_56"
                android:text="@string/msg_event_option_description1"
                android:textColor="@color/color_737373"
                android:textSize="@dimen/textSize_34pt"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_2"
                android:layout_marginLeft="@dimen/width_72"
                android:layout_marginRight="@dimen/width_72"
                android:layout_marginTop="@dimen/height_20"
                android:background="@color/color_ebebeb"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_100"
                android:layout_marginTop="@dimen/height_50"
                android:background="@color/color_f3f3f3"
                android:paddingLeft="@dimen/width_72">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/word_event_option"
                    android:textColor="@color/color_ff4646"
                    android:textSize="@dimen/textSize_42pt"
                    android:textStyle="bold"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/width_72"
                android:paddingRight="@dimen/width_72">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/msg_event_option_description2"
                    android:textColor="@color/color_737373"
                    android:textSize="@dimen/textSize_34pt"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/msg_event_option_description3"
                    android:textColor="@color/color_bbbbbb"
                    android:textSize="@dimen/textSize_34pt"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_50"
                    android:text="@string/word_input_price"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize_36pt"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_132"
                    android:layout_marginTop="@dimen/height_20"
                    android:background="@drawable/border_color_a0a0a0_2px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/width_40"
                    android:paddingRight="@dimen/width_40">

                    <EditText
                        android:id="@+id/edit_post_option_price"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical"
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textSize_40pt"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/word_money_unit"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textSize_40pt"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_14"
                    android:text="@string/msg_event_option_description4"
                    android:textColor="@color/color_bbbbbb"
                    android:textSize="@dimen/textSize_34pt"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_60"
                    android:text="@string/word_setting_discount"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize_36pt"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_132"
                    android:layout_marginTop="@dimen/height_20"
                    android:background="@drawable/border_color_a0a0a0_2px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/width_40"
                    android:paddingRight="@dimen/width_40">

                    <EditText
                        android:id="@+id/edit_post_option_discountRate"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical"
                        android:inputType="number"
                        android:maxLength="2"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textSize_40pt"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="%"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textSize_40pt"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_14"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/msg_event_option_description5"
                        android:textColor="@color/color_bbbbbb"
                        android:textSize="@dimen/textSize_34pt"/>

                    <TextView
                        android:id="@+id/text_post_option_discountPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_ff0000"
                        android:textSize="@dimen/textSize_34pt"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/word_money_unit"
                        android:textColor="@color/color_ff0000"
                        android:textSize="@dimen/textSize_34pt"
                        android:textStyle="bold"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_60"
                    android:text="@string/word_point_payment"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize_36pt"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_132"
                    android:layout_marginTop="@dimen/height_20"
                    android:background="@drawable/border_color_a0a0a0_2px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/width_40"
                    android:paddingRight="@dimen/width_40">

                    <EditText
                        android:id="@+id/edit_post_option_point"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical"
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textSize_40pt"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/word_money_unit"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textSize_40pt"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_14"
                    android:text="@string/msg_event_option_description6"
                    android:textColor="@color/color_bbbbbb"
                    android:textSize="@dimen/textSize_34pt"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_60"
                    android:text="@string/word_setting_time_event"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize_36pt"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_20"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_post_option_startTime"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/height_92"
                        android:layout_weight="1"
                        android:background="@drawable/border_color_a0a0a0_2px"
                        android:drawableRight="@drawable/ic_dropbox_down"
                        android:gravity="center_vertical"
                        android:hint="@string/word_start_time"
                        android:paddingLeft="@dimen/width_40"
                        android:paddingRight="@dimen/width_40"
                        android:textColor="@color/black"
                        android:textColorHint="@color/color_bbbbbb"
                        android:textSize="@dimen/textSize_40pt"/>

                    <TextView
                        android:layout_width="@dimen/width_56"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="~"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textSize_40pt"/>

                    <TextView
                        android:id="@+id/text_post_option_endTime"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/height_92"
                        android:layout_weight="1"
                        android:background="@drawable/border_color_a0a0a0_2px"
                        android:drawableRight="@drawable/ic_dropbox_down"
                        android:gravity="center_vertical"
                        android:hint="@string/word_end_time"
                        android:paddingLeft="@dimen/width_40"
                        android:paddingRight="@dimen/width_40"
                        android:textColor="@color/black"
                        android:textColorHint="@color/color_bbbbbb"
                        android:textSize="@dimen/textSize_40pt"/>


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_14"
                    android:text="@string/msg_event_option_description7"
                    android:textColor="@color/color_bbbbbb"
                    android:textSize="@dimen/textSize_34pt"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_60"
                    android:text="@string/word_setting_day_of_the_week"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize_36pt"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_80"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_post_option_allday"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/height_92"
                        android:layout_marginRight="@dimen/width_40"
                        android:layout_weight="1"
                        android:background="@drawable/color_7f7f7f_ff4646"
                        android:gravity="center"
                        android:text="@string/word_all"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSize_34pt"/>

                    <TextView
                        android:id="@+id/text_post_option_weekday"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/height_92"
                        android:layout_marginRight="@dimen/width_40"
                        android:layout_weight="1"
                        android:background="@drawable/color_7f7f7f_ff4646"
                        android:gravity="center"
                        android:text="@string/word_weekday"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSize_34pt"/>

                    <TextView
                        android:id="@+id/text_post_option_weekend"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/height_92"
                        android:layout_weight="1"
                        android:background="@drawable/color_7f7f7f_ff4646"
                        android:gravity="center"
                        android:text="@string/word_weekend"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSize_34pt"/>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/layout_post_option_dayOfWeek"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_38"
                    android:layout_marginTop="@dimen/height_80"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/width_6"
                    android:paddingRight="@dimen/width_6"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/height_80"
                    android:layout_marginTop="@dimen/height_80"
                    android:text="@string/msg_event_option_description8"
                    android:textColor="@color/color_bbbbbb"
                    android:textSize="@dimen/textSize_34pt"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>
