<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".apps.sale.ui.SaleOrderDetailActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_3"
                android:background="@color/color_d8d8d8" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_17"
                android:background="@color/color_f0f0f0" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_80"
                android:paddingStart="@dimen/width_72"
                android:paddingEnd="@dimen/width_72">

                <TextView
                    android:id="@+id/text_sale_delivery_detail_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_579ffb"
                    android:textSize="@dimen/textSize_58pt"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_sale_delivery_detail_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_b7b7b7"
                    android:textSize="@dimen/textSize_40pt" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/layout_sale_delivery_detail_goods_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_30"
                android:orientation="vertical" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_2"
                android:layout_marginStart="@dimen/width_72"
                android:layout_marginEnd="@dimen/width_72"
                android:background="@color/color_f0f0f0" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/width_72"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/width_30"
                    android:text="@string/word_total_pay_price"
                    android:textColor="@color/color_ff4646"
                    android:textSize="@dimen/textSize_42pt" />

                <TextView
                    android:id="@+id/text_sale_order_detail_total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_ff4646"
                    android:textSize="@dimen/textSize_60pt"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_80"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_3"
                    android:background="@color/color_d8d8d8" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_17"
                    android:background="@color/color_f0f0f0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/width_72"
                    android:layout_marginTop="@dimen/height_80"
                    android:text="@string/word_delivery_address"
                    android:textColor="@color/color_232323"
                    android:textSize="@dimen/textSize_58pt"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_sale_delivery_detail_delivery_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/width_72"
                    android:layout_marginTop="@dimen/height_20"
                    android:textColor="@color/color_737373"
                    android:textSize="@dimen/textSize_44pt" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_sale_delivery_detail_memo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_80"
                android:orientation="vertical"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_3"
                    android:background="@color/color_d8d8d8" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_17"
                    android:background="@color/color_f0f0f0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/width_72"
                    android:layout_marginTop="@dimen/height_80"
                    android:text="@string/word_requests"
                    android:textColor="@color/color_232323"
                    android:textSize="@dimen/textSize_58pt"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_sale_delivery_detail_memo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/width_72"
                    android:layout_marginTop="@dimen/height_20"
                    android:textColor="@color/color_737373"
                    android:textSize="@dimen/textSize_44pt" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_80"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_3"
                    android:background="@color/color_d8d8d8" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_17"
                    android:background="@color/color_f0f0f0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/width_72"
                    android:layout_marginTop="@dimen/height_80"
                    android:text="@string/word_contact"
                    android:textColor="@color/color_232323"
                    android:textSize="@dimen/textSize_58pt"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_sale_delivery_detail_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/width_72"
                    android:layout_marginTop="@dimen/height_20"
                    android:textColor="@color/color_737373"
                    android:textSize="@dimen/textSize_44pt" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_3"
                android:layout_marginTop="@dimen/height_80" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_100"
                android:background="@color/color_f0f0f0" />


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>