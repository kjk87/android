<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".apps.signup.ui.JoinSelectAccountFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingEnd="@dimen/width_72"
        android:paddingStart="@dimen/width_72">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_150"
            android:src="@drawable/ic_login_prnumber"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_110"
            android:text="@string/msg_join_description1"
            android:textColor="@color/color_232323"
            android:textSize="@dimen/textSize_58pt"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_20"
            android:text="@string/msg_join_description2"
            android:textColor="@color/color_b7b7b7"
            android:textSize="@dimen/textSize_40pt"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/text_join_select_pplus"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_140"
            android:layout_marginTop="@dimen/height_70"
            android:background="@drawable/btn_blue"
            android:gravity="center"
            android:text="@string/msg_prnumber_sign_up"
            android:textColor="@color/white"
            android:textSize="@dimen/height_38"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/height_20"
            android:text="@string/msg_join_description3"
            android:textColor="@color/color_579ffb"
            android:textSize="@dimen/textSize_30pt"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_240"
            android:text="@string/word_sns_signUp"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize_36pt"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_30"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_join_select_facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/width_30"
                android:src="@drawable/btn_login_facebook"/>

            <ImageView
                android:id="@+id/image_join_select_google"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_login_google"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>