<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/height_28"
        android:paddingTop="@dimen/height_28">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/width_40"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_push_list_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_46pt"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text_push_list_contents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_12"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_36pt"/>


        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/height_28"
        android:layout_marginBottom="@dimen/height_28">

        <TextView
            android:id="@+id/text_push_list_result"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize_46pt"/>

        <TextView
            android:id="@+id/text_push_list_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_8700ff"
            android:textSize="@dimen/textSize_32pt"
            android:text="@string/word_send_info"
            android:background="@drawable/underbar_8700ff_ffffff"/>



    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_2"
        android:layout_marginBottom="@dimen/height_54"
        android:background="@color/color_ebebeb"/>

</LinearLayout>