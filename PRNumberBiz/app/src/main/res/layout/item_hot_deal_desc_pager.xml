<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_hot_deal_desc_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_232323"
            android:textSize="@dimen/textSize_60pt"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/width_72"
            android:layout_marginEnd="@dimen/width_72"
            android:layout_marginTop="@dimen/height_40"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_hot_deal_desc_image"
                android:layout_width="@dimen/width_480"
                android:layout_height="@dimen/height_440"
                android:src="@drawable/img_hotdeal_guide_1" />

            <TextView
                android:id="@+id/text_hot_deal_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/color_b7b7b7"
                android:textSize="@dimen/textSize_36pt"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
