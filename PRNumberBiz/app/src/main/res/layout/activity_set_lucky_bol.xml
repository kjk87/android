<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/height_200"
            android:gravity="center"
            android:text="@string/msg_set_lucky_bol_description1"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize_40pt"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_132"
            android:layout_marginLeft="@dimen/width_72"
            android:layout_marginRight="@dimen/width_72"
            android:layout_marginTop="@dimen/height_236"
            android:background="@drawable/border_color_a0a0a0_2px"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edit_set_lucky_bol_point"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:hint="@string/msg_input_post_lucky_bol"
                android:inputType="number"
                android:paddingLeft="@dimen/width_40"
                android:paddingRight="@dimen/width_40"
                android:textColor="@color/black"
                android:textColorHint="@color/color_bbbbbb"
                android:textSize="@dimen/textSize_40pt"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/width_40"
                android:text="@string/word_bol_en"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_40pt"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/width_72"
            android:layout_marginRight="@dimen/width_72"
            android:layout_marginTop="@dimen/height_34"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="* "
                android:textColor="@color/color_bbbbbb"
                android:textSize="@dimen/textSize_34pt"/>

            <TextView
                android:id="@+id/text_set_lucky_bol_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/msg_set_lucky_bol_description2"
                android:textColor="@color/color_bbbbbb"
                android:textSize="@dimen/textSize_34pt"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/text_set_lucky_bol_complete"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_136"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/height_110"
        android:layout_marginLeft="@dimen/width_72"
        android:layout_marginRight="@dimen/width_72"
        android:background="@color/black"
        android:gravity="center"
        android:text="@string/word_complete"
        android:textColor="@color/color_ffffff_a3a3a3"
        android:textSize="@dimen/textSize_40pt"/>


</RelativeLayout>
