<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".apps.pages.ui.SecretModeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/height_100"
        android:orientation="vertical"
        android:paddingEnd="@dimen/width_72"
        android:paddingStart="@dimen/width_72">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_secret_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawablePadding="@dimen/width_20"
                android:drawableStart="@drawable/ic_open"
                android:gravity="center"
                android:text="@string/word_secret_mode"
                android:textColor="@color/color_232323"
                android:textSize="@dimen/textSize_56pt"
                android:textStyle="bold"/>


            <com.pplus.prnumberbiz.apps.common.ui.custom.SafeSwitchCompat
                android:id="@+id/switch_secret_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:thumb="@drawable/btn_onoff_circle"
                app:switchMinWidth="@dimen/width_150"
                app:track="@drawable/switch_setting"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_2"
            android:layout_marginTop="@dimen/height_60"
            android:background="@color/color_eaeaea"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_100"
            android:text="@string/msg_secret_mode_description"
            android:textColor="@color/color_232323"
            android:textSize="@dimen/textSize_58pt"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_60"
            android:text="@string/msg_page_secret_mode_description"
            android:textColor="@color/color_737373"
            android:textSize="@dimen/textSize_36pt"/>

    </LinearLayout>


</RelativeLayout>