<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".apps.signup.ui.SelectPageTypeActivity">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/pager_select_page_type"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/image_select_page_type_prev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_login_arrow_left"
        android:layout_marginStart="@dimen/width_45"/>

    <ImageView
        android:id="@+id/image_select_page_type_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/width_45"
        android:src="@drawable/ic_login_arrow_right" />


    <TextView
        android:id="@+id/text_select_page_type_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_160"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/width_72"
        android:layout_marginEnd="@dimen/width_72"
        android:layout_marginBottom="@dimen/height_100"
        android:background="@drawable/btn_blue"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_40pt"
        android:textStyle="bold" />


</RelativeLayout>