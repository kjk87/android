<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".apps.main.ui.SettingFragment">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp"
            app:expanded="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_scrollFlags="scroll|enterAlways">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_168"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/width_72"
                        android:text="@string/word_setting"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textSize_52pt"
                        android:textStyle="bold" />

                </RelativeLayout>
            </LinearLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/height_100">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_100"
                    android:background="@color/color_f0f0f0">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/width_72"
                        android:text="@string/word_account"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textSize_36pt"
                        android:textStyle="bold" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_setting_account_config"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_170">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/width_72"
                        android:text="@string/word_account_config"
                        android:textColor="@color/color_737373"
                        android:textSize="@dimen/textSize_40pt" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/width_72"
                        android:src="@drawable/btn_setting_arrow" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_2"
                        android:layout_alignParentBottom="true"
                        android:background="@color/color_f0f0f0" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_100"
                    android:background="@color/color_f0f0f0">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/width_72"
                        android:text="@string/word_config_info"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textSize_36pt"
                        android:textStyle="bold" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_170"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/width_72"
                        android:text="@string/word_service_introduce"
                        android:textColor="@color/color_737373"
                        android:textSize="@dimen/textSize_40pt" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/width_72"
                        android:src="@drawable/btn_setting_arrow" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_2"
                        android:layout_alignParentBottom="true"
                        android:background="@color/color_f0f0f0" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_setting_terms"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_170">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/width_72"
                        android:text="@string/word_terms"
                        android:textColor="@color/color_737373"
                        android:textSize="@dimen/textSize_40pt" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/width_72"
                        android:src="@drawable/btn_setting_arrow" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_2"
                        android:layout_alignParentBottom="true"
                        android:background="@color/color_f0f0f0" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/layout_setting_version"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_170">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/width_72"
                        android:text="@string/word_version_info"
                        android:textColor="@color/color_737373"
                        android:textSize="@dimen/textSize_40pt" />

                    <ImageView
                        android:id="@+id/image_setting_version_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/width_72"
                        android:src="@drawable/btn_setting_arrow" />

                    <TextView
                        android:id="@+id/text_setting_current_version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/width_40"
                        android:layout_toLeftOf="@id/image_setting_version_arrow"
                        android:textColor="@color/color_579ffb"
                        android:textSize="@dimen/textSize_40pt" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_2"
                        android:layout_alignParentBottom="true"
                        android:background="@color/color_f0f0f0" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_setting_open_license"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_170">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/width_72"
                        android:text="@string/word_open_source_license"
                        android:textColor="@color/color_737373"
                        android:textSize="@dimen/textSize_40pt" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/width_72"
                        android:src="@drawable/btn_setting_arrow" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_2"
                        android:layout_alignParentBottom="true"
                        android:background="@color/color_f0f0f0" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_100"
                    android:background="@color/color_f0f0f0">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/width_72"
                        android:text="@string/word_cs_center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textSize_36pt"
                        android:textStyle="bold" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_setting_inquiry"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_170">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/width_72"
                        android:text="@string/word_inquiry_suggest"
                        android:textColor="@color/color_737373"
                        android:textSize="@dimen/textSize_40pt" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/width_72"
                        android:src="@drawable/btn_setting_arrow" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_2"
                        android:layout_alignParentBottom="true"
                        android:background="@color/color_f0f0f0" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_setting_notice"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_170">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/width_72"
                        android:text="@string/word_notice"
                        android:textColor="@color/color_737373"
                        android:textSize="@dimen/textSize_40pt" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/width_72"
                        android:src="@drawable/btn_setting_arrow" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_2"
                        android:layout_alignParentBottom="true"
                        android:background="@color/color_f0f0f0" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_setting_faq"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_170">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/width_72"
                        android:text="@string/word_faq_en"
                        android:textColor="@color/color_737373"
                        android:textSize="@dimen/textSize_40pt" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/width_72"
                        android:src="@drawable/btn_setting_arrow" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_2"
                        android:layout_alignParentBottom="true"
                        android:background="@color/color_f0f0f0" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_100"
                    android:background="@color/color_f0f0f0">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/width_72"
                        android:text="@string/word_notice_alert"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textSize_36pt"
                        android:textStyle="bold" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_setting_alarm_setting"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_170"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/width_72"
                        android:text="@string/word_alarm_set"
                        android:textColor="@color/color_737373"
                        android:textSize="@dimen/textSize_40pt" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/width_72"
                        android:src="@drawable/btn_setting_arrow" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_2"
                        android:layout_alignParentBottom="true"
                        android:background="@color/color_f0f0f0" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_setting_alarm_container"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_170">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/width_72"
                        android:text="@string/word_alarm_container"
                        android:textColor="@color/color_737373"
                        android:textSize="@dimen/textSize_40pt" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/width_72"
                        android:src="@drawable/btn_setting_arrow" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_2"
                        android:layout_alignParentBottom="true"
                        android:background="@color/color_f0f0f0" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_setting_logout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_170">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/word_log_out"
                        android:textColor="@color/color_579ffb"
                        android:textSize="@dimen/textSize_42pt" />

                </RelativeLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</FrameLayout>