<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_color_d8d8d8_2px"
        android:orientation="vertical"
        android:padding="@dimen/width_2">

        <ImageView
            android:id="@+id/image_mobile_gift"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_460"
            android:scaleType="centerCrop"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_2"
            android:background="@color/color_d8d8d8"/>

        <TextView
            android:id="@+id/text_mobile_gift_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/width_30"
            android:layout_marginRight="@dimen/width_30"
            android:layout_marginTop="@dimen/height_24"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize_38pt"/>

        <TextView
            android:id="@+id/text_mobile_gift_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/height_34"
            android:layout_marginLeft="@dimen/width_30"
            android:layout_marginRight="@dimen/width_30"
            android:layout_marginTop="@dimen/height_5"
            android:textColor="@color/color_ff4646"
            android:textSize="@dimen/textSize_43pt"/>

    </LinearLayout>

</RelativeLayout>