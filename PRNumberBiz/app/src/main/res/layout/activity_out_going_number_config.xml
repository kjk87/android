<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pplus.prnumberbiz.apps.outgoingnumber.OutGoingNumberConfigActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/width_72"
            android:layout_marginRight="@dimen/width_72"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_56"
                android:text="@string/msg_outgoing_number_config_description1"
                android:textColor="@color/color_737373"
                android:textSize="@dimen/textSize_34pt"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_2"
                android:layout_marginTop="@dimen/height_20"
                android:background="@color/color_ebebeb"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_60"
                android:text="@string/word_outgoing_number_reg"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_36pt"
                android:textStyle="bold"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_20"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edit_outgoing_number"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_132"
                    android:layout_gravity="top"
                    android:layout_marginRight="@dimen/width_40"
                    android:layout_weight="1"
                    android:background="@drawable/border_color_a0a0a0_2px"
                    android:gravity="center_vertical"
                    android:inputType="phone"
                    android:paddingLeft="@dimen/width_40"
                    android:paddingRight="@dimen/width_40"
                    android:textColor="@color/black"
                    android:textColorHint="@color/color_bbbbbb"
                    android:maxLength="11"
                    android:textSize="@dimen/textSize_46pt"/>

                <TextView
                    android:id="@+id/text_outgoing_number_confirm"
                    android:layout_width="@dimen/width_264"
                    android:layout_height="@dimen/height_132"
                    android:layout_gravity="top"
                    android:background="@color/black"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="@string/word_confirm"
                    android:textColor="@color/color_ffffff_a3a3a3"
                    android:textSize="@dimen/textSize_40pt"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_14"
                android:text="@string/msg_outgoing_number_config_description2"
                android:textColor="@color/color_bbbbbb"
                android:textSize="@dimen/textSize_34pt"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/layout_outgoing_number_verification_me"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_100"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/word_verification_method_me"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textSize_46pt"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/height_30"
                        android:background="@drawable/border_color_adadad_f9f9f9_2px"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_outgoing_number_mobile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/height_90"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textSize_56pt"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/height_30"
                            android:gravity="center"
                            android:text="@string/msg_outgoing_number_config_description4"
                            android:textColor="@color/color_737373"
                            android:textSize="@dimen/textSize_34pt"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/text_outgoing_number_verification_me"
                            android:layout_width="@dimen/width_800"
                            android:layout_height="@dimen/height_100"
                            android:layout_marginBottom="@dimen/height_60"
                            android:layout_marginTop="@dimen/height_60"
                            android:background="@drawable/border_color_8700ff_ffffff_4px"
                            android:gravity="center"
                            android:text="@string/word_verification_me"
                            android:textColor="@color/color_8700ff"
                            android:textSize="@dimen/textSize_36pt"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_outgoing_number_verification_wireline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_100"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/word_verification_method_wireline"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textSize_46pt"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/height_30"
                        android:background="@drawable/border_color_adadad_f9f9f9_2px"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/height_90"
                            android:gravity="center"
                            android:text="@string/msg_outgoing_number_config_description5"
                            android:textColor="@color/color_737373"
                            android:textSize="@dimen/textSize_34pt"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/text_outgoing_number_wireline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/height_30"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textSize_56pt"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/text_outgoing_number_wirline_verification"
                            android:layout_width="@dimen/width_800"
                            android:layout_height="@dimen/height_100"
                            android:layout_marginBottom="@dimen/height_60"
                            android:layout_marginTop="@dimen/height_60"
                            android:background="@drawable/border_color_8700ff_ffffff_4px"
                            android:gravity="center"
                            android:text="@string/msg_get_verification_call"
                            android:textColor="@color/color_8700ff"
                            android:textSize="@dimen/textSize_36pt"
                            android:textStyle="bold"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/height_130"
                            android:gravity="center"
                            android:text="@string/msg_outgoing_number_config_description6"
                            android:textColor="@color/color_737373"
                            android:textSize="@dimen/textSize_34pt"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/height_30"
                            android:text="@string/word_verification_number"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textSize_56pt"
                            android:textStyle="bold"/>

                        <EditText
                            android:id="@+id/edit_outgoing_number_wirline_verification_number"
                            android:layout_width="@dimen/width_800"
                            android:layout_height="@dimen/height_100"
                            android:layout_marginTop="@dimen/height_60"
                            android:background="@drawable/border_color_8700ff_ffffff_4px"
                            android:gravity="center"
                            android:inputType="number"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textSize_36pt"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/height_130"
                            android:gravity="center"
                            android:text="@string/msg_outgoing_number_config_description7"
                            android:textColor="@color/color_737373"
                            android:textSize="@dimen/textSize_34pt"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/text_outgoing_number_wirline_verification_confirm"
                            android:layout_width="@dimen/width_800"
                            android:layout_height="@dimen/height_100"
                            android:background="@color/color_8700ff"
                            android:layout_marginTop="@dimen/height_60"
                            android:layout_marginBottom="@dimen/height_60"
                            android:textSize="@dimen/textSize_36pt"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:text="@string/word_confirm"
                            android:gravity="center"/>

                    </LinearLayout>

                </LinearLayout>


            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_100"
                android:text="@string/word_outgoing_number_list"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_46pt"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/msg_outgoing_number_config_description3"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_28pt"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_92"
                android:layout_marginTop="@dimen/height_30"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/width_134"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/word_title_no"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize_40pt"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/word_reg_number"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize_40pt"
                    android:textStyle="bold"/>


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/word_reg_date"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize_40pt"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="@dimen/width_134"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/word_delete"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize_40pt"
                    android:textStyle="bold"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_2"
                android:background="@color/color_d8d8d8"/>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_outgoing_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"/>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>
