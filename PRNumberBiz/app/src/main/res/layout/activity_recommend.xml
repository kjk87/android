<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pplus.prnumberbiz.apps.customer.ui.RecommendActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_e7e7e7"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_315"
                android:background="@color/color_363636">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/msg_recommend_description1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSize_42pt"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/text_recommend_cash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/height_16"
                        android:text="@string/format_msg_recommend_description2"
                        android:textColor="@color/color_ff4646"
                        android:textSize="@dimen/textSize_60pt"
                        android:textStyle="bold"/>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_280"
                android:layout_marginLeft="@dimen/width_36"
                android:layout_marginRight="@dimen/width_36"
                android:layout_marginTop="@dimen/height_30"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/word_my_recommend_code"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textSize_38pt"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/text_recommend_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/height_36"
                        android:text="SSSS"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textSize_78pt"
                        android:textStyle="bold"/>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_280"
                android:layout_marginLeft="@dimen/width_36"
                android:layout_marginRight="@dimen/width_36"
                android:layout_marginTop="@dimen/height_30"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/word_recommend_method"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textSize_38pt"
                        android:textStyle="bold"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/width_60"
                        android:layout_marginRight="@dimen/width_60"
                        android:layout_marginTop="@dimen/height_50"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/word_step1_dot"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textSize_36pt"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/msg_recommend_description3"
                            android:textColor="@color/color_878787"
                            android:textSize="@dimen/textSize_36pt"
                            android:textStyle="bold"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/width_60"
                        android:layout_marginRight="@dimen/width_60"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/word_step2_dot"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textSize_36pt"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/msg_recommend_description4"
                            android:textColor="@color/color_878787"
                            android:textSize="@dimen/textSize_36pt"
                            android:textStyle="bold"/>


                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_recommend_sms"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_126"
                android:layout_marginLeft="@dimen/width_72"
                android:layout_marginRight="@dimen/width_72"
                android:layout_marginTop="@dimen/height_50"
                android:background="@color/color_00d469">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@drawable/ic_recommend_sms"
                    android:drawablePadding="@dimen/width_14"
                    android:gravity="center"
                    android:text="@string/word_recommend_sms"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_36pt"
                    android:textStyle="bold"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_recommend_kakao"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_126"
                android:layout_marginLeft="@dimen/width_72"
                android:layout_marginRight="@dimen/width_72"
                android:layout_marginTop="@dimen/height_30"
                android:background="@color/color_fce000">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@drawable/ic_recommend_kakao"
                    android:drawablePadding="@dimen/width_14"
                    android:gravity="center"
                    android:text="@string/word_recommend_kakao"
                    android:textColor="@color/color_330705"
                    android:textSize="@dimen/textSize_36pt"
                    android:textStyle="bold"/>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/width_72"
                android:layout_marginRight="@dimen/width_72"
                android:layout_marginTop="@dimen/height_60"
                android:text="@string/msg_recommend_description5"
                android:textColor="@color/color_848484"
                android:textSize="@dimen/textSize_32pt"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/height_100"
                android:layout_marginLeft="@dimen/width_72"
                android:layout_marginRight="@dimen/width_72"
                android:text="@string/msg_recommend_description6"
                android:textColor="@color/color_848484"
                android:textSize="@dimen/textSize_32pt"/>


        </LinearLayout>

    </ScrollView>

</RelativeLayout>
