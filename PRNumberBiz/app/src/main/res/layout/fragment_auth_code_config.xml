<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pplus.prnumberbiz.apps.verification.AuthCodeConfigFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_150"
            android:text="@string/msg_verification_number_description1"
            android:textColor="@color/color_232323"
            android:textSize="@dimen/textSize_74pt"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_number_info" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/msg_verification_number_description2"
            android:textColor="@color/color_232323"
            android:textSize="@dimen/textSize_42pt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_54"
            android:gravity="center"
            android:text="@string/msg_verification_number_description3"
            android:textColor="@color/color_737373"
            android:textSize="@dimen/textSize_38pt" />

        <TextView
            android:id="@+id/text_change_auth_code"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_160"
            android:layout_marginLeft="@dimen/width_54"
            android:layout_marginTop="@dimen/height_150"
            android:layout_marginRight="@dimen/width_54"
            android:background="@drawable/btn_blue"
            android:gravity="center"
            android:text="@string/msg_change_verification_number"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_40pt" />

        <TextView
            android:id="@+id/text_find_auth_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/height_60"
            android:background="@drawable/underbar_579ffb_ffffff"
            android:text="@string/msg_find_verification_number"
            android:textColor="@color/color_579ffb"
            android:textSize="@dimen/textSize_36pt" />
    </LinearLayout>


</RelativeLayout>
