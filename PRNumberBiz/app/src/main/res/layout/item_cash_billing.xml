<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_160"
                android:orientation="vertical">

    <TextView
        android:id="@+id/text_cash_billing_cash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:drawableLeft="@drawable/btn_write_radio"
        android:drawablePadding="@dimen/width_30"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="@dimen/textSize_46pt"/>

    <TextView
        android:id="@+id/text_cash_billing_krw"
        android:layout_width="@dimen/width_190"
        android:layout_height="@dimen/height_66"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/border_color_579ffb_4px"
        android:gravity="center_vertical|right"
        android:paddingRight="@dimen/width_20"
        android:textColor="@color/color_579ffb"
        android:textSize="@dimen/textSize_25pt"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_2"
        android:layout_alignParentBottom="true"
        android:background="@color/color_ebebeb"/>


</RelativeLayout>