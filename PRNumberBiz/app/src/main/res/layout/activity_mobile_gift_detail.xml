<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/width_72"
                android:layout_marginRight="@dimen/width_72"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_mobile_gift_detail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_936"
                    android:layout_marginTop="@dimen/height_60"
                    android:background="@drawable/border_color_d8d8d8_2px"
                    android:scaleType="centerCrop"
                    android:padding="@dimen/width_2"/>

                <TextView
                    android:id="@+id/text_mobile_gift_detail_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_36"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize_58pt"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/text_mobile_gift_detail_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_16"
                    android:textColor="@color/color_ff4646"
                    android:textSize="@dimen/textSize_50pt"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_2"
                    android:layout_marginBottom="@dimen/height_36"
                    android:layout_marginTop="@dimen/height_36"
                    android:background="@color/color_d8d8d8"/>

                <TextView
                    android:layout_width="@dimen/width_150"
                    android:layout_height="wrap_content"
                    android:text="@string/word_count"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize_42pt"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_92"
                    android:background="@drawable/border_color_5b5b5b_1px"
                    android:layout_marginTop="@dimen/height_16"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_mobile_gift_detail_minus"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:scaleType="center"
                        android:src="@drawable/btn_gift_minus"/>

                    <TextView
                        android:id="@+id/texT_mobile_gift_detail_count"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textSize_46pt"/>

                    <ImageView
                        android:id="@+id/image_mobile_gift_detail_plus"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:scaleType="center"
                        android:src="@drawable/btn_gift_plus"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_16"
                    android:text="@string/msg_mobile_gift_count_description"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize_32pt"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_16"
                    android:text="@string/word_use_area"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize_42pt"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/text_mobile_gift_use_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize_42pt"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_100"
                android:layout_marginTop="@dimen/height_100"
                android:background="@color/color_f3f3f3"
                android:paddingLeft="@dimen/width_72"
                android:paddingRight="@dimen/width_72">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/msg_note_please"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize_42pt"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/text_mobile_gift_detail_use_guide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="@string/msg_mobile_gift_use_method"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize_36pt"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/height_180"
                android:layout_marginLeft="@dimen/width_72"
                android:layout_marginRight="@dimen/width_72"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layout_mobile_gift_detail_use_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/height_36"
                        android:text="@string/word_use_note"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textSize_36pt"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/text_mobile_gift_detail_use_note"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_737373"
                        android:textSize="@dimen/textSize_36pt"/>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/layout_mobile_gift_detail_use_limit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/height_60"
                        android:text="@string/word_use_limit"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textSize_36pt"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/text_mobile_gift_detail_use_limit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_737373"
                        android:textSize="@dimen/textSize_36pt"/>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


    <TextView
        android:id="@+id/text_mobile_gift_detail_purchase"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_160"
        android:layout_alignParentBottom="true"
        android:background="@color/color_8700ff"
        android:gravity="center"
        android:text="@string/msg_gift"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_40pt"
        android:textStyle="bold"/>

</RelativeLayout>
