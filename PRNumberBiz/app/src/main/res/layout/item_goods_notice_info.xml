<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_goods_notice_info_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/width_40"
        android:layout_marginTop="@dimen/height_24"
        android:textColor="@color/color_579ffb"
        android:textSize="@dimen/textSize_36pt"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edit_goods_notice_info_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:maxHeight="@dimen/height_200"
        android:minHeight="@dimen/height_140"
        android:paddingStart="@dimen/width_40"
        android:paddingEnd="@dimen/width_40"
        android:textColor="@color/color_232323"
        android:textSize="@dimen/textSize_48pt" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_2"
        android:background="@color/color_f0f0f0" />

</LinearLayout>