<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scroll_add_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/width_72"
            android:layout_marginRight="@dimen/width_72"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/check_add_info_totalAgree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/width_26"
                android:layout_marginTop="@dimen/height_100"
                android:button="@drawable/ic_check"
                android:gravity="left|center_vertical"
                android:paddingLeft="@dimen/width_15"
                android:text="@string/word_total_agree"
                android:textColor="@color/color_585858"
                android:textSize="@dimen/textSize_38pt"
                android:textStyle="bold"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_3"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/width_26"
                android:layout_marginRight="@dimen/width_26"
                android:layout_marginTop="@dimen/height_44"
                android:background="@color/color_e5e5e5"/>

            <LinearLayout
                android:id="@+id/layout_add_info_terms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/width_26"
                android:layout_marginRight="@dimen/width_26"
                android:layout_marginTop="@dimen/height_44"
                android:orientation="vertical"/>
        </LinearLayout>

    </ScrollView>


    <TextView
        android:id="@+id/text_add_info_complete"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_136"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/height_110"
        android:layout_marginLeft="@dimen/width_72"
        android:layout_marginRight="@dimen/width_72"
        android:layout_marginTop="@dimen/height_100"
        android:background="@color/black"
        android:gravity="center"
        android:text="@string/word_next"
        android:textColor="@color/color_ffffff_a3a3a3"
        android:textSize="@dimen/textSize_40pt"/>


</RelativeLayout>
