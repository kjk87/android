<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fitsSystemWindows="true"
    tools:context=".apps.main.ui.BackgroundImageDetailActivity">


    <com.pplus.prnumberbiz.apps.common.ui.common.ZoomImageView
        android:id="@+id/image_background_image_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"/>


    <ImageView
        android:id="@+id/image_background_image_close"
        style="?metaButtonBarButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_tittle_x" />


</RelativeLayout>