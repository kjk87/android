<?xml version="1.0" encoding="utf-8"?>
<com.pplus.prnumberbiz.apps.common.ui.custom.swipeLayout.SwipeRevealLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_214"
    app:dragEdge="right"
    app:mode="same_level">

    <LinearLayout
        android:layout_width="@dimen/width_160"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_note_container_delete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_ff4646"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/word_delete"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_30pt"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_note_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/width_72"
            android:paddingRight="@dimen/width_72">

            <RelativeLayout
                android:layout_width="@dimen/width_160"
                android:layout_height="@dimen/width_160">

                <com.pplus.prnumberbiz.apps.common.ui.custom.MaskableFrameLayout
                    android:layout_width="@dimen/width_160"
                    android:layout_height="@dimen/width_160"
                    android:layout_gravity="center_vertical"
                    app:mask="@drawable/img_profile_mask"
                    app:porterduffxfermode="DST_IN">

                    <ImageView
                        android:id="@+id/image_note_container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_gift_profile_default"/>

                </com.pplus.prnumberbiz.apps.common.ui.custom.MaskableFrameLayout>

                <ImageView
                    android:id="@+id/image_message_container_read"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_message_new"/>

            </RelativeLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/width_40"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingRight="@dimen/width_72">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_note_container_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textSize_46pt"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/text_note_container_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textColor="@color/color_b7b7b7"
                        android:textSize="@dimen/textSize_36pt"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_12"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_note_container_reply"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_message_reply"
                        android:layout_marginRight="@dimen/width_10"/>

                    <TextView
                        android:id="@+id/text_note_container_contents"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_737373"
                        android:textSize="@dimen/textSize_38pt"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_2"
            android:background="@color/color_e4e4e4"/>

    </LinearLayout>


</com.pplus.prnumberbiz.apps.common.ui.custom.swipeLayout.SwipeRevealLayout>