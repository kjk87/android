<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pplus.prnumberbiz.apps.push.ui.PushResultDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_push_result_detail_totalCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/height_128"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_70pt"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text_push_result_detail_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/height_30"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_46pt"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_60"
                android:layout_marginTop="@dimen/height_128"
                android:background="@color/color_f3f3f3">

                <TextView
                    android:id="@+id/text_push_result_detail_contents_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/width_72"
                    android:text="@string/word_send_coupon"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize_36pt"
                    android:textStyle="bold"/>

            </RelativeLayout>


            <TextView
                android:id="@+id/text_push_result_detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/height_50"
                android:layout_marginLeft="@dimen/width_72"
                android:layout_marginTop="@dimen/height_50"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_40pt"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_60"
                android:background="@color/color_f3f3f3"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/width_72"
                    android:text="@string/word_used_cash"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize_36pt"
                    android:textStyle="bold"/>

            </RelativeLayout>


            <TextView
                android:id="@+id/text_push_result_detail_use_cash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/height_50"
                android:layout_marginLeft="@dimen/width_72"
                android:layout_marginTop="@dimen/height_50"
                android:textColor="@color/color_ff4646"
                android:textSize="@dimen/textSize_40pt"
                android:visibility="gone"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_60"
                android:background="@color/color_f3f3f3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/width_72"
                    android:text="@string/word_send_date"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize_36pt"
                    android:textStyle="bold"/>

            </RelativeLayout>


            <TextView
                android:id="@+id/text_push_result_detail_send_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/height_50"
                android:layout_marginLeft="@dimen/width_72"
                android:layout_marginTop="@dimen/height_50"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_40pt"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_60"
                android:background="@color/color_f3f3f3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/width_72"
                    android:text="@string/word_receiver"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize_36pt"
                    android:textStyle="bold"/>

            </RelativeLayout>


            <TextView
                android:id="@+id/text_push_result_detail_receiver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/height_50"
                android:layout_marginLeft="@dimen/width_72"
                android:layout_marginTop="@dimen/height_50"
                android:background="@drawable/underbar_000000_ffffff"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_40pt"/>

            <TextView
                android:id="@+id/text_push_result_detail_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/width_72"
                android:layout_marginTop="@dimen/height_24"
                android:background="@drawable/underbar_ff4646_ffffff"
                android:text="@string/word_cancel_reservation"
                android:textColor="@color/color_ff4646"
                android:textSize="@dimen/textSize_40pt"/>

            <TextView
                android:id="@+id/text_push_result_detail_send"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_136"
                android:layout_marginBottom="@dimen/height_110"
                android:layout_marginLeft="@dimen/width_72"
                android:layout_marginRight="@dimen/width_72"
                android:layout_marginTop="@dimen/height_100"
                android:background="@color/black"
                android:gravity="center"
                android:text="@string/word_send_now"
                android:textColor="@color/color_ffffff_a3a3a3"
                android:textSize="@dimen/textSize_40pt"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
