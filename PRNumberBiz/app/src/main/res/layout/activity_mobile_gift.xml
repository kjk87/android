<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_160">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_2"
                android:layout_alignParentBottom="true"
                android:background="@color/color_d8d8d8"/>

            <com.pplus.prnumberbiz.apps.common.ui.custom.SlidingTabLayout
                android:id="@+id/tabLayout_mobile_gift_category"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/width_72"/>
        </RelativeLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/page_mobile_gift"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

</RelativeLayout>
