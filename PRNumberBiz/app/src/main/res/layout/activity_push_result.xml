<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_56"
            android:paddingLeft="@dimen/width_72"
            android:paddingRight="@dimen/width_72"
            android:text="@string/word_must_read"
            android:textColor="@color/color_737373"
            android:textSize="@dimen/textSize_34pt"
            android:textStyle="bold"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/width_72"
            android:paddingRight="@dimen/width_72"
            android:text="@string/msg_push_result_description"
            android:textColor="@color/color_737373"
            android:textSize="@dimen/textSize_34pt"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_2"
            android:layout_marginTop="@dimen/height_20"
            android:background="@color/color_ebebeb"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_150"
            android:layout_marginTop="@dimen/height_40"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/layout_push_result_completeTab"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/word_send_complete"
                    android:textColor="@color/color_cfcfcf_000000"
                    android:textSize="@dimen/textSize_52pt"
                    android:textStyle="bold"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_7"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/color_transparent_579ffb"/>

            </RelativeLayout>

            <View
                android:layout_width="@dimen/width_2"
                android:layout_height="@dimen/height_30"
                android:layout_gravity="center_vertical"
                android:background="@color/color_ebebeb"/>

            <RelativeLayout
                android:id="@+id/layout_push_result_reservationTab"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/word_send_reservation"
                    android:textColor="@color/color_cfcfcf_000000"
                    android:textSize="@dimen/textSize_52pt"
                    android:textStyle="bold"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_7"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/color_transparent_579ffb"/>

            </RelativeLayout>

            <View
                android:layout_width="@dimen/width_2"
                android:layout_height="@dimen/height_30"
                android:layout_gravity="center_vertical"
                android:background="@color/color_ebebeb"/>

            <RelativeLayout
                android:id="@+id/layout_push_result_cancelTab"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/word_send_cancel"
                    android:textColor="@color/color_cfcfcf_000000"
                    android:textSize="@dimen/textSize_52pt"
                    android:textStyle="bold"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_7"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/color_transparent_579ffb"/>

            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_20"
            android:background="@color/color_f3f3f3"/>

        <TextView
            android:id="@+id/text_push_result_totalCount"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_87"
            android:layout_marginLeft="@dimen/width_72"
            android:layout_marginTop="@dimen/height_40"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize_38pt"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_push_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/width_72"
            android:paddingRight="@dimen/width_72"/>

    </LinearLayout>

</RelativeLayout>
