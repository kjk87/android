<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:res="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="@dimen/height_60">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/width_72"
        android:layout_marginEnd="@dimen/width_72">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.pplus.prnumberbiz.apps.common.ui.custom.MaskableFrameLayout
                android:layout_width="@dimen/width_350"
                android:layout_height="@dimen/height_263"
                android:layout_marginEnd="@dimen/width_30"
                app:mask="@drawable/img_goods_mask"
                app:porterduffxfermode="DST_IN">

                <ImageView
                    android:id="@+id/image_goods_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_goods_default" />

                <RelativeLayout
                    android:id="@+id/layout_goods_sold_status"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/color_80000000"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/text_goods_sold_status"
                        android:layout_width="@dimen/width_250"
                        android:layout_height="@dimen/height_86"
                        android:layout_centerInParent="true"
                        android:background="@drawable/border_color_ffffff_2px"
                        android:gravity="center"
                        android:text="@string/word_sold_out"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSize_32pt" />

                </RelativeLayout>


            </com.pplus.prnumberbiz.apps.common.ui.custom.MaskableFrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_goods_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:textColor="@color/color_232323"
                    android:textSize="@dimen/textSize_46pt"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/height_10"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_goods_sale_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/width_15"
                        android:textColor="@color/color_232323"
                        android:textSize="@dimen/textSize_58pt" />

                    <TextView
                        android:id="@+id/text_goods_origin_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_b7b7b7"
                        android:textSize="@dimen/textSize_36pt"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:id="@+id/text_goods_reward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_ff4646"
                    android:textSize="@dimen/textSize_38pt" />

                <TextView
                    android:id="@+id/text_goods_remain_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_579ffb"
                    android:textSize="@dimen/textSize_38pt" />


            </LinearLayout>

            <ImageView
                android:id="@+id/image_goods_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_post_set_edit" />


        </LinearLayout>

        <ImageView
            android:id="@+id/image_goods_select"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_a6f1f1f1"
            android:scaleType="center"
            android:src="@drawable/ic_push_check"
            android:visibility="gone" />

    </FrameLayout>

    <View
        android:id="@+id/view_goods_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_2"
        android:layout_marginStart="@dimen/width_54"
        android:layout_marginTop="@dimen/height_60"
        android:layout_marginEnd="@dimen/width_54"
        android:background="@color/color_f0f0f0" />

