<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/width_72"
        android:paddingRight="@dimen/width_72">

        <com.pplus.prnumberbiz.apps.common.ui.custom.MaskableFrameLayout
            android:layout_width="@dimen/width_170"
            android:layout_height="@dimen/width_170"
            android:layout_marginEnd="@dimen/width_40"
            app:mask="@drawable/img_profile_mask"
            app:porterduffxfermode="DST_IN">

            <ImageView
                android:id="@+id/image_customer_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_gift_profile_default"/>


        </com.pplus.prnumberbiz.apps.common.ui.custom.MaskableFrameLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_customer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_46pt"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text_customer_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_2"
                android:textColor="@color/color_737373"
                android:textSize="@dimen/textSize_36pt"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/image_customer_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_contact_list_menu"/>

        <ImageView
            android:id="@+id/image_customer_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_contact_checkbox"
            android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>