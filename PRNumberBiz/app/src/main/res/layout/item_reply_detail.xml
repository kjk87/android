<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/width_72"
                android:paddingRight="@dimen/width_72">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/height_30"
        android:paddingLeft="@dimen/width_70"
        android:paddingTop="@dimen/height_30">

        <ImageView
            android:id="@+id/image_reply_detail_profileImage"
            android:layout_width="@dimen/width_70"
            android:layout_height="@dimen/width_70"
            android:layout_marginRight="@dimen/width_30"
            android:src="@drawable/img_post_profile_default"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_reply_detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_32pt"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text_reply_detail_contents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_565656"
                android:textSize="@dimen/textSize_32pt"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_reply_detail_regDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_bbbbbb"
                android:textSize="@dimen/textSize_32pt"/>

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
