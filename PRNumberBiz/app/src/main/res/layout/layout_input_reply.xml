<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_158"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/width_72"
        android:paddingRight="@dimen/width_72">

        <EditText
            android:id="@+id/edit_reply"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:hint="@string/hint_replay"
            android:textColor="@color/color_565656"
            android:textColorHint="@color/color_bbbbbb"
            android:textSize="@dimen/textSize_40pt"/>

        <TextView
            android:id="@+id/text_input_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_post_write_bg"
            android:gravity="center"
            android:text="@string/word_confirm"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_32pt"/>

    </LinearLayout>

</LinearLayout>