<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_group_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_b3000000">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="@dimen/width_792"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/height_500"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/height_800"
                android:layout_centerHorizontal="true">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_popup_mid">

                    <TextView
                        android:id="@+id/text_alertTitle"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_132"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:gravity="center"
                        android:text="@string/word_reg_newGroup"
                        android:textSize="@dimen/textSize_42pt"
                        android:textStyle="bold"/>

                    <RelativeLayout
                        android:id="@+id/text_alertContents_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_alertTitle"
                        android:clickable="true"
                        android:paddingBottom="@dimen/height_78"
                        android:paddingLeft="@dimen/width_111"
                        android:paddingRight="@dimen/width_111"
                        android:paddingTop="@dimen/height_78">

                        <TextView
                            android:id="@+id/text_group_add_description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="@string/msg_input_groupName"
                            android:textColor="@color/color_585858"
                            android:textSize="@dimen/textSize_42pt"/>

                        <EditText
                            android:id="@+id/edit_group_add_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/text_group_add_description"
                            android:layout_marginTop="@dimen/height_78"
                            android:background="@drawable/underbar_cccccc_ffffff"
                            android:maxLines="1"
                            android:maxLength="6"
                            android:paddingBottom="@dimen/height_48"
                            android:paddingLeft="@dimen/width_18"
                            android:textColor="@color/color_585858"
                            android:textSize="@dimen/textSize_48pt"/>

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/layout_alert_bottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_alertContents_layout"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/text_group_add_cancelBtn"
                            android:layout_width="@dimen/width_0"
                            android:layout_height="@dimen/height_113"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/word_cancel"
                            android:textColor="@color/color_585858_d9d9d9"
                            android:textSize="@dimen/textSize_39pt"
                            android:visibility="visible"/>

                        <View
                            android:id="@+id/text_alertLine"
                            android:layout_width="@dimen/width_2"
                            android:layout_height="@dimen/height_63"
                            android:background="@color/color_cccccc"
                            android:visibility="visible"/>

                        <TextView
                            android:id="@+id/text_group_add_confirmBtn"
                            android:layout_width="@dimen/width_0"
                            android:layout_height="@dimen/height_113"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/word_confirm"
                            android:textColor="@color/color_585858_d9d9d9"
                            android:textSize="@dimen/textSize_39pt"/>

                    </LinearLayout>

                    <View
                        android:id="@+id/line_alert_title"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/width_2"
                        android:layout_below="@id/text_alertTitle"
                        android:background="@color/color_cccccc"/>

                    <View
                        android:id="@+id/line_alert_bottom"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/width_2"
                        android:layout_above="@id/layout_alert_bottom"
                        android:background="@color/color_cccccc"/>


                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>



</RelativeLayout>
