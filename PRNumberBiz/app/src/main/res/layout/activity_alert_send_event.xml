<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bf000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/width_90"
        android:layout_marginEnd="@dimen/width_90"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_180">

            <ImageView
                android:id="@+id/image_alert_send_event_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/height_20"
                android:layout_marginEnd="@dimen/height_20"
                android:src="@drawable/ic_top_close" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/width_72"
            android:layout_marginEnd="@dimen/width_72"
            android:orientation="horizontal">

            <com.pplus.prnumberbiz.apps.common.ui.custom.MaskableFrameLayout
                android:layout_width="@dimen/width_350"
                android:layout_height="@dimen/height_263"
                android:layout_marginEnd="@dimen/width_30"
                app:mask="@drawable/img_goods_mask"
                app:porterduffxfermode="DST_IN">

                <ImageView
                    android:id="@+id/image_alert_send_event_goods_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_goods_default" />


            </com.pplus.prnumberbiz.apps.common.ui.custom.MaskableFrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_alert_send_event_goods_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:textColor="@color/color_232323"
                    android:textSize="@dimen/textSize_46pt"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/height_10"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_alert_send_event_goods_sale_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/width_15"
                        android:textColor="@color/color_232323"
                        android:textSize="@dimen/textSize_58pt" />

                    <TextView
                        android:id="@+id/text_alert_send_event_goods_origin_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_b7b7b7"
                        android:textSize="@dimen/textSize_36pt"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:id="@+id/text_alert_send_event_goods_remain_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_579ffb"
                    android:textSize="@dimen/textSize_38pt" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_2"
            android:background="@color/color_f0f0f0"
            android:layout_marginTop="@dimen/height_60"
            android:layout_marginStart="@dimen/width_72"
            android:layout_marginEnd="@dimen/width_72"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/width_72"
            android:layout_marginTop="@dimen/height_60"
            android:layout_marginEnd="@dimen/width_72"
            android:gravity="center"
            android:text="@string/msg_alert_send_news_desc1"
            android:textColor="@color/color_232323"
            android:textSize="@dimen/textSize_50pt" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/width_72"
            android:layout_marginTop="@dimen/height_40"
            android:layout_marginEnd="@dimen/width_72"
            android:gravity="center"
            android:text="@string/msg_alert_send_news_desc2"
            android:textColor="@color/color_737373"
            android:textSize="@dimen/textSize_42pt" />


        <TextView
            android:id="@+id/text_alert_send_event_send"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_171"
            android:layout_marginTop="@dimen/height_100"
            android:background="@color/color_579ffb"
            android:gravity="center"
            android:text="@string/msg_send_event"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_39pt" />

    </LinearLayout>

</RelativeLayout>