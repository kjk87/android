            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_60"
                android:layout_marginBottom="@dimen/height_150"
                android:paddingStart="@dimen/width_72"
                android:paddingEnd="@dimen/width_72"
                android:text="@string/word_signUp"
                android:textColor="@color/color_232323"
                android:textSize="@dimen/textSize_90pt" />

            <LinearLayout
                android:id="@+id/layout_join_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/height_110"
                android:orientation="vertical"
                android:paddingStart="@dimen/width_72"
                android:paddingEnd="@dimen/width_72">

                <TextView
                    android:id="@+id/text_join_id_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/html_id"
                    android:textColor="@color/color_232323"
                    android:textSize="@dimen/textSize_36pt"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edit_join_id"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_80"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="@dimen/height_30"
                    android:background="@drawable/underbar_dcdcdc_ffffff_4px"
                    android:gravity="center_vertical"
                    android:hint="@string/hint_input_id"
                    android:maxLength="20"
                    android:textColor="@color/color_232323"
                    android:textColorHint="@color/color_bbbbbb"
                    android:textSize="@dimen/textSize_48pt" />

                <TextView
                    android:id="@+id/text_join_id_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_20"
                    android:drawablePadding="@dimen/width_5"
                    android:textSize="@dimen/textSize_36pt"
                    android:textStyle="bold" />

                <TextView
