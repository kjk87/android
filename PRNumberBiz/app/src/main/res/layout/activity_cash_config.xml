<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:elevation="0dp"
            app:expanded="true">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_page_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                app:contentScrim="@color/color_579ffb"
                app:expandedTitleTextAppearance="@android:color/transparent"
                app:layout_scrollFlags="scroll|enterAlwaysCollapsed">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_579ffb"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/height_80"
                        android:text="@string/word_ads_cash"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSize_38pt"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/height_4">

                        <TextView
                            android:id="@+id/text_cash_config_retention_cash"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="@dimen/width_24"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textSize_110pt"
                            android:textStyle="bold"/>

                        <ImageView
                            android:id="@+id/image_cash_config_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/text_cash_config_retention_cash"
                            android:src="@drawable/btn_cash_arrow"/>

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/text_cash_config_charge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/height_100"
                        android:layout_marginTop="@dimen/height_30"
                        android:background="@drawable/btn_my_push"
                        android:text="@string/msg_charge"
                        android:textColor="@color/color_579ffb"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textSize="@dimen/textSize_38pt"/>

                </LinearLayout>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_scrollFlags="scroll|enterAlways">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/height_50"
                    android:layout_marginEnd="@dimen/width_72"
                    android:layout_marginStart="@dimen/width_72"
                    android:layout_marginTop="@dimen/height_40"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_cash_config_start_day"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/height_92"
                        android:layout_weight="1"
                        android:background="@drawable/border_color_a0a0a0_2px"
                        android:drawableRight="@drawable/ic_dropbox_down"
                        android:gravity="center_vertical"
                        android:hint="@string/word_start_day"
                        android:paddingLeft="@dimen/width_40"
                        android:paddingRight="@dimen/width_40"
                        android:textColor="@color/black"
                        android:textColorHint="@color/color_bbbbbb"
                        android:textSize="@dimen/textSize_40pt"/>

                    <TextView
                        android:layout_width="@dimen/width_56"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="~"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textSize_40pt"/>

                    <TextView
                        android:id="@+id/text_cash_config_end_day"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/height_92"
                        android:layout_weight="1"
                        android:background="@drawable/border_color_a0a0a0_2px"
                        android:drawableRight="@drawable/ic_dropbox_down"
                        android:gravity="center_vertical"
                        android:hint="@string/word_end_day"
                        android:paddingLeft="@dimen/width_40"
                        android:paddingRight="@dimen/width_40"
                        android:textColor="@color/black"
                        android:textColorHint="@color/color_bbbbbb"
                        android:textSize="@dimen/textSize_40pt"/>

                    <TextView
                        android:id="@+id/text_cash_config_search"
                        android:layout_width="@dimen/width_184"
                        android:layout_height="@dimen/height_92"
                        android:layout_marginLeft="@dimen/width_33"
                        android:background="@drawable/border_color_000000_1px"
                        android:gravity="center"
                        android:text="@string/word_search"
                        android:textColor="@color/color_000000_a3a3a3"
                        android:textSize="@dimen/textSize_40pt"
                        android:textStyle="bold"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_150"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/layout_cash_config_use_tab"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/text_cash_config_use_tab"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@drawable/btn_underbar_transparent_579ffb"
                            android:gravity="center"
                            android:text="@string/word_use_history"
                            android:textColor="@color/color_232323_579ffb"
                            android:textSize="@dimen/textSize_48pt"/>

                    </RelativeLayout>

                    <View
                        android:layout_width="@dimen/width_2"
                        android:layout_height="@dimen/height_30"
                        android:background="@color/color_ebebeb"/>

                    <RelativeLayout
                        android:id="@+id/layout_cash_config_charge_tab"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/text_cash_config_charge_tab"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@drawable/btn_underbar_transparent_579ffb"
                            android:gravity="center"
                            android:text="@string/word_charge_history"
                            android:textColor="@color/color_232323_579ffb"
                            android:textSize="@dimen/textSize_48pt"/>
                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_20"
                    android:background="@color/color_f3f3f3"/>

            </LinearLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layout_cash_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingEnd="@dimen/width_54"
                        android:paddingStart="@dimen/width_54">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/height_40"
                            android:layout_marginTop="@dimen/height_40"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/text_cash_config_total_amount"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textSize_52pt"
                                android:textStyle="bold"/>


                            <TextView
                                android:id="@+id/text_cash_config_sort"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:drawablePadding="@dimen/width_40"
                                android:drawableRight="@drawable/ic_dropbox_down"
                                android:gravity="center"
                                android:paddingRight="@dimen/width_40"
                                android:text="@string/word_sort_recent"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textSize_32pt"/>

                        </LinearLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_2"
                            android:layout_marginTop="@dimen/height_20"
                            android:background="@color/color_ebebeb"
                            android:visibility="gone"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_92"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/text_cash_config_title1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="@string/word_charge_date"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textSize_40pt"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/text_cash_config_title2"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="@string/word_charge_method"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textSize_40pt"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/text_cash_config_title3"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="@string/word_charge_price"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textSize_40pt"
                                android:textStyle="bold"/>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_2"
                            android:background="@color/color_ebebeb"
                            android:visibility="gone"/>

                    </LinearLayout>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_cash_config"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <TextView
                android:id="@+id/text_cash_config_not_exist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_300"
                android:gravity="center_horizontal"
                android:text="@string/msg_not_exist_cash_charge_history"
                android:textColor="@color/color_737373"
                android:textSize="@dimen/textSize_40pt"
                android:visibility="gone"/>

        </RelativeLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</RelativeLayout>
