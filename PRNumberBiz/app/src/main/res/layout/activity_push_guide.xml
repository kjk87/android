<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.pplus.prnumberbiz.apps.push.ui.PushGuideActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/height_378"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_push_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_guide_push"/>

        <TextView
            android:id="@+id/text_push_guide1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_28"
            android:background="@drawable/underbar_000000_ffffff"
            android:gravity="center"
            android:text="@string/msg_push_send_guide1"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize_66pt"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/text_push_guide2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_50"
            android:gravity="center"
            android:text="@string/msg_push_send_guide2"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize_40pt"/>

        <TextView
            android:id="@+id/text_push_guide3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_54"
            android:gravity="center"
            android:text="@string/msg_push_send_guide3"
            android:textColor="@color/color_579ffb"
            android:textSize="@dimen/textSize_40pt"
            android:textStyle="bold"/>
    </LinearLayout>

    <TextView
        android:id="@+id/text_push_guide_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_136"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/height_150"
        android:layout_marginLeft="@dimen/width_72"
        android:layout_marginRight="@dimen/width_72"
        android:background="@color/black"
        android:gravity="center"
        android:text="@string/word_confirm"
        android:textColor="@color/color_ffffff_a3a3a3"
        android:textSize="@dimen/textSize_40pt"/>

    <CheckBox
        android:id="@+id/check_push_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/height_70"
        android:layout_marginRight="@dimen/width_72"
        android:button="@drawable/ic_check"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/width_24"
        android:text="@string/msg_do_not_look_again"
        android:textColor="@color/black"
        android:textSize="@dimen/textSize_36pt"/>
</RelativeLayout>
