<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/width_72"
        android:paddingRight="@dimen/width_72">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/height_40"
            android:layout_marginTop="@dimen/height_90"
            android:drawableLeft="@drawable/ic_setting_info"
            android:drawablePadding="@dimen/width_15"
            android:gravity="center"
            android:text="@string/msg_waiting_secession"
            android:textColor="@color/color_ff0000"
            android:textSize="@dimen/textSize_40pt"/>

        <TextView
            android:id="@+id/text_secessionDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="@dimen/height_118"
            android:text="@string/word_secessionDate"
            android:textColor="@color/color_8d8d8d"
            android:textSize="@dimen/textSize_34pt"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/height_23"
            android:text="@string/msg_secession_description1"
            android:textColor="@color/color_585858"
            android:textSize="@dimen/textSize_42pt"/>

        <TextView
            android:id="@+id/text_secession_description2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/msg_secession_description2"
            android:textColor="@color/color_585858"
            android:textSize="@dimen/textSize_42pt"/>

    </LinearLayout>

    <TextView
        android:id="@+id/text_authConfirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_136"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/height_110"
        android:layout_marginLeft="@dimen/width_72"
        android:layout_marginRight="@dimen/width_72"
        android:background="@color/black"
        android:gravity="center"
        android:text="@string/word_confirm"
        android:textColor="@color/color_ffffff_a3a3a3"
        android:textSize="@dimen/textSize_40pt"/>

</RelativeLayout>
