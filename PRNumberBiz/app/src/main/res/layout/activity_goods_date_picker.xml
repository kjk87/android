<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bf000000">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/width_20"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/word_year"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_50pt"/>

                <com.shawnlin.numberpicker.NumberPicker
                    android:id="@+id/goods_date_picker_year"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_350"
                    android:layout_marginTop="@dimen/height_20"
                    app:np_dividerColor="@color/color_579ffb"
                    app:np_formatter="@string/number_picker_formatter"
                    app:np_height="@dimen/height_600"
                    app:np_max="2018"
                    app:np_min="1900"
                    app:np_selectedTextColor="@color/white"
                    app:np_selectedTextSize="@dimen/textSize_45pt"
                    app:np_textColor="@color/white"
                    app:np_textSize="@dimen/textSize_45pt"
                    app:np_value="1991"
                    app:np_width="@dimen/width_200"
                    app:np_wrapSelectorWheel="true"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/width_20"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/word_month"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_50pt"/>

                <com.shawnlin.numberpicker.NumberPicker
                    android:id="@+id/goods_date_picker_month"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_350"
                    android:layout_marginTop="@dimen/height_20"
                    app:np_dividerColor="@color/color_579ffb"
                    app:np_formatter="@string/number_picker_formatter"
                    app:np_height="@dimen/height_600"
                    app:np_max="12"
                    app:np_min="1"
                    app:np_selectedTextColor="@color/white"
                    app:np_selectedTextSize="@dimen/textSize_45pt"
                    app:np_textColor="@color/white"
                    app:np_textSize="@dimen/textSize_45pt"
                    app:np_value="12"
                    app:np_width="@dimen/width_200"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/word_day"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_50pt"/>

                <com.shawnlin.numberpicker.NumberPicker
                    android:id="@+id/goods_date_picker_day"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_350"
                    android:layout_marginTop="@dimen/height_20"
                    app:np_dividerColor="@color/color_579ffb"
                    app:np_formatter="@string/number_picker_formatter"
                    app:np_height="@dimen/height_600"
                    app:np_max="31"
                    app:np_min="1"
                    app:np_selectedTextColor="@color/white"
                    app:np_selectedTextSize="@dimen/textSize_45pt"
                    app:np_textColor="@color/white"
                    app:np_textSize="@dimen/textSize_45pt"
                    app:np_value="15"
                    app:np_width="@dimen/width_200"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_20"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/width_20"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/word_hour"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_50pt"/>

                <com.shawnlin.numberpicker.NumberPicker
                    android:id="@+id/goods_date_picker_hour"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_350"
                    android:layout_marginTop="@dimen/height_20"
                    app:np_dividerColor="@color/color_579ffb"
                    app:np_formatter="@string/number_picker_formatter"
                    app:np_height="@dimen/height_600"
                    app:np_max="23"
                    app:np_min="0"
                    app:np_selectedTextColor="@color/white"
                    app:np_selectedTextSize="@dimen/textSize_45pt"
                    app:np_textColor="@color/white"
                    app:np_textSize="@dimen/textSize_45pt"
                    app:np_value="0"
                    app:np_width="@dimen/width_200"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/word_minute"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_50pt"/>

                <com.shawnlin.numberpicker.NumberPicker
                    android:id="@+id/goods_date_picker_minute"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_350"
                    android:layout_marginTop="@dimen/height_20"
                    app:np_dividerColor="@color/color_579ffb"
                    app:np_formatter="@string/number_picker_formatter"
                    app:np_height="@dimen/height_600"
                    app:np_max="59"
                    app:np_min="0"
                    app:np_selectedTextColor="@color/white"
                    app:np_selectedTextSize="@dimen/textSize_50pt"
                    app:np_textColor="@color/white"
                    app:np_textSize="@dimen/textSize_50pt"
                    app:np_value="0"
                    app:np_width="@dimen/width_200"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/goods_date_picker_confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_120"
            android:layout_marginTop="@dimen/height_20"
            android:background="@color/color_579ffb"
            android:gravity="center"
            android:text="@string/word_confirm"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_39pt"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/image_goods_date_picker_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:padding="@dimen/width_40"
        android:src="@drawable/ic_top_close_white"/>
</RelativeLayout>
