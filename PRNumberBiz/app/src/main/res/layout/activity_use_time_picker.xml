<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bf000000"
    android:fitsSystemWindows="true">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/height_60"
            android:text="@string/word_start_time"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_60pt"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.shawnlin.numberpicker.NumberPicker
                android:id="@+id/use_start_time_picker_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:np_dividerColor="@color/color_579ffb"
                app:np_formatter="@string/number_picker_formatter"
                app:np_height="@dimen/height_520"
                app:np_max="23"
                app:np_min="0"
                app:np_selectedTextColor="@color/white"
                app:np_selectedTextSize="@dimen/textSize_48pt"
                app:np_textColor="@color/white"
                app:np_textSize="@dimen/textSize_48pt"
                app:np_value="12"
                app:np_width="@dimen/width_203" />


            <com.shawnlin.numberpicker.NumberPicker
                android:id="@+id/use_start_time_picker_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:np_dividerColor="@color/color_579ffb"
                app:np_formatter="@string/number_picker_formatter"
                app:np_height="@dimen/height_520"
                app:np_max="59"
                app:np_min="0"
                app:np_selectedTextColor="@color/white"
                app:np_selectedTextSize="@dimen/textSize_48pt"
                app:np_textColor="@color/white"
                app:np_textSize="@dimen/textSize_48pt"
                app:np_value="15"
                app:np_width="@dimen/width_203" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/height_60"
            android:layout_marginBottom="@dimen/height_60"
            android:text="@string/word_end_time"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_60pt"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.shawnlin.numberpicker.NumberPicker
                android:id="@+id/use_end_time_picker_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:np_dividerColor="@color/color_579ffb"
                app:np_formatter="@string/number_picker_formatter"
                app:np_height="@dimen/height_520"
                app:np_max="23"
                app:np_min="0"
                app:np_selectedTextColor="@color/white"
                app:np_selectedTextSize="@dimen/textSize_48pt"
                app:np_textColor="@color/white"
                app:np_textSize="@dimen/textSize_48pt"
                app:np_value="12"
                app:np_width="@dimen/width_203" />


            <com.shawnlin.numberpicker.NumberPicker
                android:id="@+id/use_end_time_picker_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:np_dividerColor="@color/color_579ffb"
                app:np_formatter="@string/number_picker_formatter"
                app:np_height="@dimen/height_520"
                app:np_max="59"
                app:np_min="0"
                app:np_selectedTextColor="@color/white"
                app:np_selectedTextSize="@dimen/textSize_48pt"
                app:np_textColor="@color/white"
                app:np_textSize="@dimen/textSize_48pt"
                app:np_value="15"
                app:np_width="@dimen/width_203" />

        </LinearLayout>

        <TextView
            android:id="@+id/text_use_time_selected_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_60"
            android:textColor="@color/color_ff4646"
            android:textSize="@dimen/textSize_50pt" />


        <TextView
            android:id="@+id/use_time_picker_confirm"
            android:layout_width="@dimen/width_720"
            android:layout_height="@dimen/height_120"
            android:layout_marginTop="@dimen/height_30"
            android:background="@color/color_579ffb"
            android:gravity="center"
            android:text="@string/word_complete"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_39pt" />

    </LinearLayout>
</RelativeLayout>
