<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_270">

    <TextView
        android:id="@+id/text_delivery_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/width_72"
        android:textColor="@color/color_737373"
        android:textSize="@dimen/textSize_44pt"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/width_72"
        android:gravity="end"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_delivery_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_ff4646"
            android:textSize="@dimen/textSize_40pt" />

        <TextView
            android:id="@+id/text_delivery_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_b7b7b7"
            android:textSize="@dimen/textSize_40pt" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_2"
        android:layout_alignParentBottom="true"
        android:background="@color/color_f0f0f0" />
</RelativeLayout>