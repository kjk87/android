<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_contents_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_b3000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/width_72"
        android:layout_marginRight="@dimen/width_72"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_cash_config_detail_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_cash_close"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_94"
            android:layout_marginLeft="@dimen/width_130"
            android:layout_marginRight="@dimen/width_100"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/word_buy"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_40pt"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text_cash_config_detail_purchase"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_40pt"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_94"
            android:layout_marginLeft="@dimen/width_130"
            android:layout_marginRight="@dimen/width_100"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_cash_config_detail_receive_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/word_recv"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_40pt"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text_cash_config_detail_receive"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_40pt"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_94"
            android:layout_marginLeft="@dimen/width_130"
            android:layout_marginRight="@dimen/width_100"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/word_use"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_40pt"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text_cash_config_detail_use"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_40pt"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_2"
            android:background="@color/color_d8d8d8"
            android:layout_marginLeft="@dimen/width_130"
            android:layout_marginRight="@dimen/width_100"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_150"
            android:layout_marginLeft="@dimen/width_130"
            android:layout_marginRight="@dimen/width_100"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/word_retention"
                android:textColor="@color/color_8700ff"
                android:textSize="@dimen/textSize_40pt"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text_cash_config_detail_retention"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:textColor="@color/color_8700ff"
                android:textSize="@dimen/textSize_40pt"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
