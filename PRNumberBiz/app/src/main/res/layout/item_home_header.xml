<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/width_72"
        android:paddingEnd="@dimen/width_72">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_100"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_my_page_header_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/width_30"
                android:textColor="@color/color_232323"
                android:textSize="@dimen/textSize_65pt"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text_my_page_header_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_38pt"
                android:textColor="@color/color_579ffb"
                android:textStyle="bold"
                android:background="@drawable/underbar_579ffb_ffffff"
                android:text="@string/msg_post_config"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_60"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_home_facebook"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/width_20"
                    android:layout_weight="1"
                    android:background="@drawable/bg_main_facebook"
                    android:drawableStart="@drawable/ic_main_facebook"
                    android:gravity="center_vertical"
                    android:text="@string/msg_go_facebook"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_34pt"/>

                <TextView
                    android:id="@+id/text_home_kakao"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_main_kakao"
                    android:drawableStart="@drawable/ic_main_kakaostory"
                    android:gravity="center_vertical"
                    android:text="@string/msg_go_kakao"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_34pt"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_35"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_home_twitter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/width_20"
                    android:layout_weight="1"
                    android:background="@drawable/bg_main_twitter"
                    android:drawableStart="@drawable/ic_main_twitter"
                    android:gravity="center_vertical"
                    android:text="@string/msg_go_twitter"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_34pt"/>

                <TextView
                    android:id="@+id/text_home_instagram"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_main_instagram"
                    android:drawableStart="@drawable/ic_main_instagram"
                    android:gravity="center_vertical"
                    android:text="@string/msg_go_instagram"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_34pt"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_35"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_home_blog"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/width_20"
                    android:layout_weight="1"
                    android:background="@drawable/bg_main_blog"
                    android:drawableStart="@drawable/ic_main_blog"
                    android:gravity="center_vertical"
                    android:text="@string/msg_go_blog"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_34pt"/>

                <TextView
                    android:id="@+id/text_home_homepage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_main_homepage"
                    android:drawableStart="@drawable/ic_main_url"
                    android:gravity="center_vertical"
                    android:text="@string/msg_go_homepage"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_34pt"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_home_introduction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_100"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/word_introduce"
                android:textColor="@color/color_232323"
                android:textSize="@dimen/textSize_43pt"
                android:textStyle="bold"/>

            <com.pplus.prnumberbiz.apps.common.component.ExpandableTextView
                android:id="@+id/text_home_introduction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_30"
                android:lineSpacingExtra="@dimen/height_12"
                android:textColor="@color/color_737373"
                android:textSize="@dimen/textSize_43pt"
                app:maxCollapsedLines="5"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_home_mobile_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_100"
            android:layout_marginBottom="@dimen/height_12"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/word_phone_number"
                android:textColor="@color/color_232323"
                android:textSize="@dimen/textSize_43pt"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text_home_mobile_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_10"
                android:text="@string/word_phone_number"
                android:textColor="@color/color_737373"
                android:textSize="@dimen/textSize_43pt"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_home_open_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_100"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/word_opening_hours"
                android:textColor="@color/color_232323"
                android:textSize="@dimen/textSize_43pt"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text_home_opening_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_10"
                android:lineSpacingExtra="@dimen/height_12"
                android:textColor="@color/color_737373"
                android:textSize="@dimen/textSize_43pt"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_home_parking_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_100"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/word_parking_info"
                android:textColor="@color/color_232323"
                android:textSize="@dimen/textSize_43pt"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text_home_parking_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_10"
                android:lineSpacingExtra="@dimen/height_12"
                android:textColor="@color/color_737373"
                android:textSize="@dimen/textSize_43pt"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_home_convenience_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_100"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/word_convenience_info"
                android:textColor="@color/color_232323"
                android:textSize="@dimen/textSize_43pt"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text_home_convenience_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_10"
                android:lineSpacingExtra="@dimen/height_12"
                android:textColor="@color/color_737373"
                android:textSize="@dimen/textSize_43pt"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_home_kakao_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_100"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/word_kakao_id"
                android:textColor="@color/color_232323"
                android:textSize="@dimen/textSize_43pt"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text_home_kakao_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_10"
                android:lineSpacingExtra="@dimen/height_12"
                android:textColor="@color/color_737373"
                android:textSize="@dimen/textSize_43pt"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_home_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_100"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/word_email"
                android:textColor="@color/color_232323"
                android:textSize="@dimen/textSize_43pt"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text_home_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_10"
                android:lineSpacingExtra="@dimen/height_12"
                android:textColor="@color/color_737373"
                android:textSize="@dimen/textSize_43pt"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_home_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_100"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/word_address"
                android:textColor="@color/color_232323"
                android:textSize="@dimen/textSize_43pt"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text_home_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_10"
                android:text="@string/word_address"
                android:textColor="@color/color_737373"
                android:textSize="@dimen/textSize_43pt"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layout_home_map"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_560"
            android:layout_marginTop="@dimen/height_30">

            <!--<FrameLayout-->
            <!--android:id="@+id/container_home_map"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"/>-->

            <com.google.android.gms.maps.MapView
                android:id="@+id/map_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:liteMode="true"
                app:mapType="normal"/>

            <ImageView
                android:id="@+id/image_home_map_full"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/width_30"
                android:layout_marginEnd="@dimen/width_30"
                android:src="@drawable/ic_map_full"/>

        </RelativeLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_140"
        android:layout_marginTop="@dimen/height_100"
        android:background="@color/color_f0f0f0">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_2"
            android:background="@color/color_d8d8d8"/>

        <TextView
            android:id="@+id/text_page_goods_review_total_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/width_72"
            android:textColor="@color/color_232323"
            android:textSize="@dimen/textSize_42pt"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_2"
            android:layout_alignParentBottom="true"
            android:background="@color/color_d8d8d8"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="@dimen/height_60"
        android:paddingBottom="@dimen/height_60">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/word_goods_avg_review"
            android:textColor="@color/color_232323"
            android:textSize="@dimen/textSize_34pt"/>

        <TextView
            android:id="@+id/text_page_goods_review_avg_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_232323"
            android:textSize="@dimen/textSize_100pt"/>

        <com.pplus.prnumberbiz.apps.common.ui.custom.GradeBar
            android:id="@+id/grade_bar_page_goods_review_avg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:grade_g="@drawable/img_commerce_average_star_nor"
            app:grade_h="@drawable/img_commerce_average_star_sel_half"
            app:grade_margin="@dimen/width_6"
            app:grade_y="@drawable/img_commerce_average_star_sel"/>
    </LinearLayout>

</LinearLayout>