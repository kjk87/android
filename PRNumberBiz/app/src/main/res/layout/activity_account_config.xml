<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scroll_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:focusableInTouchMode="true">

        <requestFocus />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_100"
                android:background="@color/color_f0f0f0"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/width_72"
                android:paddingRight="@dimen/width_72">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/word_account_info"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize_36pt"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/width_72"
                android:paddingRight="@dimen/width_72">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_60"
                    android:text="@string/word_id_en"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize_36pt"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_account_id"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_80"
                    android:layout_marginTop="@dimen/height_30"
                    android:background="@drawable/underbar_dcdcdc_ffffff_4px"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_737373"
                    android:textColorHint="@color/color_bbbbbb"
                    android:textSize="@dimen/textSize_48pt" />

                <LinearLayout
                    android:id="@+id/layout_account_config_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/height_110"
                        android:text="@string/word_pw_en"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textSize_36pt"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/height_30"
                        android:gravity="bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/text_password"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/height_80"
                            android:layout_gravity="top"
                            android:layout_marginRight="@dimen/width_40"
                            android:layout_weight="1"
                            android:background="@drawable/underbar_dcdcdc_ffffff_4px"
                            android:gravity="center_vertical"
                            android:inputType="textPassword"
                            android:textColor="@color/color_737373"
                            android:textColorHint="@color/color_bbbbbb"
                            android:textSize="@dimen/textSize_48pt" />

                        <TextView
                            android:id="@+id/text_account_changePassword"
                            android:layout_width="@dimen/width_240"
                            android:layout_height="@dimen/height_100"
                            android:layout_gravity="top"
                            android:background="@drawable/btn_login_white_1"
                            android:clickable="true"
                            android:gravity="center"
                            android:text="@string/word_modified"
                            android:textColor="@color/color_579ffb"
                            android:textSize="@dimen/textSize_32pt" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_100"
                android:layout_marginTop="@dimen/height_110"
                android:background="@color/color_f0f0f0"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/width_72"
                android:paddingRight="@dimen/width_72">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/word_verification_info"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize_36pt"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/width_72"
                android:paddingRight="@dimen/width_72">

                <TextView
                    android:id="@+id/text_account_name_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_60"
                    android:text="@string/word_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize_36pt"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_account_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_80"
                    android:layout_marginTop="@dimen/height_30"
                    android:background="@drawable/underbar_dcdcdc_ffffff_4px"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_737373"
                    android:textColorHint="@color/color_bbbbbb"
                    android:textSize="@dimen/textSize_48pt" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_110"
                    android:text="@string/word_certified_number"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize_36pt"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_30"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_account_phoneNumber"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/height_80"
                        android:layout_gravity="top"
                        android:layout_marginRight="@dimen/width_40"
                        android:layout_weight="1"
                        android:background="@drawable/underbar_dcdcdc_ffffff_4px"
                        android:gravity="center_vertical"
                        android:textColor="@color/color_737373"
                        android:textColorHint="@color/color_bbbbbb"
                        android:textSize="@dimen/textSize_48pt" />

                    <TextView
                        android:id="@+id/text_account_numberChange"
                        android:layout_width="@dimen/width_240"
                        android:layout_height="@dimen/height_100"
                        android:layout_gravity="top"
                        android:background="@drawable/btn_login_white_1"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="@string/msg_change"
                        android:textColor="@color/color_579ffb"
                        android:textSize="@dimen/textSize_32pt" />

                </LinearLayout>

                <TextView
                    android:id="@+id/text_account_config_logout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_140"
                    android:layout_marginTop="@dimen/height_140"
                    android:background="@drawable/btn_blue"
                    android:gravity="center"
                    android:text="@string/word_log_out"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_38pt"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/text_account_secession"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/height_60"
                    android:layout_marginBottom="@dimen/height_100"
                    android:background="@drawable/underbar_579ffb_ffffff"
                    android:text="@string/msg_secession"
                    android:textColor="@color/color_579ffb"
                    android:textSize="@dimen/textSize_40pt" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
