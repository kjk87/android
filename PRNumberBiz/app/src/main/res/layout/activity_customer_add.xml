<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_group_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_b3000000">

    <LinearLayout
        android:layout_width="@dimen/width_900"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_popup_mid"
        android:orientation="vertical"
        android:paddingTop="@dimen/height_180">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="@string/msg_add_customer_description"
            android:textColor="@color/color_232323"
            android:textSize="@dimen/textSize_46pt"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/width_52"
            android:layout_marginTop="@dimen/height_80"
            android:layout_marginRight="@dimen/width_52"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_customer_add_load_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/btn_contact_popup_address"
                android:drawablePadding="@dimen/height_15"
                android:gravity="center"
                android:text="@string/msg_load_address"
                android:textColor="@color/color_808080"
                android:textSize="@dimen/textSize_36pt"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text_customer_add_directly_reg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/btn_contact_popup_individual"
                android:drawablePadding="@dimen/height_15"
                android:gravity="center"
                android:text="@string/msg_directly_reg"
                android:textColor="@color/color_808080"
                android:textSize="@dimen/textSize_36pt"
                android:textStyle="bold"/>

        </LinearLayout>


        <TextView
            android:id="@+id/text_customer_add_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_171"
            android:gravity="center"
            android:layout_marginTop="@dimen/height_180"
            android:background="@color/color_579ffb"
            android:text="@string/word_cancel"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_39pt"/>

    </LinearLayout>


</RelativeLayout>
