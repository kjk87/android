<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.pplus.prnumberbiz.apps.signin.ui.FindIdFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_franchise_total_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize_38pt"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/width_72"
            android:layout_marginTop="@dimen/height_100"
            android:layout_marginBottom="@dimen/height_60"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_franchise_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/width_72"
            android:paddingRight="@dimen/width_72"/>

    </LinearLayout>

</FrameLayout>
