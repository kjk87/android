<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_270"
                android:background="@color/white">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/width_72"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_goods_sale_history_pay_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_232323"
            android:textSize="@dimen/textSize_32pt"/>

        <TextView
            android:id="@+id/text_goods_sale_history_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_232323"
            android:textSize="@dimen/textSize_54pt"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:gravity="end"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/width_72"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_goods_sale_history_buy_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_737373"
            android:textSize="@dimen/textSize_32pt"/>

        <TextView
            android:id="@+id/text_goods_sale_history_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_2"
            android:textColor="@color/color_b7b7b7"
            android:textSize="@dimen/textSize_32pt"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_2"
        android:layout_alignParentBottom="true"
        android:background="@color/color_f0f0f0"/>
</RelativeLayout>