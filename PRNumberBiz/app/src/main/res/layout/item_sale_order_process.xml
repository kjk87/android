<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_400"
        android:layout_marginStart="@dimen/width_40"
        android:layout_marginEnd="@dimen/width_40"
        android:background="@color/white"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/width_40"
                android:layout_marginEnd="@dimen/width_40"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_sale_order_process_book_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/height_10"
                    android:textColor="@color/color_a26df3"
                    android:textSize="@dimen/textSize_42pt"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_sale_order_process_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_232323"
                    android:textSize="@dimen/textSize_58pt"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_sale_order_process_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_737373"
                    android:textSize="@dimen/textSize_40pt"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_sale_order_process_memo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_30"
                    android:textColor="@color/color_b7b7b7"
                    android:textSize="@dimen/textSize_38pt"
                    android:textStyle="bold" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_sale_order_process_type"
            android:layout_width="@dimen/width_200"
            android:layout_height="match_parent"
            android:background="@color/color_3ec082">

            <TextView
                android:id="@+id/text_sale_order_process_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableTop="@drawable/ic_order_delivery"
                android:gravity="center"
                android:text="@string/word_order_delivery"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_30pt" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>