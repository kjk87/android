<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/width_40"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_top_other_goods"
            android:layout_width="@dimen/width_270"
            android:layout_height="@dimen/width_135"
            android:background="@drawable/btn_commerce_white_bg"
            android:gravity="center"
            android:text="@string/word_other_goods"
            android:textColor="@color/color_737373"
            android:textSize="@dimen/textSize_33pt"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/text_top_goods_reg"
            android:layout_width="@dimen/width_270"
            android:layout_height="@dimen/width_135"
            android:background="@drawable/btn_commerce_red_bg"
            android:gravity="center"
            android:text="@string/word_reg_goods"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_33pt"
            android:textStyle="bold"/>


    </LinearLayout>


</RelativeLayout>