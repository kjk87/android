<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pplus.prnumberbiz.apps.signup.ui.SearchFranchiseActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/width_72"
            android:layout_marginRight="@dimen/width_72"
            android:layout_marginTop="@dimen/height_56"
            android:text="@string/msg_select_franchise"
            android:textColor="@color/color_737373"
            android:textSize="@dimen/textSize_34pt"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_2"
            android:layout_marginLeft="@dimen/width_72"
            android:layout_marginRight="@dimen/width_72"
            android:layout_marginTop="@dimen/height_20"
            android:background="@color/color_ebebeb"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_117"
            android:layout_marginLeft="@dimen/width_72"
            android:layout_marginRight="@dimen/width_72"
            android:layout_marginTop="@dimen/height_20"
            android:background="@drawable/underbar_000000_ffffff_10px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edit_franchise_search"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="@string/hint_word_search_franchise"
                android:maxLength="12"
                android:paddingLeft="@dimen/width_40"
                android:textColor="@color/black"
                android:textColorHint="@color/color_bbbbbb"
                android:textSize="@dimen/height_42"/>

            <ImageView
                android:id="@+id/image_franchise_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_gift_search"/>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/search_franchise_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <TextView
        android:id="@+id/text_franchise_search_next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_136"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/height_100"
        android:background="@color/black"
        android:gravity="center"
        android:layout_marginLeft="@dimen/width_72"
        android:layout_marginRight="@dimen/width_72"
        android:text="@string/word_next"
        android:textColor="@color/color_ffffff_a3a3a3"
        android:textSize="@dimen/textSize_40pt"/>


</RelativeLayout>
