<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/width_72"
        android:paddingRight="@dimen/width_72">

        <com.pplus.prnumberuser.apps.common.ui.custom.MaskableFrameLayout
            android:layout_width="@dimen/width_165"
            android:layout_height="@dimen/width_165"
            app:mask="@drawable/img_post_profile_mask"
            android:layout_marginEnd="@dimen/width_45"
            app:porterduffxfermode="DST_IN">

            <ImageView
                android:id="@+id/image_main_number_page_profileImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/prnumber_default_img"/>


        </com.pplus.prnumberuser.apps.common.ui.custom.MaskableFrameLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_main_number_page_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/width_30"
                    android:textColor="@color/color_232323"
                    android:textSize="@dimen/textSize_39pt"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/text_main_number_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/width_6"
                    android:drawableRight="@drawable/ic_search_follow_check"
                    android:gravity="center"
                    android:text="@string/word_plus"
                    android:textColor="@color/color_8700ff"
                    android:textSize="@dimen/textSize_26pt"
                    android:textStyle="bold"
                    android:visibility="gone"/>

            </LinearLayout>


            <TextView
                android:id="@+id/text_main_number_page_subInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_4"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_38pt"/>

            <LinearLayout
                android:id="@+id/layout_main_number_page_subInfo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/width_60"
                    android:layout_height="@dimen/height_35"
                    android:layout_marginRight="@dimen/width_12"
                    android:background="@drawable/border_color_8700ff_ffffff_2px"
                    android:gravity="center"
                    android:text="@string/word_pr_en"
                    android:textColor="@color/color_8700ff"
                    android:textSize="@dimen/textSize_21pt"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/text_main_number_page_subInfo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_737373"
                    android:textSize="@dimen/textSize_34pt"/>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/image_main_number_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit_move"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/image_main_number_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_gift_checkbox"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/text_main_number_2depth_pr_shop"
            android:layout_width="@dimen/width_154"
            android:layout_height="@dimen/height_66"
            android:background="@drawable/border_color_008aff_4px"
            android:gravity="center"
            android:text="@string/word_2depth_pr"
            android:textColor="@color/color_008aff"
            android:textSize="@dimen/textSize_22pt"
            android:visibility="gone"/>


    </LinearLayout>

</LinearLayout>