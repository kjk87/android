<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_207"
                android:background="@color/white"
                android:paddingEnd="@dimen/width_54"
                android:paddingStart="@dimen/width_54">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_point_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_232323"
            android:textSize="@dimen/textSize_39pt"/>

        <TextView
            android:id="@+id/text_point_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_808080"
            android:layout_marginTop="@dimen/height_3"
            android:textSize="@dimen/textSize_33pt"/>
    </LinearLayout>

    <TextView
        android:id="@+id/text_point_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="@color/color_579ffb"
        android:textSize="@dimen/textSize_39pt"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_2"
        android:layout_alignParentBottom="true"
        android:background="@color/color_eaeaea"/>
</RelativeLayout>