<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bf000000"
    tools:context=".apps.event.ui.EventAlertActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginEnd="@dimen/width_90"
        android:layout_marginStart="@dimen/width_90"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_bol_charge_character"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_play_popup_character_2"
            android:layout_marginTop="@dimen/height_80"/>

        <TextView
            android:id="@+id/text_bol_charge_retention_bol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/width_54"
            android:layout_marginStart="@dimen/width_54"
            android:layout_marginTop="@dimen/height_80"
            android:gravity="center"
            android:textColor="@color/color_232323"
            android:textSize="@dimen/textSize_64pt"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/width_54"
            android:layout_marginStart="@dimen/width_54"
            android:layout_marginTop="@dimen/height_10"
            android:gravity="center"
            android:text="@string/msg_bol_charge_description"
            android:textColor="@color/color_232323"
            android:textSize="@dimen/textSize_46pt"/>

        <LinearLayout
            android:id="@+id/layout_bol_charge_alert_option1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_80"
            android:layout_marginEnd="@dimen/width_54"
            android:layout_marginStart="@dimen/width_54"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/text_bol_charge_alert_invite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:drawableTop="@drawable/btn_play_popup_invite"
                    android:drawablePadding="@dimen/height_15"
                    android:textSize="@dimen/textSize_32pt"
                    android:textColor="@color/color_808080"
                    android:layout_centerInParent="true"
                    android:textStyle="bold"
                    android:text="@string/format_invite_and_get_bol"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/text_bol_charge_alert_charge_station1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:drawableTop="@drawable/btn_play_popup_charge"
                    android:drawablePadding="@dimen/height_15"
                    android:textSize="@dimen/textSize_32pt"
                    android:textColor="@color/color_808080"
                    android:layout_centerInParent="true"
                    android:textStyle="bold"
                    android:text="@string/msg_get_bol_in_charge_station1"/>


            </RelativeLayout>

        </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_bol_charge_alert_option2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height_80"
        android:layout_marginEnd="@dimen/width_54"
        android:layout_marginStart="@dimen/width_54"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_play_popup_charge_1"/>

        <TextView
            android:id="@+id/text_bol_charge_alert_charge_station2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/height_15"
            android:drawablePadding="@dimen/height_15"
            android:textSize="@dimen/textSize_38pt"
            android:textColor="@color/color_579ffb"
            android:textStyle="bold"
            android:background="@drawable/underbar_579ffb_ffffff"
            android:text="@string/msg_get_bol_in_charge_station2"/>

    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_171"
            android:layout_marginTop="@dimen/height_180"
            android:background="@color/color_3c3c3c"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_bol_charge_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color_579ffb"
                android:gravity="center"
                android:text="@string/word_confirm"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_39pt"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>