<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bf000000"
    tools:context=".apps.event.ui.EventAlertActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginEnd="@dimen/width_90"
        android:layout_marginStart="@dimen/width_90"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/width_54"
            android:layout_marginStart="@dimen/width_54"
            android:layout_marginTop="@dimen/height_180"
            android:gravity="center"
            android:text="@string/msg_lack_bol"
            android:textColor="@color/color_232323"
            android:textStyle="bold"
            android:textSize="@dimen/textSize_64pt"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize_46pt"
            android:textColor="@color/color_ff4646"
            android:layout_marginTop="@dimen/height_80"
            android:gravity="center"
            android:text="@string/msg_lack_bol_description"/>

        <RelativeLayout
            android:id="@+id/layout_cash_change_lack_alert_adpopcorn"
            android:layout_width="@dimen/width_410"
            android:layout_height="@dimen/height_140"
            android:layout_marginTop="@dimen/height_60"
            android:visibility="gone"
            android:background="@drawable/btn_white_shadow">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_exchange_popup_arrow"
                android:drawablePadding="@dimen/width_15"
                android:textSize="@dimen/textSize_35pt"
                android:textColor="@color/color_579ffb"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:text="@string/msg_get_bol_now"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_171"
            android:layout_marginTop="@dimen/height_180"
            android:background="@color/color_3c3c3c"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_cash_change_lack_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color_579ffb"
                android:gravity="center"
                android:text="@string/word_confirm"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_39pt"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>