<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".apps.menu.ui.OrderPurchaseHistoryDetailActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/height_200"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/width_60"
                android:layout_marginTop="@dimen/height_60"
                android:layout_marginEnd="@dimen/width_60">

                <TextView
                    android:id="@+id/text_ticket_purchase_history_detail_page_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_373c42"
                    android:textSize="@dimen/textSize_54pt"
                    android:layout_centerVertical="true"
                    android:drawableEnd="@drawable/ic_arrow_373c42"
                    android:drawablePadding="@dimen/width_12"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_ticket_purchase_history_detail_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_373c42"
                    android:textSize="@dimen/textSize_42pt"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/width_60"
                android:layout_marginTop="@dimen/height_48"
                android:layout_marginEnd="@dimen/width_60">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/word_buy_date"
                    android:textColor="@color/color_8c969f"
                    android:textSize="@dimen/textSize_42pt" />

                <TextView
                    android:id="@+id/text_ticket_purchase_history_detail_buy_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_373c42"
                    android:textSize="@dimen/textSize_42pt" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_ticket_purchase_history_detail_expire_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/width_60"
                android:layout_marginTop="@dimen/height_36"
                android:layout_marginEnd="@dimen/width_60">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/word_expire_date2"
                    android:textColor="@color/color_8c969f"
                    android:textSize="@dimen/textSize_42pt" />

                <TextView
                    android:id="@+id/text_ticket_purchase_history_detail_expire_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_373c42"
                    android:textSize="@dimen/textSize_42pt" />

            </RelativeLayout>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/layout_ticket_purchase_history_detail_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_3"
                    android:layout_marginStart="@dimen/width_60"
                    android:layout_marginTop="@dimen/height_60"
                    android:background="@color/color_eef2f6" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/width_60"
                    android:layout_marginTop="@dimen/height_36"
                    android:layout_marginEnd="@dimen/width_60">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/word_cancel_date"
                        android:textColor="@color/color_8c969f"
                        android:textSize="@dimen/textSize_42pt" />

                    <TextView
                        android:id="@+id/text_ticket_purchase_history_detail_cancel_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/color_fb3434"
                        android:textSize="@dimen/textSize_42pt"
                        android:textStyle="bold" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_ticket_purchase_history_detail_cancel_memo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/width_60"
                    android:layout_marginTop="@dimen/height_36"
                    android:layout_marginEnd="@dimen/width_60">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/word_cancel_reason"
                        android:textColor="@color/color_8c969f"
                        android:textSize="@dimen/textSize_42pt" />

                    <TextView
                        android:id="@+id/text_ticket_purchase_history_detail_cancel_memo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:gravity="end"
                        android:textColor="@color/color_373c42"
                        android:textSize="@dimen/textSize_42pt"
                        android:textStyle="bold" />

                </RelativeLayout>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_24"
                android:layout_marginTop="@dimen/height_60"
                android:background="@color/color_f7fafc" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/width_60"
                android:layout_marginTop="@dimen/height_60"
                android:text="@string/word_buy_history"
                android:textColor="@color/color_373c42"
                android:textSize="@dimen/textSize_54pt"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_ticket_purchase_history_detail_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_3"
                android:layout_marginStart="@dimen/width_60"
                android:layout_marginTop="@dimen/height_60"
                android:background="@color/color_eef2f6" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/width_60"
                android:layout_marginTop="@dimen/height_60"
                android:layout_marginEnd="@dimen/width_60">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/word_pay_price"
                    android:textColor="@color/color_373c42"
                    android:textSize="@dimen/textSize_42pt"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_ticket_purchase_history_detail_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_4694fb"
                    android:textSize="@dimen/textSize_60pt"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/width_60"
                android:layout_marginTop="@dimen/height_36"
                android:layout_marginEnd="@dimen/width_60">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/word_pay_method2"
                    android:textColor="@color/color_8c969f"
                    android:textSize="@dimen/textSize_42pt" />

                <TextView
                    android:id="@+id/text_ticket_purchase_history_detail_pay_method"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_373c42"
                    android:textSize="@dimen/textSize_42pt" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_24"
                android:layout_marginTop="@dimen/height_60"
                android:background="@color/color_f7fafc" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/width_60"
                android:layout_marginTop="@dimen/height_60"
                android:text="@string/word_buyer_info2"
                android:textColor="@color/color_373c42"
                android:textSize="@dimen/textSize_54pt"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/width_60"
                android:layout_marginTop="@dimen/height_48"
                android:layout_marginEnd="@dimen/width_60">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/word_contact"
                    android:textColor="@color/color_8c969f"
                    android:textSize="@dimen/textSize_42pt" />

                <TextView
                    android:id="@+id/text_ticket_purchase_history_detail_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_373c42"
                    android:textSize="@dimen/textSize_42pt"
                    android:textStyle="bold" />

            </RelativeLayout>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/height_60"
                android:layout_marginEnd="@dimen/width_60"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_ticket_purchase_history_detail_cancel"
                    android:layout_width="@dimen/width_171"
                    android:layout_height="@dimen/height_75"
                    android:layout_marginEnd="@dimen/width_18"
                    android:background="@drawable/bg_border_d8dee4_radius_6"
                    android:gravity="center"
                    android:text="@string/word_order_cancel"
                    android:textColor="@color/color_525961"
                    android:textSize="@dimen/textSize_36pt"
                    android:visibility="gone"/>


                <TextView
                    android:id="@+id/text_ticket_purchase_history_detail_re_order"
                    android:layout_width="@dimen/width_171"
                    android:layout_height="@dimen/height_75"
                    android:layout_marginEnd="@dimen/width_18"
                    android:background="@drawable/bg_border_d8dee4_radius_6"
                    android:gravity="center"
                    android:text="@string/word_re_order"
                    android:textColor="@color/color_525961"
                    android:textSize="@dimen/textSize_36pt"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/text_ticket_purchase_history_detail_review"
                    android:layout_width="@dimen/width_171"
                    android:layout_height="@dimen/height_75"
                    android:background="@drawable/bg_border_d8dee4_radius_6"
                    android:gravity="center"
                    android:text="@string/word_review_write"
                    android:textColor="@color/color_525961"
                    android:textSize="@dimen/textSize_36pt"
                    android:visibility="gone"/>


            </androidx.appcompat.widget.LinearLayoutCompat>

            <RelativeLayout
                android:id="@+id/layout_ticket_purchase_history_detail_save_point"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_180"
                android:gravity="center_vertical"
                android:layout_marginStart="@dimen/width_60"
                android:layout_marginEnd="@dimen/width_60"
                android:layout_marginTop="@dimen/height_60"
                android:layout_marginBottom="@dimen/height_120"
                android:background="@drawable/bg_f7fafc_radius_12">


                <TextView
                    android:id="@+id/text_ticket_purchase_history_detail_save_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/color_525961"
                    android:textStyle="bold"
                    android:textSize="@dimen/textSize_48pt" />

            </RelativeLayout>


        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>

    <TextView
        android:id="@+id/text_ticket_purchase_history_detail_use"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_168"
        android:background="@color/color_4694fb"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="@dimen/textSize_48pt"
        android:visibility="gone"
        android:text="@string/msg_use"/>

</RelativeLayout>