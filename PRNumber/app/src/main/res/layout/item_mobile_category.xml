<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/height_69"
        android:layout_marginTop="@dimen/height_66"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_mobile_category"
            android:layout_width="@dimen/width_144"
            android:layout_height="@dimen/width_144"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/text_mobile_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_373c42"
            android:textSize="@dimen/textSize_39pt"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/height_12"/>

    </LinearLayout>
</RelativeLayout>
