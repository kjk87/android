<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/height_100">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/width_54"
                android:layout_marginTop="@dimen/height_140"
                android:layout_marginEnd="@dimen/width_54"
                android:src="@drawable/ic_login_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/width_54"
                android:layout_marginTop="@dimen/height_40"
                android:layout_marginEnd="@dimen/width_54"
                android:text="@string/app_name2"
                android:textColor="@color/color_232323"
                android:textSize="@dimen/textSize_86pt" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/width_54"
                android:layout_marginTop="@dimen/height_150"
                android:layout_marginEnd="@dimen/width_54"
                android:text="@string/word_id"
                android:textColor="@color/color_232323"
                android:textSize="@dimen/textSize_36pt"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edit_login_id"
                android:layout_width="@dimen/width_700"
                android:layout_height="@dimen/height_80"
                android:layout_marginStart="@dimen/width_54"
                android:layout_marginTop="@dimen/height_30"
                android:layout_marginEnd="@dimen/width_54"
                android:background="@drawable/underbar_dcdcdc_ffffff_4px"
                android:hint="@string/hint_login_input_id"
                android:maxLength="20"
                android:textColor="@color/color_232323"
                android:textColorHint="@color/color_bbbbbb"
                android:textSize="@dimen/textSize_48pt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/width_54"
                android:layout_marginTop="@dimen/height_110"
                android:layout_marginEnd="@dimen/width_54"
                android:text="@string/word_password"
                android:textColor="@color/color_232323"
                android:textSize="@dimen/textSize_36pt"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edit_login_pw"
                android:layout_width="@dimen/width_700"
                android:layout_height="@dimen/height_80"
                android:layout_marginStart="@dimen/width_54"
                android:layout_marginTop="@dimen/height_30"
                android:layout_marginEnd="@dimen/width_54"
                android:background="@drawable/underbar_dcdcdc_ffffff_4px"
                android:hint="@string/hint_login_input_password"
                android:inputType="textPassword"
                android:maxLength="12"
                android:textColor="@color/color_232323"
                android:textColorHint="@color/color_bbbbbb"
                android:textSize="@dimen/textSize_48pt" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/width_54"
                android:layout_marginTop="@dimen/height_37"
                android:layout_marginEnd="@dimen/width_54"
                android:layout_marginBottom="@dimen/height_37"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_login_auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/btn_check"
                    android:drawablePadding="@dimen/width_24"
                    android:text="@string/word_auto_signIn"
                    android:textColor="@color/color_232323"
                    android:textSize="@dimen/textSize_33pt" />

                <TextView
                    android:id="@+id/text_login"
                    android:layout_width="@dimen/width_210"
                    android:layout_height="@dimen/height_120"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/btn_login_blue"
                    android:gravity="center"
                    android:text="@string/word_login"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_33pt"
                    android:textStyle="bold" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/width_54"
                android:layout_marginEnd="@dimen/width_54"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_login_find_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/width_66"
                    android:background="@drawable/underbar_b7b7b7_ffffff"
                    android:text="@string/msg_find_id"
                    android:textColor="@color/color_b7b7b7"
                    android:textSize="@dimen/textSize_32pt" />

                <TextView
                    android:id="@+id/text_login_find_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/underbar_b7b7b7_ffffff"
                    android:text="@string/msg_find_password"
                    android:textColor="@color/color_b7b7b7"
                    android:textSize="@dimen/textSize_32pt" />

            </LinearLayout>

            <TextView
                android:id="@+id/text_login_signUp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_140"
                android:layout_marginStart="@dimen/width_54"
                android:layout_marginTop="@dimen/height_60"
                android:layout_marginEnd="@dimen/width_54"
                android:background="@drawable/btn_login_white_1"
                android:gravity="center"
                android:text="@string/word_signUp"
                android:textColor="@color/color_579ffb"
                android:textSize="@dimen/textSize_44pt" />


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


</RelativeLayout>
