<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:res="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/width_16"
        android:layout_marginEnd="@dimen/width_16"
        android:orientation="vertical">

        <com.pplus.prnumberuser.apps.common.ui.custom.MaskableFrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_486"
            app:mask="@drawable/bg_online_post_mask"
            app:porterduffxfermode="DST_IN">

            <ImageView
                android:id="@+id/image_product_ship_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/prnumber_default_img" />

            <ImageView
                android:id="@+id/image_product_ship_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/height_20"
                android:layout_marginEnd="@dimen/height_20"
                android:src="@drawable/ic_post_favorite"
                android:visibility="visible" />

            <TextView
                android:id="@+id/text_product_ship_save_point"
                android:layout_width="@dimen/width_221"
                android:layout_height="@dimen/height_56"
                android:textColor="@color/color_579ffb"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="end|bottom"
                android:layout_marginBottom="@dimen/height_22"
                android:layout_marginEnd="@dimen/width_22"
                android:background="@drawable/bg_ticket_save_point"
                android:textSize="@dimen/textSize_32pt" />



        </com.pplus.prnumberuser.apps.common.ui.custom.MaskableFrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:paddingTop="@dimen/width_40">

            <TextView
                android:id="@+id/text_product_ship_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_20"
                android:textColor="@color/color_737373"
                android:textSize="@dimen/textSize_33pt" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_product_ship_discount_ratio"
                    android:layout_width="@dimen/width_100"
                    android:layout_height="@dimen/width_100"
                    android:background="@drawable/bg_product_discount"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_marginEnd="@dimen/width_20"
                    android:textSize="@dimen/textSize_33pt"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/height_10"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/text_product_ship_sale_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_232323"
                            android:layout_marginEnd="@dimen/width_20"
                            android:textSize="@dimen/textSize_33pt" />

                        <TextView
                            android:id="@+id/text_product_ship_origin_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_b7b7b7"
                            android:textSize="@dimen/textSize_24pt" />


                    </LinearLayout>

                    <TextView
                        android:id="@+id/text_product_ship_remain_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_ff4646"
                        android:textStyle="bold"
                        android:textSize="@dimen/textSize_25pt" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>