<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".apps.shippingsite.ui.ShippingSiteConfigActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_shipping_site_config"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/text_shipping_site_config_select"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_171"
        android:background="@color/color_579ffb"
        android:textColor="@color/white"
        android:gravity="center"
        android:textStyle="bold"
        android:text="@string/word_select_shipping_site"/>

</LinearLayout>