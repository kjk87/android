<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_24"
        android:background="@color/color_f7fafc"/>

    <TextView
        android:id="@+id/text_menu_cart_page_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSize_48pt"
        android:layout_marginBottom="@dimen/height_48"
        android:textColor="@color/color_373c42"
        android:layout_marginStart="@dimen/width_60"
        android:visibility="gone"
        android:layout_marginTop="@dimen/height_48"/>

    <View
        android:id="@+id/view_menu_cart_page_name_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_3"
        android:visibility="gone"
        android:background="@color/color_eef2f6"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_menu_cart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <RelativeLayout
            android:id="@+id/layout_menu_cart_not_exist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:drawableTop="@drawable/img_menu_cart_not_exist"
                android:drawablePadding="@dimen/height_21"
                android:text="@string/msg_not_exist_menu_cart"
                android:textColor="@color/color_8c969f"
                android:textSize="@dimen/textSize_48pt"/>

        </RelativeLayout>

    </RelativeLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layout_menu_cart_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_f7fafc"
            android:orientation="vertical"
            android:padding="@dimen/width_60">

            <RelativeLayout
                android:id="@+id/layout_menu_cart_delivery_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSize_42pt"
                    android:textColor="@color/color_373c42"
                    android:layout_centerVertical="true"
                    android:text="@string/word_delivery_price"/>

                <TextView
                    android:id="@+id/text_menu_cart_delivery_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSize_42pt"
                    android:textColor="@color/color_373c42"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_3"
                android:layout_marginTop="@dimen/height_30"
                android:background="@color/color_e7edf2"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_36">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSize_42pt"
                    android:textColor="@color/color_373c42"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:text="@string/word_total_order_price"/>

                <TextView
                    android:id="@+id/text_menu_cart_total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSize_60pt"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_579ffb"
                    android:textStyle="bold"/>
            </RelativeLayout>


        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layout_menu_cart_order"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_168"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_menu_cart_add_menu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color_373c42"
                android:textSize="@dimen/textSize_48pt"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="@string/msg_add_menu"/>

            <TextView
                android:id="@+id/text_menu_cart_order"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color_579ffb"
                android:textSize="@dimen/textSize_48pt"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="@string/msg_order"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <TextView
            android:id="@+id/text_menu_cart_off"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_168"
            android:gravity="center"
            android:background="@color/color_a9b0b7"
            android:textSize="@dimen/textSize_48pt"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:visibility="gone"
            android:text="@string/msg_not_ready_now"/>

    </androidx.appcompat.widget.LinearLayoutCompat>



</androidx.appcompat.widget.LinearLayoutCompat>
