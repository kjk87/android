<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".apps.bol.ui.CashExchangeActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_360">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_168"
                    android:background="@drawable/bg_border_579ffb_radius_30"
                    android:layout_marginStart="@dimen/width_72"
                    android:layout_marginEnd="@dimen/width_72"
                    android:paddingStart="@dimen/width_60"
                    android:paddingEnd="@dimen/width_60"
                    android:layout_centerInParent="true">


                    <TextView
                        android:id="@+id/text_main_location_point2_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textSize_48pt"
                        android:textColor="@color/color_151522"
                        android:textStyle="bold"
                        android:drawableStart="@drawable/ic_cash_blue"
                        android:text="@string/word_usable_cash"
                        android:drawablePadding="@dimen/width_12"
                        android:layout_marginEnd="@dimen/width_48"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:id="@+id/text_cash_exchange_retention_bol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:textColor="@color/color_579ffb"
                        android:textSize="@dimen/textSize_72pt"
                        android:layout_toEndOf="@id/text_main_location_point2_title"
                        android:textStyle="bold" />

                </RelativeLayout>


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_3"
                android:background="@color/color_ececec"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/word_change_cash_amount"
                android:textColor="@color/color_232323"
                android:textSize="@dimen/textSize_42pt"
                android:layout_marginTop="@dimen/height_72"
                android:layout_marginStart="@dimen/width_48"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/edit_cash_exchange_amount"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_150"
                android:layout_marginTop="@dimen/height_24"
                android:background="@drawable/bg_border_e8e8e8_radius_15"
                android:layout_marginStart="@dimen/width_48"
                android:layout_marginEnd="@dimen/width_48"
                android:paddingStart="@dimen/width_24"
                android:paddingEnd="@dimen/width_24"
                android:gravity="center_vertical"
                android:hint="@string/hint_input_change_cash_amount"
                android:inputType="number"
                android:textColor="@color/color_232323"
                android:textColorHint="@color/color_bbbbbb"
                android:textSize="@dimen/textSize_36pt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_110"
                android:text="@string/word_account_name"
                android:textColor="@color/color_232323"
                android:textSize="@dimen/textSize_42pt"
                android:layout_marginStart="@dimen/width_48"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/edit_cash_exchange_account_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_150"
                android:layout_marginTop="@dimen/height_24"
                android:background="@drawable/bg_border_e8e8e8_radius_15"
                android:layout_marginStart="@dimen/width_48"
                android:layout_marginEnd="@dimen/width_48"
                android:paddingStart="@dimen/width_24"
                android:paddingEnd="@dimen/width_24"
                android:gravity="center_vertical"
                android:hint="@string/hint_input_account_name"
                android:textColor="@color/color_232323"
                android:textColorHint="@color/color_bbbbbb"
                android:textSize="@dimen/textSize_36pt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_110"
                android:text="@string/word_bank_name"
                android:textColor="@color/color_232323"
                android:textSize="@dimen/textSize_42pt"
                android:layout_marginStart="@dimen/width_48"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/text_cash_exchange_bank"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_150"
                android:layout_marginTop="@dimen/height_24"
                android:background="@drawable/bg_border_e8e8e8_radius_15"
                android:layout_marginStart="@dimen/width_48"
                android:layout_marginEnd="@dimen/width_48"
                android:paddingStart="@dimen/width_24"
                android:paddingEnd="@dimen/width_24"
                android:drawableEnd="@drawable/ic_dropdown_arrow"
                android:gravity="center_vertical"
                android:hint="@string/hint_select_bank"
                android:textColor="@color/color_232323"
                android:textColorHint="@color/color_bbbbbb"
                android:textSize="@dimen/textSize_36pt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_110"
                android:text="@string/word_account_number"
                android:textColor="@color/color_232323"
                android:textSize="@dimen/textSize_42pt"
                android:layout_marginStart="@dimen/width_48"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edit_cash_exchange_account_number"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_150"
                android:layout_marginTop="@dimen/height_24"
                android:background="@drawable/bg_border_e8e8e8_radius_15"
                android:layout_marginStart="@dimen/width_48"
                android:layout_marginEnd="@dimen/width_48"
                android:paddingStart="@dimen/width_24"
                android:paddingEnd="@dimen/width_24"
                android:gravity="center_vertical"
                android:hint="@string/hint_input_account_number"
                android:inputType="number"
                android:textColor="@color/color_232323"
                android:textColorHint="@color/color_bbbbbb"
                android:textSize="@dimen/textSize_36pt" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/msg_cash_exchange_desc2"
                android:textColor="@color/color_4f4f4f"
                android:layout_marginTop="@dimen/height_72"
                android:paddingTop="@dimen/height_24"
                android:paddingEnd="@dimen/width_48"
                android:paddingStart="@dimen/width_48"
                android:paddingBottom="@dimen/height_24"
                android:background="@color/color_d8d8d8"
                android:textSize="@dimen/textSize_34pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_cash_exchange_request"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_140"
                android:layout_marginTop="@dimen/height_60"
                android:layout_marginBottom="@dimen/height_100"
                android:background="@drawable/bg_579ffb_radius_15"
                android:layout_marginStart="@dimen/width_48"
                android:layout_marginEnd="@dimen/width_48"
                android:gravity="center"
                android:text="@string/msg_req_cash_exchange"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_39pt" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>