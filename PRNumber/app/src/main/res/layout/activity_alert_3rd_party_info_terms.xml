<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bf000000"
    android:fitsSystemWindows="true"
    tools:context=".apps.goods.ui.AlertCancelCompleteActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/width_90"
        android:layout_marginEnd="@dimen/width_90"
        android:background="@color/white"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_187"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.pplus.prnumberuser.apps.common.ui.custom.MaskableFrameLayout
                android:layout_width="@dimen/width_124"
                android:layout_height="@dimen/width_124"
                android:layout_marginEnd="@dimen/width_35"
                android:layout_marginStart="@dimen/width_38"
                app:mask="@drawable/img_page_profile_mask"
                app:porterduffxfermode="DST_IN">

                <ImageView
                    android:id="@+id/image_3rd_party_page"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_shop_profile_default" />

            </com.pplus.prnumberuser.apps.common.ui.custom.MaskableFrameLayout>

            <TextView
                android:id="@+id/text_3rd_party_page_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_41pt"
                android:textStyle="bold" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_4"
            android:background="@color/color_bbbbbb"
            android:layout_marginStart="@dimen/width_23"
            android:layout_marginEnd="@dimen/width_23"/>

        <TextView
            android:id="@+id/text_3rd_party_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_54"
            android:textSize="@dimen/textSize_36pt"
            android:layout_marginStart="@dimen/width_72"
            android:layout_marginEnd="@dimen/width_72"
            android:textColor="@color/color_333333"
            android:text="@string/html_3rd_party_terms_desc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_55"
            android:textSize="@dimen/textSize_36pt"
            android:layout_marginStart="@dimen/width_72"
            android:layout_marginEnd="@dimen/width_72"
            android:textColor="@color/color_333333"
            android:textStyle="bold"
            android:text="@string/msg_3rd_party_terms_desc1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_55"
            android:textSize="@dimen/textSize_36pt"
            android:layout_marginStart="@dimen/width_72"
            android:layout_marginEnd="@dimen/width_72"
            android:textColor="@color/color_333333"
            android:text="@string/msg_3rd_party_terms_desc2" />

        <TextView
            android:id="@+id/text_3rd_party_policy_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_55"
            android:textSize="@dimen/textSize_36pt"
            android:layout_marginStart="@dimen/width_72"
            android:layout_marginEnd="@dimen/width_72"
            android:textColor="@color/color_333333"
            android:textStyle="bold"
            android:text="@string/format_page_service_agree" />

        <LinearLayout
            android:id="@+id/layout_3rd_party_policy_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_55"
            android:layout_marginStart="@dimen/width_72"
            android:layout_marginEnd="@dimen/width_72"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_171"
            android:layout_marginTop="@dimen/height_33"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_3rd_party_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@color/color_565656"
                android:gravity="center"
                android:text="@string/word_cancel"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_39pt" />

            <TextView
                android:id="@+id/text_3rd_party_agree_join"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:background="@color/color_579ffb"
                android:gravity="center"
                android:text="@string/msg_agree_join"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_39pt" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>