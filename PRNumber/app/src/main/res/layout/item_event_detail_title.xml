<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/height_30"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_event_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_dfdfdf"
            android:textSize="@dimen/textSize_36pt" />

        <TextView
            android:id="@+id/text_event_detail_compulsory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_d85a5a"
            android:textSize="@dimen/textSize_36pt"
            android:visibility="gone"
            android:text="*"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layout_event_detail_title_contents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height_12"
        android:orientation="vertical"/>


</androidx.appcompat.widget.LinearLayoutCompat>
