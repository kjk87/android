<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/width_168"
        android:layout_height="@dimen/width_168">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_subscription_stamp_nor"
            android:scaleType="fitXY"/>

        <RelativeLayout
            android:id="@+id/layout_subscription_log_use"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_subscription_stamp_sel">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_centerInParent="true">

                <TextView
                    android:id="@+id/text_subscription_log_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSize_48pt"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/text_subscription_log_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSize_30pt"
                    android:textColor="@color/white"/>

            </androidx.appcompat.widget.LinearLayoutCompat>



        </RelativeLayout>
    </RelativeLayout>


</LinearLayout>