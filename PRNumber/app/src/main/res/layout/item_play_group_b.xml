<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_447"
        android:layout_marginBottom="@dimen/height_36">

        <ImageView
            android:id="@+id/image_play_group_b_banner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>


        <TextView
            android:id="@+id/text_play_group_b_winner"
            android:layout_width="@dimen/width_246"
            android:layout_height="@dimen/height_72"
            android:textSize="@dimen/textSize_33pt"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="@string/msg_view_winner"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/height_100"
            android:layout_marginStart="@dimen/width_60"
            android:visibility="gone"
            android:background="@drawable/bg_4694fb_radius_500"/>
    </RelativeLayout>


</RelativeLayout>