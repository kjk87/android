<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".apps.page.ui.PageInfoActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/height_120"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/width_60"
                android:layout_marginTop="@dimen/height_60"
                android:drawableStart="@drawable/ic_page_info"
                android:drawablePadding="@dimen/width_18"
                android:text="@string/word_store_info3"
                android:textColor="@color/color_373c42"
                android:textSize="@dimen/textSize_60pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_page_introduction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/width_60"
                android:layout_marginTop="@dimen/height_36"
                android:layout_marginEnd="@dimen/width_60"
                android:textColor="@color/color_373c42"
                android:textSize="@dimen/textSize_39pt" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/width_60"
                android:layout_marginTop="@dimen/height_36"
                android:layout_marginEnd="@dimen/width_60"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/width_270"
                    android:layout_height="wrap_content"
                    android:text="@string/word_opening_hours"
                    android:textColor="@color/color_8c969f"
                    android:textSize="@dimen/textSize_39pt" />

                <TextView
                    android:id="@+id/text_page_business_hours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_373c42"
                    android:textSize="@dimen/textSize_39pt" />


            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/width_60"
                android:layout_marginTop="@dimen/height_24"
                android:layout_marginEnd="@dimen/width_60"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/width_270"
                    android:layout_height="wrap_content"
                    android:text="@string/word_holiday"
                    android:textColor="@color/color_8c969f"
                    android:textSize="@dimen/textSize_39pt" />

                <TextView
                    android:id="@+id/text_page_day_off"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_373c42"
                    android:textSize="@dimen/textSize_39pt" />


            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/width_60"
                android:layout_marginTop="@dimen/height_24"
                android:layout_marginEnd="@dimen/width_60"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/width_270"
                    android:layout_height="wrap_content"
                    android:text="@string/word_break_time"
                    android:textColor="@color/color_8c969f"
                    android:textSize="@dimen/textSize_39pt" />

                <TextView
                    android:id="@+id/text_page_time_off"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_373c42"
                    android:textSize="@dimen/textSize_39pt" />


            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/width_60"
                android:layout_marginTop="@dimen/height_24"
                android:layout_marginEnd="@dimen/width_60"
                android:visibility="gone"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/width_270"
                    android:layout_height="wrap_content"
                    android:text="@string/word_phone_number"
                    android:textColor="@color/color_8c969f"
                    android:textSize="@dimen/textSize_39pt" />

                <TextView
                    android:id="@+id/text_page_phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/width_24"
                    android:background="@drawable/underbar_373c42_ffffff"
                    android:textColor="@color/color_373c42"
                    android:textSize="@dimen/textSize_39pt" />

                <TextView
                    android:id="@+id/text_page_call"
                    android:layout_width="@dimen/width_150"
                    android:layout_height="@dimen/height_60"
                    android:background="@drawable/bg_eef2f6_radius_96"
                    android:gravity="center"
                    android:text="@string/msg_call_phone"
                    android:textColor="@color/color_525961"
                    android:textSize="@dimen/textSize_33pt" />


            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/width_60"
                android:layout_marginTop="@dimen/height_24"
                android:layout_marginEnd="@dimen/width_60"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/width_270"
                    android:layout_height="wrap_content"
                    android:text="@string/word_address"
                    android:textColor="@color/color_8c969f"
                    android:textSize="@dimen/textSize_39pt" />

                <TextView
                    android:id="@+id/text_page_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="@dimen/width_483"
                    android:layout_marginEnd="@dimen/width_24"
                    android:textColor="@color/color_373c42"
                    android:textSize="@dimen/textSize_39pt" />

                <TextView
                    android:id="@+id/text_page_view_map"
                    android:layout_width="@dimen/width_150"
                    android:layout_height="@dimen/height_60"
                    android:background="@drawable/bg_eef2f6_radius_96"
                    android:gravity="center"
                    android:text="@string/word_view_map"
                    android:textColor="@color/color_525961"
                    android:textSize="@dimen/textSize_33pt" />


            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/layout_page_order_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_3"
                    android:layout_marginTop="@dimen/height_60"
                    android:background="@color/color_eef2f6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/width_60"
                    android:layout_marginTop="@dimen/height_60"
                    android:drawableStart="@drawable/ic_order_info"
                    android:drawablePadding="@dimen/width_18"
                    android:text="@string/word_benefit_info"
                    android:textColor="@color/color_373c42"
                    android:textSize="@dimen/textSize_60pt"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_page_order_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/width_60"
                    android:layout_marginTop="@dimen/height_36"
                    android:layout_marginEnd="@dimen/width_60"
                    android:textColor="@color/color_373c42"
                    android:textSize="@dimen/textSize_39pt" />

            </androidx.appcompat.widget.LinearLayoutCompat>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_3"
                android:layout_marginTop="@dimen/height_60"
                android:background="@color/color_eef2f6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/width_60"
                android:layout_marginTop="@dimen/height_60"
                android:drawableStart="@drawable/ic_delivery_info"
                android:drawablePadding="@dimen/width_18"
                android:text="@string/word_delivery_info"
                android:textColor="@color/color_373c42"
                android:textSize="@dimen/textSize_60pt"
                android:textStyle="bold" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/width_60"
                android:layout_marginTop="@dimen/height_36"
                android:layout_marginEnd="@dimen/width_60"
                android:background="@color/color_eef2f6"
                android:orientation="vertical"
                android:paddingStart="@dimen/width_60"
                android:paddingEnd="@dimen/width_60"
                android:paddingBottom="@dimen/height_48"
                android:paddingTop="@dimen/height_48">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/word_order_price"
                        android:textColor="@color/color_6e7780"
                        android:textSize="@dimen/textSize_39pt" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="@string/word_delivery_price"
                        android:textColor="@color/color_6e7780"
                        android:textSize="@dimen/textSize_39pt" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_3"
                    android:layout_marginTop="@dimen/height_30"
                    android:background="@color/color_e7edf2" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_30">

                    <TextView
                        android:id="@+id/text_page_order_min_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_373c42"
                        android:textSize="@dimen/textSize_39pt" />

                    <TextView
                        android:id="@+id/text_page_delivery_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/color_373c42"
                        android:textSize="@dimen/textSize_39pt" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_page_free_delivery_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_24">

                    <TextView
                        android:id="@+id/text_page_free_delivery_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_373c42"
                        android:textSize="@dimen/textSize_39pt" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="@string/word_free_delivery_price"
                        android:textColor="@color/color_373c42"
                        android:textSize="@dimen/textSize_39pt" />

                </RelativeLayout>


            </androidx.appcompat.widget.LinearLayoutCompat>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_3"
                android:layout_marginTop="@dimen/height_60"
                android:background="@color/color_eef2f6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/width_60"
                android:layout_marginTop="@dimen/height_60"
                android:drawableStart="@drawable/ic_company_info"
                android:drawablePadding="@dimen/width_18"
                android:text="@string/word_company_info"
                android:textColor="@color/color_373c42"
                android:textSize="@dimen/textSize_60pt"
                android:textStyle="bold" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/width_60"
                android:layout_marginTop="@dimen/height_36"
                android:layout_marginEnd="@dimen/width_60"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/width_270"
                    android:layout_height="wrap_content"
                    android:text="@string/word_company_name"
                    android:textColor="@color/color_8c969f"
                    android:textSize="@dimen/textSize_39pt" />

                <TextView
                    android:id="@+id/text_page_company_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_373c42"
                    android:textSize="@dimen/textSize_39pt" />


            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/width_60"
                android:layout_marginTop="@dimen/height_24"
                android:layout_marginEnd="@dimen/width_60"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/width_270"
                    android:layout_height="wrap_content"
                    android:text="@string/word_company_number"
                    android:textColor="@color/color_8c969f"
                    android:textSize="@dimen/textSize_39pt" />

                <TextView
                    android:id="@+id/text_page_company_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_373c42"
                    android:textSize="@dimen/textSize_39pt" />


            </androidx.appcompat.widget.LinearLayoutCompat>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_3"
                android:layout_marginTop="@dimen/height_60"
                android:background="@color/color_eef2f6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/width_60"
                android:layout_marginTop="@dimen/height_60"
                android:drawableStart="@drawable/ic_origin_info"
                android:drawablePadding="@dimen/width_18"
                android:text="@string/word_origin_place_info"
                android:textColor="@color/color_373c42"
                android:textSize="@dimen/textSize_60pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_page_origin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/width_60"
                android:layout_marginTop="@dimen/height_36"
                android:layout_marginEnd="@dimen/width_60"
                android:textColor="@color/color_373c42"
                android:textSize="@dimen/textSize_39pt" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>