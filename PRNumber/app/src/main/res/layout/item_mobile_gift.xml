<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/width_72"
        android:layout_marginTop="@dimen/height_60"
        android:layout_marginBottom="@dimen/height_60"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_mobile_gift"
            android:layout_width="@dimen/width_240"
            android:layout_height="@dimen/width_240"
            android:layout_marginEnd="@dimen/width_40"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_mobile_gift_company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_6e7780"
                android:textSize="@dimen/textSize_39pt" />

            <TextView
                android:id="@+id/text_mobile_gift_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:layout_marginTop="@dimen/height_12"
                android:textColor="@color/color_373c42"
                android:textSize="@dimen/textSize_42pt"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/height_48"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/width_60"
                    android:layout_height="@dimen/width_60"
                    android:layout_marginEnd="@dimen/width_24"
                    android:src="@drawable/ic_cash_blue"/>

                <TextView
                    android:id="@+id/text_mobile_gift_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/color_373c42"
                    android:textSize="@dimen/textSize_39pt" />


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_3"
        android:layout_marginTop="@dimen/height_24"
        android:background="@color/color_e8ecf0"/>

</LinearLayout>