<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <View
        android:layout_width="@dimen/width_72"
        android:layout_height="@dimen/height_54"
        android:background="@drawable/triangle"
        android:layout_marginEnd="@dimen/width_12"
        android:layout_marginBottom="@dimen/height_minus_20"
        android:layout_gravity="end"/>

    <TextView
        android:id="@+id/text_cart_toast"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_114"
        android:background="@drawable/bg_373c42_radius_15"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_36pt"
        android:minWidth="@dimen/width_465" />

</androidx.appcompat.widget.LinearLayoutCompat>
