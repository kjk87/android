<?xml version="1.0" encoding="utf-8"?>
<com.pplus.prnumberuser.apps.common.ui.custom.swipeLayout.SwipeRevealLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_207"
    android:orientation="vertical"
    app:dragEdge="right"
    app:mode="same_level">

    <LinearLayout
        android:layout_width="@dimen/width_207"
        android:layout_height="match_parent"
        android:background="@color/color_3c3c3c"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_alarm_leave"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:scaleType="center"
            android:gravity="center"
            android:src="@drawable/ic_notification_delete"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_alarm"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:paddingEnd="@dimen/width_54"
            android:paddingStart="@dimen/width_54">

            <TextView
                android:id="@+id/text_alarm_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:textColor="@color/color_232323"
                android:textStyle="bold"
                android:textSize="@dimen/textSize_42pt"/>

            <TextView
                android:id="@+id/text_alarm_contents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:textColor="@color/color_737373"
                android:textSize="@dimen/textSize_35pt"/>


            <TextView
                android:id="@+id/text_alarm_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_2"
                android:textColor="@color/color_808080"
                android:textSize="@dimen/textSize_33pt"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_2"
            android:layout_alignParentBottom="true"
            android:background="@color/color_eaeaea"/>

    </RelativeLayout>

</com.pplus.prnumberuser.apps.common.ui.custom.swipeLayout.SwipeRevealLayout>