<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/gift_animation"/>

    <com.pplus.prnumberuser.apps.event.data.GraduallyTextView
        android:id="@+id/graduallyTextView"
        android:layout_width="@dimen/width_350"
        android:layout_height="wrap_content"
        android:layout_below="@id/animation_view"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:text="@string/msg_checking_event_result"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_39pt"/>

</RelativeLayout>
