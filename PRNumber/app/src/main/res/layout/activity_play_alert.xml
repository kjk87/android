<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bf000000"
    tools:context=".apps.event.ui.EventAlertActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginEnd="@dimen/width_90"
        android:layout_marginStart="@dimen/width_90"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_play_alert_character"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_180"
            android:src="@drawable/img_play_popup_character_1"/>

        <TextView
            android:id="@+id/text_play_alert_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/width_54"
            android:layout_marginStart="@dimen/width_54"
            android:layout_marginTop="@dimen/height_40"
            android:gravity="center"
            android:textColor="@color/color_232323"
            android:textSize="@dimen/textSize_64pt"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/text_play_alert_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/width_54"
            android:layout_marginStart="@dimen/width_54"
            android:layout_marginTop="@dimen/height_10"
            android:gravity="center"
            android:textColor="@color/color_232323"
            android:textSize="@dimen/textSize_46pt"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_171"
            android:layout_marginTop="@dimen/height_180"
            android:background="@color/color_579ffb"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_play_alert_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color_579ffb"
                android:gravity="center"
                android:text="@string/word_cancel"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_39pt"/>

                <View
                    android:layout_width="@dimen/width_2"
                    android:layout_height="@dimen/height_45"
                    android:layout_gravity="center_vertical"
                    android:background="@color/color_8bbbf8"/>

            <TextView
                android:id="@+id/text_play_alert_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color_579ffb"
                android:gravity="center"
                android:text="@string/msg_event_join"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_39pt"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>