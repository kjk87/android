<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layout_main_subscription"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_348"
        android:background="@drawable/bg_border_ececec_radius_30"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/width_48"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/width_15"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_main_subscription_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_1d1d1f"
                    android:textSize="@dimen/textSize_42pt"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_24"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_main_subscription_sale_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_ff4646"
                        android:layout_marginEnd="@dimen/width_12"
                        android:textSize="@dimen/textSize_48pt"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/text_main_subscription_origin_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_b7b7b7"
                        android:textSize="@dimen/textSize_30pt" />

                </LinearLayout>

                <TextView
                    android:id="@+id/text_main_subscription_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_999999"
                    android:layout_marginTop="@dimen/height_12"
                    android:textSize="@dimen/textSize_30pt"/>


            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layout_main_subscription_end"
            android:layout_width="@dimen/width_243"
            android:layout_height="match_parent"
            android:background="@drawable/bg_4694fb_right_radius_30">


            <TextView
                android:id="@+id/text_main_subscription_discount_ratio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_579ffb"
                android:textSize="@dimen/textSize_36pt"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true"
                android:gravity="center"/>

            <View
                android:layout_width="@dimen/width_6"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/width_10"
                android:layerType="software"
                android:background="@drawable/vertical_dot_line"/>

        </RelativeLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>


</RelativeLayout>