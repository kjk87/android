<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_120"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/width_60"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_goods_option_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_232323"
            android:layout_marginEnd="@dimen/width_10"
            android:textSize="@dimen/textSize_38pt" />
        <TextView
            android:id="@+id/text_goods_option_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_232323"
            android:visibility="gone"
            android:textSize="@dimen/textSize_38pt" />

    </LinearLayout>

    <TextView
        android:id="@+id/text_goods_option_item_cont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:textColor="@color/color_232323"
        android:visibility="gone"
        android:textSize="@dimen/textSize_32pt" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_2"
        android:layout_alignParentBottom="true"
        android:background="@color/color_f0f0f0" />

</RelativeLayout>