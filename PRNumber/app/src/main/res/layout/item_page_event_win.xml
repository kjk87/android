<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height_23"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.pplus.prnumberuser.apps.common.ui.custom.MaskableFrameLayout
            android:layout_width="@dimen/width_90"
            android:layout_height="@dimen/width_90"
            android:layout_marginEnd="@dimen/width_30"
            app:mask="@drawable/ic_mypage_profile_mask"
            app:porterduffxfermode="DST_IN">

            <ImageView
                android:id="@+id/image_page_event_win_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />
        </com.pplus.prnumberuser.apps.common.ui.custom.MaskableFrameLayout>

        <TextView
            android:id="@+id/text_page_event_win_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_737373"
            android:textSize="@dimen/textSize_30pt" />

    </LinearLayout>
</LinearLayout>