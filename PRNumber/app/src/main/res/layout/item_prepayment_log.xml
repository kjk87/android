<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/height_33"
    android:paddingBottom="@dimen/height_33"
    android:background="@color/white"
    android:paddingEnd="@dimen/width_60"
    android:paddingStart="@dimen/width_60">


    <TextView
        android:id="@+id/text_prepayment_log_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_8c969f"
        android:layout_centerVertical="true"
        android:textSize="@dimen/textSize_39pt"/>

    <TextView
        android:id="@+id/text_prepayment_log_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:textColor="@color/color_ff4026"
        android:textSize="@dimen/textSize_39pt"/>

</RelativeLayout>