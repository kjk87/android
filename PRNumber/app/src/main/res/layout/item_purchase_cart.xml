<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/width_60"
        android:layout_marginEnd="@dimen/width_60"
        android:layout_marginTop="@dimen/height_36">

        <TextView
            android:id="@+id/text_purchase_cart_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_373c42"
            android:layout_toLeftOf="@id/text_purchase_cart_price"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="@dimen/width_30"
            android:layout_centerVertical="true"
            android:textSize="@dimen/textSize_42pt" />

        <TextView
            android:id="@+id/text_purchase_cart_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_373c42"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:textSize="@dimen/textSize_42pt"
            android:textStyle="bold"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/text_purchase_cart_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_6e7780"
        android:layout_marginTop="@dimen/height_12"
        android:layout_marginStart="@dimen/width_60"
        android:textSize="@dimen/textSize_36pt" />



</androidx.appcompat.widget.LinearLayoutCompat>