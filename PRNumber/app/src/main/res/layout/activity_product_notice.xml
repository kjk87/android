<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".apps.product.ui.ProductNoticeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/width_54"
            android:layout_marginTop="@dimen/height_30"
            android:layout_marginEnd="@dimen/width_54"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_product_notice_product_image"
                android:layout_width="@dimen/width_240"
                android:layout_height="@dimen/width_240"
                android:layout_marginEnd="@dimen/width_30"
                android:scaleType="centerCrop"
                android:src="@drawable/prnumber_default_img" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_product_notice_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_232323"
                    android:textSize="@dimen/textSize_45pt"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_product_notice_product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_12"
                    android:textColor="@color/color_ff4646"
                    android:textSize="@dimen/textSize_51pt" />

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/height_48">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_product_notice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/text_product_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_232323"
                android:layout_marginStart="@dimen/width_54"
                android:layout_marginEnd="@dimen/width_54"
                android:textSize="@dimen/textSize_45pt"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_279"
            android:layout_alignParentBottom="true"
            android:background="@color/color_f8f8f8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/width_54"
                android:layout_marginEnd="@dimen/width_54"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/word_legal_notice"
                    android:textColor="@color/color_232323"
                    android:textSize="@dimen/textSize_45pt"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_30"
                    android:text="@string/msg_legal_notice_desc"
                    android:textColor="@color/color_808080"
                    android:textSize="@dimen/textSize_36pt" />

            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>



</RelativeLayout>