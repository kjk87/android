<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_207"
        android:paddingLeft="@dimen/width_54"
        android:paddingRight="@dimen/width_54">


        <TextView
            android:id="@+id/text_recommend_history_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/textSize_39pt"
            android:textColor="@color/color_232323"/>

        <TextView
            android:id="@+id/text_recommend_history_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:textSize="@dimen/textSize_33pt"
            android:textColor="@color/color_808080"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_2"
            android:layout_alignParentBottom="true"
            android:background="@color/color_eaeaea"/>


    </RelativeLayout>


</LinearLayout>