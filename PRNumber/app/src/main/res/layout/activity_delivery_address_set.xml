<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".apps.delivery.ui.DeliveryAddressSetActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layout_delivery_address_set_search"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_156"
                android:layout_marginStart="@dimen/width_60"
                android:layout_marginTop="@dimen/height_36"
                android:layout_marginEnd="@dimen/width_60"
                android:background="@drawable/bg_border_eef2f6_radius_12">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/width_48"
                    android:drawableStart="@drawable/ic_delivery_search"
                    android:drawablePadding="@dimen/width_36"
                    android:text="@string/hint_delivery_address_set"
                    android:textColor="@color/color_a9b0b7"
                    android:textSize="@dimen/textSize_48pt" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_45">

                <TextView
                    android:id="@+id/text_delivery_address_set_find_current_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:text="@string/msg_find_current_location"
                    android:textColor="@color/color_373c42"
                    android:textSize="@dimen/textSize_42pt" />

                <ImageView
                    android:id="@+id/image_delivery_address_set_find_current_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/width_18"
                    android:layout_toLeftOf="@id/text_delivery_address_set_find_current_location"
                    android:src="@drawable/ic_delivery_address_current_location" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_24"
                android:layout_marginTop="@dimen/height_60"
                android:background="@color/color_f7fafc" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/width_60"
                android:layout_marginTop="@dimen/height_60"
                android:text="@string/word_recent_address"
                android:textColor="@color/color_373c42"
                android:textSize="@dimen/textSize_48pt"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_delivery_address_set"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_12"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>