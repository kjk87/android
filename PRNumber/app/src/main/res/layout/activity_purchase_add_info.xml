<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".apps.product.ui.PurchaseAddInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/height_100">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/width_54"
                    android:layout_marginTop="@dimen/height_30"
                    android:layout_marginEnd="@dimen/width_54"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_purchase_add_info_product_image"
                        android:layout_width="@dimen/width_240"
                        android:layout_height="@dimen/width_240"
                        android:layout_marginEnd="@dimen/width_30"
                        android:scaleType="centerCrop"
                        android:src="@drawable/prnumber_default_img" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_purchase_add_info_product_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_232323"
                            android:textSize="@dimen/textSize_45pt"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/text_purchase_add_info_product_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/height_12"
                            android:textColor="@color/color_ff4646"
                            android:textSize="@dimen/textSize_51pt" />

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/width_54"
                    android:layout_marginTop="@dimen/height_90"
                    android:layout_marginEnd="@dimen/width_54"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/width_240"
                        android:layout_height="wrap_content"
                        android:text="@string/word_shipping_method"
                        android:textColor="@color/color_808080"
                        android:textSize="@dimen/textSize_45pt" />

                    <TextView
                        android:id="@+id/text_purchase_add_info_delivery_method"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_232323"
                        android:textSize="@dimen/textSize_45pt" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/width_54"
                    android:layout_marginTop="@dimen/height_42"
                    android:layout_marginEnd="@dimen/width_54"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/width_240"
                        android:layout_height="wrap_content"
                        android:text="@string/word_shipping_fee"
                        android:textColor="@color/color_808080"
                        android:textSize="@dimen/textSize_45pt" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_purchase_add_info_delivery_fee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_232323"
                            android:textSize="@dimen/textSize_45pt" />

                        <TextView
                            android:id="@+id/text_purchase_add_info_delivery_min_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/height_24"
                            android:textColor="@color/color_232323"
                            android:textSize="@dimen/textSize_45pt" />

                        <TextView
                            android:id="@+id/text_purchase_add_info_delivery_add_fee1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/height_24"
                            android:textColor="@color/color_232323"
                            android:textSize="@dimen/textSize_45pt" />

                        <TextView
                            android:id="@+id/text_purchase_add_info_delivery_add_fee2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/height_24"
                            android:textColor="@color/color_232323"
                            android:textSize="@dimen/textSize_45pt" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/width_54"
                    android:layout_marginTop="@dimen/height_42"
                    android:layout_marginEnd="@dimen/width_54"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/width_240"
                        android:layout_height="wrap_content"
                        android:text="@string/word_shipping_pay_method"
                        android:textColor="@color/color_808080"
                        android:textSize="@dimen/textSize_45pt" />

                    <TextView
                        android:id="@+id/text_purchase_add_info_delivery_pay_method"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_232323"
                        android:textSize="@dimen/textSize_45pt" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_purchase_add_info_model_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/width_54"
                    android:layout_marginTop="@dimen/height_90"
                    android:layout_marginEnd="@dimen/width_54"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/width_240"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/word_model_name"
                        android:textColor="@color/color_808080"
                        android:textSize="@dimen/textSize_45pt" />

                    <TextView
                        android:id="@+id/text_purchase_add_info_model_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_232323"
                        android:textSize="@dimen/textSize_45pt" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_purchase_add_info_model_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/width_54"
                    android:layout_marginTop="@dimen/height_42"
                    android:layout_marginEnd="@dimen/width_54"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/width_240"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/word_model_code"
                        android:textColor="@color/color_808080"
                        android:textSize="@dimen/textSize_45pt" />

                    <TextView
                        android:id="@+id/text_purchase_add_info_model_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_232323"
                        android:textSize="@dimen/textSize_45pt" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_purchase_add_info_brand_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/width_54"
                    android:layout_marginTop="@dimen/height_42"
                    android:layout_marginEnd="@dimen/width_54"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/width_240"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/word_brand_name"
                        android:textColor="@color/color_808080"
                        android:textSize="@dimen/textSize_45pt" />

                    <TextView
                        android:id="@+id/text_purchase_add_info_brand_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_232323"
                        android:textSize="@dimen/textSize_45pt" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_purchase_add_info_manufacturer_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/width_54"
                    android:layout_marginTop="@dimen/height_42"
                    android:layout_marginEnd="@dimen/width_54"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/width_240"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/word_manufacturer_name"
                        android:textColor="@color/color_808080"
                        android:textSize="@dimen/textSize_45pt" />

                    <TextView
                        android:id="@+id/text_purchase_add_info_manufacturer_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_232323"
                        android:textSize="@dimen/textSize_45pt" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_purchase_add_info_origin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/width_54"
                    android:layout_marginTop="@dimen/height_42"
                    android:layout_marginEnd="@dimen/width_54"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/width_240"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/word_origin"
                        android:textColor="@color/color_808080"
                        android:textSize="@dimen/textSize_45pt" />

                    <TextView
                        android:id="@+id/text_purchase_add_info_origin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_232323"
                        android:textSize="@dimen/textSize_45pt" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_purchase_add_info_manufacture_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/width_54"
                    android:layout_marginTop="@dimen/height_42"
                    android:layout_marginEnd="@dimen/width_54"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/width_240"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/word_manufacture_date"
                        android:textColor="@color/color_808080"
                        android:textSize="@dimen/textSize_45pt" />

                    <TextView
                        android:id="@+id/text_purchase_add_info_manufacture_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_232323"
                        android:textSize="@dimen/textSize_45pt" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_purchase_add_info_auth_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/width_54"
                    android:layout_marginTop="@dimen/height_90"
                    android:layout_marginEnd="@dimen/width_54"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/width_240"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/word_auth_info"
                        android:textColor="@color/color_808080"
                        android:textSize="@dimen/textSize_45pt" />

                    <TextView
                        android:id="@+id/text_purchase_add_info_auth_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_232323"
                        android:textSize="@dimen/textSize_45pt" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/width_54"
                    android:layout_marginTop="@dimen/height_42"
                    android:layout_marginEnd="@dimen/width_54"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/width_240"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/word_as_ment"
                        android:textColor="@color/color_808080"
                        android:textSize="@dimen/textSize_45pt" />

                    <TextView
                        android:id="@+id/text_purchase_add_info_as_ment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_232323"
                        android:textSize="@dimen/textSize_45pt" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/width_54"
                    android:layout_marginTop="@dimen/height_42"
                    android:layout_marginEnd="@dimen/width_54"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/width_240"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/word_as_tel"
                        android:textColor="@color/color_808080"
                        android:textSize="@dimen/textSize_45pt" />

                    <TextView
                        android:id="@+id/text_purchase_add_info_as_tel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_e8e8e8_radius_18"
                        android:drawableStart="@drawable/ic_tel"
                        android:drawablePadding="@dimen/width_12"
                        android:paddingStart="@dimen/width_30"
                        android:paddingTop="@dimen/height_9"
                        android:paddingEnd="@dimen/width_30"
                        android:paddingBottom="@dimen/height_9"
                        android:textColor="@color/color_232323"
                        android:textSize="@dimen/textSize_45pt" />

                </LinearLayout>


            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_279"
            android:background="@color/color_f8f8f8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/width_54"
                android:layout_marginEnd="@dimen/width_54"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/word_legal_notice"
                    android:textColor="@color/color_232323"
                    android:textSize="@dimen/textSize_45pt"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_30"
                    android:text="@string/msg_legal_notice_desc"
                    android:textColor="@color/color_808080"
                    android:textSize="@dimen/textSize_36pt" />

            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>