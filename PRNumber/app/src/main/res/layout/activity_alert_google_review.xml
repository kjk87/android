<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bf000000"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/width_90"
        android:layout_marginEnd="@dimen/width_90"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/word_notice_alert"
            android:textColor="@color/color_232323"
            android:textSize="@dimen/textSize_64pt"
            android:layout_marginTop="@dimen/height_90"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_232323"
            android:layout_marginTop="@dimen/height_90"
            android:gravity="center"
            android:textSize="@dimen/textSize_50pt"
            android:text="@string/msg_google_review_desc1"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_737373"
            android:text="@string/msg_google_review_desc2"
            android:gravity="center"
            android:layout_marginTop="@dimen/height_30"
            android:textSize="@dimen/textSize_37pt" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_171"
            android:background="@color/color_579ffb"
            android:layout_marginTop="@dimen/height_90"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_alert_google_review_review_write"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/color_579ffb"
                android:gravity="center"
                android:text="@string/word_review_write2"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_44pt"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/text_alert_google_review_cancel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/color_565656"
                android:gravity="center"
                android:text="@string/msg_next_time"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_44pt"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>



</RelativeLayout>