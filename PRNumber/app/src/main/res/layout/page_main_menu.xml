<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_373c42"
        android:textStyle="bold"
        android:text="@string/word_main_menu"
        android:layout_marginStart="@dimen/width_60"
        android:layout_marginTop="@dimen/height_60"
        android:textSize="@dimen/textSize_60pt"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_main_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height_36"
        android:layout_marginStart="@dimen/width_60"
        android:layout_marginBottom="@dimen/height_60"/>
</LinearLayout>