<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_store_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/height_100">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/width_54"
                android:paddingEnd="@dimen/width_54">


                <LinearLayout
                    android:id="@+id/layout_store_introduction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_100"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/word_introduce"
                        android:textColor="@color/color_232323"
                        android:textSize="@dimen/textSize_43pt"
                        android:textStyle="bold" />

                    <com.pplus.prnumberuser.apps.common.component.ExpandableTextView
                        android:id="@+id/text_store_introduction"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/height_30"
                        android:lineSpacingExtra="@dimen/height_12"
                        android:textColor="@color/color_737373"
                        android:textSize="@dimen/textSize_38pt"
                        app:maxCollapsedLines="5" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_store_open_hours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_100"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/word_opening_hours"
                        android:textColor="@color/color_232323"
                        android:textSize="@dimen/textSize_43pt"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_store_opening_hours"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/height_30"
                        android:lineSpacingExtra="@dimen/height_12"
                        android:textColor="@color/color_737373"
                        android:textSize="@dimen/textSize_38pt" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_store_holiday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_100"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/word_holiday"
                        android:textColor="@color/color_232323"
                        android:textSize="@dimen/textSize_43pt"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_store_holiday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/height_30"
                        android:lineSpacingExtra="@dimen/height_12"
                        android:textColor="@color/color_737373"
                        android:textSize="@dimen/textSize_38pt" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_store_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_100"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/word_address"
                        android:textColor="@color/color_232323"
                        android:textSize="@dimen/textSize_43pt"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_store_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/height_10"
                        android:text="@string/word_address"
                        android:textColor="@color/color_737373"
                        android:textSize="@dimen/textSize_38pt" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_store_map_option"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_30"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/layout_store_find_road"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/height_234"
                        android:layout_weight="1"
                        android:background="@drawable/bg_mypage_menu">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:drawableTop="@drawable/ic_prpage_map_location"
                            android:gravity="center"
                            android:text="@string/word_find_road"
                            android:textColor="@color/color_737373"
                            android:textSize="@dimen/textSize_30pt" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/layout_store_call_taxi"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/height_234"
                        android:layout_weight="1"
                        android:background="@drawable/bg_mypage_menu">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:drawableTop="@drawable/ic_prpage_map_taxi"
                            android:gravity="center"
                            android:text="@string/word_call_taxi"
                            android:textColor="@color/color_737373"
                            android:textSize="@dimen/textSize_30pt" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/layout_store_navigation"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/height_234"
                        android:layout_weight="1"
                        android:background="@drawable/bg_mypage_menu">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:drawableTop="@drawable/ic_prpage_map_navi"
                            android:gravity="center"
                            android:text="@string/word_navigation"
                            android:textColor="@color/color_737373"
                            android:textSize="@dimen/textSize_30pt" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/layout_store_copy_address"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/height_234"
                        android:layout_weight="1"
                        android:background="@drawable/bg_mypage_menu">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:drawableTop="@drawable/ic_prpage_map_link"
                            android:gravity="center"
                            android:text="@string/word_copy_address"
                            android:textColor="@color/color_737373"
                            android:textSize="@dimen/textSize_30pt" />

                    </RelativeLayout>

                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/layout_store_map"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_560"
                    android:layout_marginTop="@dimen/height_30">

                    <ImageView
                        android:id="@+id/image_store_map_full"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/width_30"
                        android:layout_marginEnd="@dimen/width_30"
                        android:src="@drawable/ic_map_full" />

                    <com.google.android.gms.maps.MapView
                        android:id="@+id/map_store"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:liteMode="true"
                        app:mapType="normal" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_1"
                    android:background="@color/color_d8d8d8" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_1"
                    android:background="@color/color_d8d8d8" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_f8f8f8"
                android:paddingTop="@dimen/height_60"
                android:paddingStart="@dimen/width_54"
                android:paddingEnd="@dimen/width_54"
                android:paddingBottom="@dimen/height_60"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/word_company_info"
                        android:textColor="@color/color_232323"
                        android:textSize="@dimen/textSize_40pt"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_sore_call"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/underbar_232323_transparent"
                        android:drawableStart="@drawable/ic_prpage_tel_black"
                        android:text="@string/msg_inquiry"
                        android:textColor="@color/color_232323"
                        android:textSize="@dimen/textSize_32pt"
                        android:textStyle="bold" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_30">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/word_company_name"
                        android:textColor="@color/color_b7b7b7"
                        android:textSize="@dimen/textSize_28pt" />

                    <TextView
                        android:id="@+id/text_store_company_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/color_b7b7b7"
                        android:textSize="@dimen/textSize_28pt" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/word_ceo"
                        android:textColor="@color/color_b7b7b7"
                        android:textSize="@dimen/textSize_28pt" />

                    <TextView
                        android:id="@+id/text_store_ceo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/color_b7b7b7"
                        android:textSize="@dimen/textSize_28pt" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/word_company_number"
                        android:textColor="@color/color_b7b7b7"
                        android:textSize="@dimen/textSize_28pt" />

                    <TextView
                        android:id="@+id/text_store_company_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/color_b7b7b7"
                        android:textSize="@dimen/textSize_28pt" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/word_company_address"
                        android:textColor="@color/color_b7b7b7"
                        android:textSize="@dimen/textSize_28pt" />

                    <TextView
                        android:id="@+id/text_store_company_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/color_b7b7b7"
                        android:textSize="@dimen/textSize_28pt" />

                </RelativeLayout>



                <RelativeLayout
                    android:id="@+id/layout_store_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/word_email"
                        android:textColor="@color/color_b7b7b7"
                        android:textSize="@dimen/textSize_28pt" />

                    <TextView
                        android:id="@+id/text_store_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/color_b7b7b7"
                        android:textSize="@dimen/textSize_28pt" />


                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/height_60"
                android:paddingBottom="@dimen/height_60"
                android:paddingStart="@dimen/width_54"
                android:paddingEnd="@dimen/width_54"
                android:background="@color/color_f0f0f0">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSize_28pt"
                    android:textColor="@color/color_737373"
                    android:textStyle="bold"
                    android:text="@string/word_legal_notice"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSize_28pt"
                    android:textColor="@color/color_b7b7b7"
                    android:text="@string/msg_legal_notice_desc"/>

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>