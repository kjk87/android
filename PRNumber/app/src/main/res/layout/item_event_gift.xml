<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/width_54"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_event_gift"
            android:layout_width="@dimen/width_369"
            android:layout_height="@dimen/width_369"
            android:layout_marginEnd="@dimen/width_40"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_event_gift_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_232323"
                android:textSize="@dimen/textSize_47pt"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text_event_gift_remain_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_808080"
                android:textSize="@dimen/textSize_38pt"/>

            <TextView
                android:id="@+id/text_event_gift_detail_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_38pt"
                android:layout_marginTop="@dimen/height_30"
                android:textColor="@color/color_579ffb"
                android:textStyle="bold"
                android:background="@drawable/underbar_579ffb_ffffff"
                android:drawableEnd="@drawable/ic_profile_arrow"
                android:drawablePadding="@dimen/width_15"
                android:text="@string/word_detail_view2"/>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>