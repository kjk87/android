<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_240"
    android:orientation="vertical"
    android:paddingStart="@dimen/width_60"
    android:paddingEnd="@dimen/width_60">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height_60"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_delivery_address"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/color_525961"
                android:textSize="@dimen/textSize_42pt"
                android:layout_marginEnd="@dimen/width_40"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/image_delivery_address_close"
                android:layout_width="@dimen/width_48"
                android:layout_height="@dimen/width_48"
                android:layout_gravity="top"
                android:src="@drawable/ic_delivery_address_close"/>

        </LinearLayout>

        <TextView
            android:id="@+id/text_delivery_old_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_d3d7db"
            android:textSize="@dimen/textSize_36pt"
            android:layout_marginTop="@dimen/height_6"
            android:layout_marginEnd="@dimen/width_40" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_2"
        android:layout_alignParentBottom="true"
        android:background="@color/color_eef2f6" />

</RelativeLayout>