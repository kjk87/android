<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/height_45">

    <TextView
        android:id="@+id/text_menu_option_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textColor="@color/color_373c42"
        android:textSize="@dimen/textSize_42pt"
        android:drawableStart="@drawable/btn_menu_radio"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@id/text_menu_option_detail_price"
        android:layout_marginEnd="@dimen/width_30"
        android:drawablePadding="@dimen/width_18"/>

    <TextView
        android:id="@+id/text_menu_option_detail_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentEnd="true"
        android:textColor="@color/color_6e7780"
        android:textSize="@dimen/textSize_42pt" />

</RelativeLayout>