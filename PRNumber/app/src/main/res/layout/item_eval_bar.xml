<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_eval_bar_count"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_42"
            android:background="@drawable/bg_avg_rate_sel"
            android:minWidth="@dimen/width_54"
            android:gravity="center"
            android:textSize="@dimen/textSize_30pt"
            android:textColor="@color/white"/>

        <RelativeLayout
            android:layout_width="@dimen/width_18"
            android:layout_height="@dimen/height_135"
            android:background="@drawable/bg_avg_rate_sel"
            android:layout_marginTop="@dimen/height_9">

            <LinearLayout
                android:id="@+id/layout_eval_bar_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <View
                    android:id="@+id/view_eval_bar_rate"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_avg_rate" />
            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/text_eval_bar_eval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_6"
            android:textSize="@dimen/textSize_36pt"
            android:textColor="@color/color_808080"/>

    </LinearLayout>

</RelativeLayout>