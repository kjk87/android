<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/height_100">

            <TextView
                android:id="@+id/text_purchase_product_shipping_history_detail_page_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_60"
                android:textColor="@color/color_232323"
                android:textSize="@dimen/textSize_52pt"
                android:layout_marginStart="@dimen/width_54"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/layout_purchase_product_shipping_history_detail_date_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginStart="@dimen/width_54"
                android:layout_marginEnd="@dimen/width_54">

                <TextView
                    android:id="@+id/text_purchase_product_shipping_history_detail_status_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/textSize_36pt"
                    android:textColor="@color/color_737373"/>

                <TextView
                    android:id="@+id/text_purchase_product_shipping_history_detail_search_shipping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSize_36pt"
                    android:textColor="@color/color_579ffb"
                    android:drawableEnd="@drawable/ic_buy_list_delivery_arrow"
                    android:text="@string/msg_search_shipping"
                    android:drawablePadding="@dimen/width_15"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:visibility="gone"
                    android:background="@drawable/underbar_579ffb_ffffff"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/text_purchase_product_shipping_history_detail_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_ff4646"
                android:layout_marginStart="@dimen/width_54"
                android:textSize="@dimen/textSize_36pt" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_2"
                android:background="@color/color_f0f0f0"
                android:layout_marginTop="@dimen/height_60"
                android:layout_marginStart="@dimen/width_54"
                android:layout_marginEnd="@dimen/width_54"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_50"
                android:paddingStart="@dimen/width_54"
                android:paddingEnd="@dimen/width_54">

                <TextView
                    android:id="@+id/text_purchase_product_shipping_history_detail_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSize_40pt"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    android:textColor="@color/color_737373"/>

                <TextView
                    android:id="@+id/text_purchase_product_shipping_history_detail_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSize_32pt"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    android:textColor="@color/color_b7b7b7"/>
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_purchase_product_shipping_history_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_20"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/width_54"
                android:layout_marginTop="@dimen/height_90"
                android:text="@string/word_pay_info"
                android:textColor="@color/color_232323"
                android:textSize="@dimen/textSize_48pt"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_8"
                android:layout_marginStart="@dimen/width_54"
                android:layout_marginTop="@dimen/height_20"
                android:layout_marginEnd="@dimen/width_54"
                android:background="@color/color_232323" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_90"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/height_40"
                android:paddingStart="@dimen/width_54"
                android:paddingEnd="@dimen/width_54">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/word_pay_date"
                    android:textColor="@color/color_a4a4a4"
                    android:textSize="@dimen/textSize_44pt" />

                <TextView
                    android:id="@+id/text_purchase_product_shipping_history_detail_pay_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/color_737373"
                    android:textSize="@dimen/textSize_44pt"
                    android:textStyle="bold" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_90"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/width_54"
                android:paddingEnd="@dimen/width_54">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/word_pay_method"
                    android:textColor="@color/color_a4a4a4"
                    android:textSize="@dimen/textSize_44pt" />

                <TextView
                    android:id="@+id/text_purchase_product_shipping_history_detail_pay_method"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/color_737373"
                    android:textSize="@dimen/textSize_44pt"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_90"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/width_54"
                android:paddingEnd="@dimen/width_54">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/word_shipping_fee"
                    android:textColor="@color/color_a4a4a4"
                    android:textSize="@dimen/textSize_44pt" />

                <TextView
                    android:id="@+id/text_purchase_product_shipping_history_detail_delivery_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/color_737373"
                    android:textSize="@dimen/textSize_44pt"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_90"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/width_54"
                android:paddingEnd="@dimen/width_54">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/word_total_buy_price"
                    android:textColor="@color/color_a4a4a4"
                    android:textSize="@dimen/textSize_44pt" />

                <TextView
                    android:id="@+id/text_purchase_product_shipping_history_detail_total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/color_ff4646"
                    android:textSize="@dimen/textSize_44pt"
                    android:textStyle="bold" />

            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/width_54"
                android:layout_marginTop="@dimen/height_110"
                android:text="@string/word_shipping_site_info"
                android:textColor="@color/color_232323"
                android:textSize="@dimen/textSize_48pt"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_8"
                android:layout_marginStart="@dimen/width_54"
                android:layout_marginTop="@dimen/height_20"
                android:layout_marginEnd="@dimen/width_54"
                android:background="@color/color_232323" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_90"
                android:layout_marginTop="@dimen/height_40"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/width_54"
                android:paddingEnd="@dimen/width_54">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/word_receiver"
                    android:textColor="@color/color_a4a4a4"
                    android:textSize="@dimen/textSize_44pt" />

                <TextView
                    android:id="@+id/text_purchase_product_shipping_history_detail_receiver_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/color_737373"
                    android:textSize="@dimen/textSize_44pt"
                    android:textStyle="bold" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_90"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/width_54"
                android:paddingEnd="@dimen/width_54">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/word_contact"
                    android:textColor="@color/color_a4a4a4"
                    android:textSize="@dimen/textSize_44pt" />

                <TextView
                    android:id="@+id/text_purchase_product_shipping_history_detail_receiver_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/color_737373"
                    android:textSize="@dimen/textSize_44pt"
                    android:textStyle="bold" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingStart="@dimen/width_54"
                android:paddingEnd="@dimen/width_54">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/word_receiver_address"
                    android:textColor="@color/color_a4a4a4"
                    android:textSize="@dimen/textSize_44pt" />

                <TextView
                    android:id="@+id/text_purchase_product_shipping_history_detail_receiver_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_737373"
                    android:textSize="@dimen/textSize_36pt"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_purchase_product_shipping_history_detail_delivery_memo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingStart="@dimen/width_54"
                android:paddingEnd="@dimen/width_54"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/word_shipping_memo"
                    android:layout_marginTop="@dimen/height_40"
                    android:textColor="@color/color_a4a4a4"
                    android:textSize="@dimen/textSize_44pt" />

                <TextView
                    android:id="@+id/text_purchase_product_shipping_history_detail_shipping_memo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_737373"
                    android:textSize="@dimen/textSize_44pt"
                    android:textStyle="bold" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_6"
                android:background="@color/color_d8d8d8"
                android:layout_marginTop="@dimen/height_40"/>

            <TextView
                android:id="@+id/text_purchase_product_shipping_history_detail_buy_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/height_80"
                android:layout_marginEnd="@dimen/width_54"
                android:background="@drawable/underbar_b7b7b7_ffffff"
                android:text="@string/word_buy_cancel"
                android:visibility="gone"
                android:textColor="@color/color_b7b7b7"
                android:textSize="@dimen/textSize_42pt" />

            <TextView
                android:id="@+id/text_purchase_product_shipping_history_detail_confirm_buy"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_140"
                android:background="@drawable/btn_blue"
                android:layout_marginTop="@dimen/height_40"
                android:textSize="@dimen/textSize_39pt"
                android:visibility="gone"
                android:layout_marginStart="@dimen/width_54"
                android:layout_marginEnd="@dimen/width_54"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="@string/word_confirm_buy"/>


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>