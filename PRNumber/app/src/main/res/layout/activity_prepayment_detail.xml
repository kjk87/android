<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/height_200">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_825">
                <ImageView
                    android:id="@+id/image_prepayment_detail_thumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_720"
                    android:scaleType="centerCrop"
                    android:src="@drawable/prnumber_default_img" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_204"
                    android:layout_marginStart="@dimen/width_60"
                    android:layout_marginEnd="@dimen/width_60"
                    android:layout_alignParentBottom="true"
                    android:elevation="@dimen/width_3"
                    android:layout_marginBottom="@dimen/width_3"
                    android:background="@drawable/bg_ffffff_radius_30">

                    <TextView
                        android:id="@+id/text_prepayment_detail_page_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="@color/color_212529"
                        android:textSize="@dimen/textSize_60pt"
                        android:textStyle="bold"/>

                </RelativeLayout>

            </RelativeLayout>


            <include
                android:id="@+id/item_main_prepayment"
                layout="@layout/item_main_prepayment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/width_60"
                android:layout_marginTop="@dimen/height_40"
                android:layout_marginEnd="@dimen/width_60" />


            <RelativeLayout
                android:id="@+id/layout_prepayment_detail_use_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/width_84"
                android:layout_marginTop="@dimen/height_84"
                android:layout_marginEnd="@dimen/width_84">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/word_use_price"
                    android:textColor="@color/color_8c969f"
                    android:textSize="@dimen/textSize_39pt" />

                <TextView
                    android:id="@+id/text_prepayment_detail_total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/color_373c42"
                    android:textSize="@dimen/textSize_39pt" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/width_84"
                android:layout_marginTop="@dimen/height_24"
                android:layout_marginEnd="@dimen/width_84">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/word_expire_date2"
                    android:textColor="@color/color_8c969f"
                    android:textSize="@dimen/textSize_39pt" />

                <TextView
                    android:id="@+id/text_prepayment_detail_expire_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/color_373c42"
                    android:textSize="@dimen/textSize_39pt" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/width_84"
                android:layout_marginTop="@dimen/height_24"
                android:layout_marginEnd="@dimen/width_84">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/word_use_note2"
                    android:textColor="@color/color_8c969f"
                    android:textSize="@dimen/textSize_39pt" />

                <TextView
                    android:id="@+id/text_prepayment_detail_note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/color_373c42"
                    android:textSize="@dimen/textSize_39pt" />

            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_3"
                android:layout_marginStart="@dimen/width_60"
                android:layout_marginTop="@dimen/height_72"
                android:layout_marginEnd="@dimen/width_60"
                android:background="@color/color_eef2f6" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="top"
                android:layout_marginStart="@dimen/width_48"
                android:layout_marginTop="@dimen/height_84"
                android:layout_marginEnd="@dimen/width_48"
                android:orientation="horizontal">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginEnd="@dimen/width_72"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="@dimen/width_228"
                        android:layout_height="@dimen/width_228"
                        android:background="@drawable/bg_f7fafc_circle">

                        <ImageView
                            android:layout_width="@dimen/width_132"
                            android:layout_height="@dimen/width_132"
                            android:layout_centerInParent="true"
                            android:src="@drawable/img_prepayment_method1"/>

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/msg_prepayment_method_desc1"
                        android:textColor="@color/color_373c42"
                        android:textSize="@dimen/textSize_36pt" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginEnd="@dimen/width_72"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="@dimen/width_228"
                        android:layout_height="@dimen/width_228"
                        android:background="@drawable/bg_f7fafc_circle">

                        <ImageView
                            android:layout_width="@dimen/width_132"
                            android:layout_height="@dimen/width_132"
                            android:layout_centerInParent="true"
                            android:src="@drawable/img_prepayment_method2"/>

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/msg_prepayment_method_desc2"
                        android:textColor="@color/color_373c42"
                        android:textSize="@dimen/textSize_36pt" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="@dimen/width_228"
                        android:layout_height="@dimen/width_228"
                        android:background="@drawable/bg_f7fafc_circle">

                        <ImageView
                            android:layout_width="@dimen/width_132"
                            android:layout_height="@dimen/width_132"
                            android:layout_centerInParent="true"
                            android:src="@drawable/img_prepayment_method3"/>

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/msg_prepayment_method_desc3"
                        android:textColor="@color/color_373c42"
                        android:textSize="@dimen/textSize_36pt" />

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.core.widget.NestedScrollView>

    <TextView
        android:id="@+id/text_subscription_detail_buy"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_168"
        android:background="@color/color_4694fb"
        android:gravity="center"
        android:text="@string/msg_buy_prepayment"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:textStyle="bold"
        android:textSize="@dimen/textSize_48pt" />



</RelativeLayout>