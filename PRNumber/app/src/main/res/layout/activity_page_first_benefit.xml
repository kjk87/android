<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_825">
            <ImageView
                android:id="@+id/image_page_first_benefit_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_720"
                android:scaleType="centerCrop"
                android:src="@drawable/prnumber_default_img" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_204"
                android:layout_marginStart="@dimen/width_60"
                android:layout_marginEnd="@dimen/width_60"
                android:layout_alignParentBottom="true"
                android:elevation="@dimen/width_3"
                android:layout_marginBottom="@dimen/width_3"
                android:background="@drawable/bg_ffffff_radius_30">

                <TextView
                    android:id="@+id/text_page_first_benefit_page_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/color_212529"
                    android:textSize="@dimen/textSize_60pt"
                    android:textStyle="bold"/>

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_360"
            android:background="@drawable/bg_first_benefit"
            android:layout_marginStart="@dimen/width_60"
            android:layout_marginEnd="@dimen/width_60"
            android:layout_marginTop="@dimen/height_42">

            <TextView
                android:id="@+id/text_page_first_benefit_stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="@dimen/textSize_60pt"
                android:textColor="@color/color_8c969f"
                android:text="@string/msg_stop_first_benefit"
                android:visibility="gone"
                android:textStyle="bold"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/layout_page_first_benefit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSize_42pt"
                    android:textColor="@color/color_525961"
                    android:text="@string/word_first_benefit_user"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/text_page_first_benefit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSize_72pt"
                    android:textColor="@color/color_4694fb"
                    android:layout_marginTop="@dimen/height_24"
                    android:textStyle="bold"/>


            </androidx.appcompat.widget.LinearLayoutCompat>


        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/text_page_first_benefit_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize_48pt"
            android:textColor="@color/color_4694fb"
            android:layout_gravity="center"/>


        <TextView
            android:id="@+id/text_page_first_benefit_receive"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_144"
            android:background="@drawable/bg_4694fb_radius_12"
            android:gravity="center"
            android:text="@string/msg_receive_first_benefit"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/height_54"
            android:layout_marginBottom="@dimen/height_72"
            android:layout_marginStart="@dimen/width_60"
            android:layout_marginEnd="@dimen/width_60"
            android:textStyle="bold"
            android:textSize="@dimen/textSize_48pt" />


    </androidx.appcompat.widget.LinearLayoutCompat>




</RelativeLayout>