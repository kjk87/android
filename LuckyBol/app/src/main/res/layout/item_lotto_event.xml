<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/width_10"
    android:paddingEnd="@dimen/width_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_380">

            <ImageView
                android:id="@+id/image_lotto_event"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/text_lotto_event_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/height_60"
                android:fontFamily="@font/trebucbd"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_100pt"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/image_lotto_event_win_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:src="@drawable/img_banner_event_result"
                android:visibility="gone" />

            <TextView
                android:id="@+id/text_lotto_event_proceeding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/width_34"
                android:layout_marginTop="@dimen/width_34"
                android:background="@drawable/img_banner_event_mark"
                android:gravity="center"
                android:text="@string/word_proceeding"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_32pt"
                android:textStyle="bold"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/layout_lotto_event_close"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_play_time_counting_bg"
                android:gravity="center_horizontal"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/height_12"
                        android:text="@string/msg_win_remain_time"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSize_36pt"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_lotto_event_win_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/height_78"
                        android:fontFamily="@font/trebucbd"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSize_100pt"
                        android:textStyle="bold" />
                </LinearLayout>

            </RelativeLayout>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_play_banner_bottom"
            android:orientation="vertical"
            android:paddingStart="@dimen/width_40"
            android:paddingEnd="@dimen/width_40"
            android:paddingBottom="@dimen/height_70">

            <TextView
                android:id="@+id/text_lotto_event_title"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_130"
                android:gravity="center_vertical"
                android:textColor="@color/color_232323"
                android:textSize="@dimen/textSize_42pt" />

            <TextView
                android:id="@+id/text_lotto_event_win_condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/format_match_lotto_number"
                android:textColor="@color/color_fc5c57"
                android:textSize="@dimen/textSize_36pt" />


        </LinearLayout>

    </LinearLayout>


</RelativeLayout>