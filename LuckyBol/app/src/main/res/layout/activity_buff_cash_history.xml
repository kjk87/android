<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:elevation="@dimen/height_0">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="@color/white"
            app:expandedTitleTextAppearance="@style/TransparentText"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_222"
                        android:layout_marginStart="@dimen/width_60"
                        android:layout_marginTop="@dimen/height_72"
                        android:layout_marginEnd="@dimen/width_60"
                        android:background="@drawable/bg_fc5c57_radius_24"
                        android:layout_marginBottom="@dimen/height_84"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/text_buff_cash_history_total_cash_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/word_total_buff_cash"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/textSize_36pt"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/text_buff_cash_history_total_cash"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/height_18"
                                    android:drawablePadding="@dimen/width_15"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/textSize_60pt"
                                    android:textStyle="bold"
                                    app:drawableStartCompat="@drawable/ic_buff_cash_wr" />
                            </androidx.appcompat.widget.LinearLayoutCompat>

                        </RelativeLayout>

                        <View
                            android:layout_width="@dimen/width_3"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/height_75"
                            android:layout_marginBottom="@dimen/height_75"
                            android:background="@color/color_80eef2f6" />


                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/word_my_buff_benefit"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/textSize_36pt"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/text_buff_cash_history_my_cash"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/height_18"
                                    android:drawablePadding="@dimen/width_15"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/textSize_60pt"
                                    android:textStyle="bold"
                                    app:drawableStartCompat="@drawable/ic_buff_cash_wr" />
                            </androidx.appcompat.widget.LinearLayoutCompat>

                        </RelativeLayout>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/layout_buff_cash_top3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/width_60"
                        android:layout_marginTop="@dimen/height_36"
                        android:layout_marginEnd="@dimen/width_60"
                        android:layout_marginBottom="@dimen/height_84"
                        android:background="@drawable/bg_border_eef2f6_radius_24"
                        android:visibility="gone"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/height_60">

                        <TextView
                            android:id="@+id/text_buff_cash_history_top3_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/height_42"
                            android:background="@drawable/bg_fc5c57_radius_66"
                            android:paddingStart="@dimen/width_48"
                            android:paddingTop="@dimen/height_12"
                            android:paddingEnd="@dimen/width_48"
                            android:paddingBottom="@dimen/height_12"
                            android:text="@string/word_divided_cash_top3"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textSize_39pt"
                            android:textStyle="bold" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/height_48"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <com.pplus.luckybol.apps.common.ui.custom.MaskableFrameLayout
                                    android:layout_width="@dimen/width_108"
                                    android:layout_height="@dimen/width_108"
                                    app:mask="@drawable/bg_circle_000000"
                                    app:porterduffxfermode="DST_IN">

                                    <ImageView
                                        android:id="@+id/image_buff_cash_top1_profile"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/ic_contact_profile_default" />

                                </com.pplus.luckybol.apps.common.ui.custom.MaskableFrameLayout>

                                <TextView
                                    android:id="@+id/text_buff_cash_top1_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/height_18"
                                    android:textColor="@color/color_373c42"
                                    android:textSize="@dimen/textSize_42pt"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/text_buff_cash_top1_cash"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/color_fc5c57"
                                    android:textSize="@dimen/textSize_39pt"
                                    android:textStyle="bold" />

                            </androidx.appcompat.widget.LinearLayoutCompat>

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <com.pplus.luckybol.apps.common.ui.custom.MaskableFrameLayout
                                    android:layout_width="@dimen/width_108"
                                    android:layout_height="@dimen/width_108"
                                    app:mask="@drawable/bg_circle_000000"
                                    app:porterduffxfermode="DST_IN">

                                    <ImageView
                                        android:id="@+id/image_buff_cash_top2_profile"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/ic_contact_profile_default" />

                                </com.pplus.luckybol.apps.common.ui.custom.MaskableFrameLayout>

                                <TextView
                                    android:id="@+id/text_buff_cash_top2_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/height_18"
                                    android:textColor="@color/color_373c42"
                                    android:textSize="@dimen/textSize_42pt"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/text_buff_cash_top2_cash"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/color_fc5c57"
                                    android:textSize="@dimen/textSize_39pt"
                                    android:textStyle="bold" />

                            </androidx.appcompat.widget.LinearLayoutCompat>

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <com.pplus.luckybol.apps.common.ui.custom.MaskableFrameLayout
                                    android:layout_width="@dimen/width_108"
                                    android:layout_height="@dimen/width_108"
                                    app:mask="@drawable/bg_circle_000000"
                                    app:porterduffxfermode="DST_IN">

                                    <ImageView
                                        android:id="@+id/image_buff_cash_top3_profile"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/ic_contact_profile_default" />

                                </com.pplus.luckybol.apps.common.ui.custom.MaskableFrameLayout>

                                <TextView
                                    android:id="@+id/text_buff_cash_top3_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/height_18"
                                    android:textColor="@color/color_373c42"
                                    android:textSize="@dimen/textSize_42pt"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/text_buff_cash_top3_cash"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/color_fc5c57"
                                    android:textSize="@dimen/textSize_39pt"
                                    android:textStyle="bold" />

                            </androidx.appcompat.widget.LinearLayoutCompat>


                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </LinearLayout>

            </RelativeLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_114"
            android:background="@color/color_f7fafc"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/width_54">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="@string/word_save_history"
                android:textColor="@color/color_212529"
                android:textStyle="bold"
                android:textSize="@dimen/textSize_42pt"
                android:layout_marginStart="@dimen/width_60"/>



            <TextView
                android:id="@+id/text_buff_cash_history_sort_past"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="@string/word_sort_past"
                android:textColor="@color/color_525961_212529"
                android:textSize="@dimen/textSize_33pt"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text_buff_cash_history_sort_recent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/width_54"
                android:layout_toLeftOf="@id/text_buff_cash_history_sort_past"
                android:gravity="center"
                android:text="@string/word_sort_recent"
                android:textColor="@color/color_525961_212529"
                android:textSize="@dimen/textSize_33pt"
                android:textStyle="bold"/>

        </RelativeLayout>


    </com.google.android.material.appbar.AppBarLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_buff_cash_history"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/text_buff_casht_history_not_exist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/height_450"
            android:text="@string/msg_not_save_history"
            android:textColor="@color/color_737373"
            android:textSize="@dimen/textSize_40pt"
            android:visibility="gone" />

    </FrameLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>