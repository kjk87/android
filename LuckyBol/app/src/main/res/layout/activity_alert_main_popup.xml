<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bf000000"
    android:fitsSystemWindows="true"
    tools:context=".apps.event.ui.EventAlertActivity">

    <LinearLayout
        android:layout_width="@dimen/width_970"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_alert_main_popup"
            android:layout_width="@dimen/width_950"
            android:layout_height="@dimen/height_1344"
            android:scaleType="centerCrop"
            android:src="@drawable/img_app_change_banner"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_171"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_alert_main_popup_do_not_again"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/msg_do_not_show_again"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_39pt"/>

            <View
                android:layout_width="@dimen/width_2"
                android:layout_height="@dimen/height_45"
                android:background="@color/white"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/text_alert_main_popup_close"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/word_close"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_39pt"/>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>