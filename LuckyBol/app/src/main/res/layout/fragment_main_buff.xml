<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".apps.main.ui.MainBuffFragment">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:elevation="0dp"
            app:expanded="true">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_840"
                android:background="@color/color_fc5c57"
                android:fitsSystemWindows="true"
                app:contentScrim="@color/white"
                app:expandedTitleTextAppearance="@style/TransparentText"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <RelativeLayout
                    android:id="@+id/layout_main_buff_exist"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/layout_main_buff_guide2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/width_54"
                        android:layout_marginTop="@dimen/height_81"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/width_54"
                            android:layout_height="@dimen/width_54"
                            android:layout_marginEnd="@dimen/width_9"
                            android:src="@drawable/ic_buff_guide" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginEnd="@dimen/width_6"
                            android:background="@drawable/underbar_ffffff_transparent"
                            android:text="@string/msg_view_buff_guide"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textSize_36pt"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_arrow_ffffff" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/height_150"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="@dimen/width_420"
                            android:layout_height="@dimen/height_84"
                            android:background="@drawable/bg_f33a35_radius_66">

                            <TextView
                                android:id="@+id/text_main_buff_tile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:textColor="@color/white"
                                android:textSize="@dimen/textSize_36pt"
                                android:textStyle="bold" />

                        </RelativeLayout>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_222"
                            android:layout_marginStart="@dimen/width_60"
                            android:layout_marginTop="@dimen/height_48"
                            android:layout_marginEnd="@dimen/width_60"
                            android:background="@drawable/bg_ffffff_radius_24"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:id="@+id/layout_main_buff_bol"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:visibility="gone"
                                android:layout_weight="1">

                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:gravity="center_horizontal"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/word_total_buff_bol"
                                        android:textColor="@color/color_fc5c57"
                                        android:textSize="@dimen/textSize_36pt"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/text_main_buff_total_bol"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/height_18"
                                        android:drawablePadding="@dimen/width_15"
                                        android:textColor="@color/color_fc5c57"
                                        android:textSize="@dimen/textSize_60pt"
                                        android:textStyle="bold"
                                        app:drawableStartCompat="@drawable/ic_buff_bol" />
                                </androidx.appcompat.widget.LinearLayoutCompat>

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginEnd="@dimen/width_24"
                                    android:src="@drawable/ic_arrow_fc5c57" />

                            </RelativeLayout>

                            <View
                                android:layout_width="@dimen/width_3"
                                android:layout_height="match_parent"
                                android:background="@color/color_80eef2f6"
                                android:layout_marginTop="@dimen/height_75"
                                android:visibility="gone"
                                android:layout_marginBottom="@dimen/height_75"/>


                            <RelativeLayout
                                android:id="@+id/layout_main_buff_cash"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:gravity="center_horizontal"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/word_total_buff_cash"
                                        android:textColor="@color/color_fc5c57"
                                        android:textSize="@dimen/textSize_36pt"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/text_main_buff_total_cash"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/height_18"
                                        android:drawablePadding="@dimen/width_15"
                                        android:textColor="@color/color_fc5c57"
                                        android:textSize="@dimen/textSize_60pt"
                                        android:textStyle="bold"
                                        app:drawableStartCompat="@drawable/ic_buff_cash" />
                                </androidx.appcompat.widget.LinearLayoutCompat>

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginEnd="@dimen/width_24"
                                    android:src="@drawable/ic_arrow_fc5c57" />

                            </RelativeLayout>

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/height_60"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recycler_main_buff_member"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/height_75"
                                android:layout_marginEnd="@dimen/width_18" />

                            <TextView
                                android:id="@+id/text_main_buff_member_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="@dimen/textSize_36pt"
                                android:textStyle="bold" />

                        </androidx.appcompat.widget.LinearLayoutCompat>


                    </androidx.appcompat.widget.LinearLayoutCompat>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_main_buff_none"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/height_129"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableTop="@drawable/ic_none_buff"
                            android:drawablePadding="@dimen/height_48"
                            android:gravity="center"
                            android:text="@string/msg_none_buff"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textSize_42pt"
                            android:textStyle="bold" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_120"
                            android:layout_marginStart="@dimen/width_60"
                            android:layout_marginTop="@dimen/height_120"
                            android:layout_marginEnd="@dimen/width_60"
                            android:background="@drawable/bg_f33a35_radius_27">

                            <RelativeLayout
                                android:id="@+id/layout_main_buff_guide"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:drawableEnd="@drawable/ic_arrow_ffffff"
                                    android:drawablePadding="@dimen/width_6"
                                    android:text="@string/msg_view_buff_guide"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/textSize_36pt"
                                    android:textStyle="bold" />

                            </RelativeLayout>

                            <View
                                android:layout_width="@dimen/width_3"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/height_24"
                                android:layout_marginBottom="@dimen/height_24"
                                android:background="@color/color_eef2f6" />

                            <RelativeLayout
                                android:id="@+id/layout_main_buff_make"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:drawableEnd="@drawable/ic_arrow_ffffff"
                                    android:drawablePadding="@dimen/width_6"
                                    android:text="@string/msg_make_buff"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/textSize_36pt"
                                    android:textStyle="bold" />

                            </RelativeLayout>

                        </androidx.appcompat.widget.LinearLayoutCompat>


                    </androidx.appcompat.widget.LinearLayoutCompat>


                </RelativeLayout>

                <FrameLayout
                    android:id="@+id/layout_main_buff_req"
                    android:layout_width="@dimen/width_118"
                    android:layout_height="@dimen/height_90"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/height_60"
                    android:layout_marginEnd="@dimen/width_48">

                    <ImageView
                        android:layout_width="@dimen/width_90"
                        android:layout_height="@dimen/width_90"
                        android:src="@drawable/ic_buff_req" />

                    <TextView
                        android:id="@+id/text_main_buff_req_count"
                        android:layout_width="@dimen/width_57"
                        android:layout_height="@dimen/width_57"
                        android:layout_gravity="end|bottom"
                        android:background="@drawable/bg_circle_000000"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSize_33pt"
                        android:textStyle="bold"
                        android:visibility="invisible" />
                </FrameLayout>


            </com.google.android.material.appbar.CollapsingToolbarLayout>


        </com.google.android.material.appbar.AppBarLayout>

        <RelativeLayout
            android:id="@+id/scroll_point_buy_with_event"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:behavior_overlapTop="@dimen/height_72"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_main_buff"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:id="@+id/layout_main_buff_loading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_250"
                android:visibility="gone"
                android:orientation="vertical">

                <ProgressBar
                    android:layout_width="@dimen/width_120"
                    android:layout_height="@dimen/width_120"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/width_40"
                    android:indeterminateDrawable="@drawable/rotate_data_loading"
                    android:indeterminateOnly="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/height_30"
                    android:gravity="center"
                    android:textColor="@color/color_b7b7b7"
                    android:textStyle="bold"
                    android:textSize="@dimen/textSize_32pt"
                    android:text="@string/msg_data_loading"/>

            </LinearLayout>

        </RelativeLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</FrameLayout>