<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".apps.card.ui.CardRegActivity">


<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_60"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:orientation="horizontal"
            android:paddingStart="@dimen/width_54">

            <TextView
                android:layout_width="@dimen/width_210"
                android:layout_height="wrap_content"
                android:text="@string/word_card_type"
                android:textColor="@color/color_232323"
                android:textSize="@dimen/textSize_44pt" />

            <LinearLayout
                android:layout_width="@dimen/width_520"
                android:layout_height="@dimen/height_100"
                android:background="@drawable/border_color_dcdcdc_4px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_card_reg_personal_card"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/color_transparent_fc5c57"
                    android:gravity="center"
                    android:text="@string/word_personal_card"
                    android:textColor="@color/color_737373_ffffff"
                    android:textSize="@dimen/textSize_38pt" />

                <View
                    android:layout_width="@dimen/width_4"
                    android:layout_height="match_parent"
                    android:background="@color/color_dcdcdc" />

                <TextView
                    android:id="@+id/text_card_reg_corporate_card"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/color_transparent_fc5c57"
                    android:gravity="center"
                    android:text="@string/word_corporate_card"
                    android:textColor="@color/color_737373_ffffff"
                    android:textSize="@dimen/textSize_38pt" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_60"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/width_54">

            <TextView
                android:layout_width="@dimen/width_210"
                android:layout_height="wrap_content"
                android:text="@string/word_card_no"
                android:textColor="@color/color_232323"
                android:textSize="@dimen/textSize_44pt" />

            <EditText
                android:id="@+id/edit_card_reg_number1"
                android:layout_width="@dimen/width_170"
                android:layout_height="@dimen/height_100"
                android:layout_marginEnd="@dimen/width_20"
                android:background="@drawable/border_color_dcdcdc_4px"
                android:inputType="number"
                android:maxLength="4"
                android:gravity="center"
                android:textColor="@color/color_232323" />

            <EditText
                android:id="@+id/edit_card_reg_number2"
                android:layout_width="@dimen/width_170"
                android:layout_height="@dimen/height_100"
                android:layout_marginEnd="@dimen/width_20"
                android:background="@drawable/border_color_dcdcdc_4px"
                android:inputType="number"
                android:maxLength="4"
                android:gravity="center"
                android:textColor="@color/color_232323" />

            <TextView
                android:id="@+id/text_card_reg_number3"
                android:layout_width="@dimen/width_170"
                android:layout_height="@dimen/height_100"
                android:layout_marginEnd="@dimen/width_20"
                android:background="@drawable/border_color_dcdcdc_4px"
                android:inputType="numberPassword"
                android:maxLength="4"
                android:gravity="center"
                android:textColor="@color/color_232323" />

            <TextView
                android:id="@+id/text_card_reg_number4"
                android:layout_width="@dimen/width_170"
                android:layout_height="@dimen/height_100"
                android:background="@drawable/border_color_dcdcdc_4px"
                android:inputType="numberPassword"
                android:maxLength="4"
                android:gravity="center"
                android:textColor="@color/color_232323" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_50"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/width_54">

            <TextView
                android:layout_width="@dimen/width_210"
                android:layout_height="wrap_content"
                android:text="@string/word_validity"
                android:textColor="@color/color_232323"
                android:textSize="@dimen/textSize_44pt" />

            <EditText
                android:id="@+id/edit_card_reg_validity_month"
                android:layout_width="@dimen/width_170"
                android:layout_height="@dimen/height_100"
                android:layout_marginEnd="@dimen/width_20"
                android:background="@drawable/border_color_dcdcdc_4px"
                android:gravity="center"
                android:hint="@string/word_month"
                android:maxLength="2"
                android:textColor="@color/color_232323"
                android:textColorHint="@color/color_bbbbbb" />

            <EditText
                android:id="@+id/edit_card_reg_validity_year"
                android:layout_width="@dimen/width_170"
                android:layout_height="@dimen/height_100"
                android:background="@drawable/border_color_dcdcdc_4px"
                android:gravity="center"
                android:hint="@string/word_year"
                android:maxLength="2"
                android:textColor="@color/color_232323"
                android:textColorHint="@color/color_bbbbbb" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_50"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/width_54">

            <TextView
                android:layout_width="@dimen/width_210"
                android:layout_height="wrap_content"
                android:text="@string/word_password"
                android:textColor="@color/color_232323"
                android:textSize="@dimen/textSize_44pt" />

            <TextView
                android:id="@+id/text_card_reg_password"
                android:layout_width="@dimen/width_170"
                android:layout_height="@dimen/height_100"
                android:layout_marginEnd="@dimen/width_20"
                android:background="@drawable/border_color_dcdcdc_4px"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="2"
                android:textColor="@color/color_232323"
                android:textColorHint="@color/color_bbbbbb" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/width_40"
                android:text="**"
                android:textColor="@color/color_232323"
                android:textSize="@dimen/textSize_38pt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/msg_input_card_password"
                android:textColor="@color/color_fc5c57"
                android:textSize="@dimen/textSize_38pt" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_card_reg_birthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_50"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone"
            android:paddingStart="@dimen/width_54">

            <TextView
                android:layout_width="@dimen/width_210"
                android:layout_height="wrap_content"
                android:text="@string/word_identification"
                android:textColor="@color/color_232323"
                android:textSize="@dimen/textSize_44pt" />

            <EditText
                android:id="@+id/edit_card_reg_birthday"
                android:layout_width="@dimen/width_340"
                android:layout_height="@dimen/height_100"
                android:layout_marginEnd="@dimen/width_20"
                android:background="@drawable/border_color_dcdcdc_4px"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="6"
                android:textColor="@color/color_232323"
                android:textColorHint="@color/color_bbbbbb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/msg_input_card_birthday"
                android:textColor="@color/color_fc5c57"
                android:textSize="@dimen/textSize_38pt" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_card_reg_biz_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_50"
            android:visibility="gone"
            android:orientation="horizontal"
            android:paddingStart="@dimen/width_54">

            <TextView
                android:layout_width="@dimen/width_210"
                android:layout_height="@dimen/height_100"
                android:gravity="center_vertical"
                android:text="@string/word_identification"
                android:textColor="@color/color_232323"
                android:textSize="@dimen/textSize_44pt" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edit_card_reg_biz_no"
                    android:layout_width="@dimen/width_510"
                    android:layout_height="@dimen/height_100"
                    android:background="@drawable/border_color_dcdcdc_4px"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="10"
                    android:textColor="@color/color_232323"
                    android:textColorHint="@color/color_bbbbbb" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_20"
                    android:text="@string/msg_input_card_biz_no"
                    android:textColor="@color/color_fc5c57"
                    android:textSize="@dimen/textSize_38pt" />

            </LinearLayout>

        </LinearLayout>

        <CheckBox
            android:id="@+id/check_card_reg_totalAgree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/width_54"
            android:layout_marginTop="@dimen/height_60"
            android:button="@drawable/ic_check_s"
            android:gravity="left|center_vertical"
            android:paddingStart="@dimen/width_15"
            android:text="@string/word_total_agree"
            android:textColor="@color/color_232323"
            android:textSize="@dimen/textSize_46pt"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_60">

            <CheckBox
                android:id="@+id/check_card_reg_terms1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/width_54"
                android:button="@drawable/ic_check_s"
                android:paddingStart="@dimen/width_15"
                android:text="@string/msg_card_reg_terms1"
                android:textColor="@color/color_737373"
                android:textSize="@dimen/textSize_40pt" />

            <TextView
                android:id="@+id/text_card_reg_view_terms1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/width_54"
                android:background="@drawable/underbar_fc5c57_ffffff"
                android:text="@string/msg_view"
                android:textColor="@color/color_fc5c57"
                android:textSize="@dimen/textSize_32pt"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_50">

            <CheckBox
                android:id="@+id/check_card_reg_terms2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/width_54"
                android:button="@drawable/ic_check_s"
                android:paddingStart="@dimen/width_15"
                android:text="@string/msg_card_reg_terms2"
                android:textColor="@color/color_737373"
                android:textSize="@dimen/textSize_40pt" />

            <TextView
                android:id="@+id/text_card_reg_view_terms2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/width_54"
                android:background="@drawable/underbar_fc5c57_ffffff"
                android:text="@string/msg_view"
                android:textColor="@color/color_fc5c57"
                android:textSize="@dimen/textSize_32pt"
                android:textStyle="bold" />


        </RelativeLayout>

        <View
            android:id="@+id/view_card_reg_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_1000"
            android:visibility="gone"/>

    </LinearLayout>


</androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/text_card_config_reg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_171"
            android:background="@color/color_fc5c57"
            android:layout_alignParentBottom="true"
            android:textSize="@dimen/textSize_39pt"
            android:textColor="@color/white"
            android:text="@string/msg_reg"
            android:textStyle="bold"
            android:gravity="center"/>


        <com.pplus.luckybol.apps.common.component.RandomPadView
            android:id="@+id/random_pad_card_reg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_720"
            android:visibility="gone"/>

    </LinearLayout>


</RelativeLayout>