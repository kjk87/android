<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/image_gallery"
        android:layout_width="match_parent"
        android:layout_height="@dimen/width_268"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/text_gallery_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_write_photo_sel"
        android:layout_marginTop="@dimen/height_14"
        android:layout_marginRight="@dimen/height_14"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:textSize="@dimen/textSize_30pt"
        android:textColor="@color/white"/>

</RelativeLayout>