<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".apps.my.ui.AlertProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/height_420">

            <ImageView
                android:layout_width="@dimen/width_330"
                android:layout_height="@dimen/width_330"
                android:src="@drawable/img_alert_profile"/>

            <TextView
                android:id="@+id/text_alert_profile_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_66pt"
                android:layout_marginTop="@dimen/height_72"
                android:textColor="@color/color_373c42"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_39pt"
                android:layout_marginTop="@dimen/height_72"
                android:textColor="@color/color_6e7780"
                android:gravity="center"
                android:text="@string/msg_alert_profile_desc"/>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_180"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_alert_profile_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/color_525961"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_42pt"
            android:text="@string/msg_next_do"/>
        <TextView
            android:id="@+id/text_alert_profile_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/color_fc5c57"
            android:layout_weight="2"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_42pt"
            android:text="@string/msg_profile_set_reward"/>

    </LinearLayout>

</LinearLayout>