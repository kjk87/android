<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layout_play_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_450">

            <ImageView
                android:id="@+id/image_random_play"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_random_play_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_play_banner_bottom"
            android:orientation="vertical"
            android:paddingStart="@dimen/width_90"
            android:paddingTop="@dimen/height_60"
            android:paddingEnd="@dimen/width_90"
            android:paddingBottom="@dimen/height_60"
            android:visibility="gone">


            <RelativeLayout
                android:id="@+id/layout_random_play_graph"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_50">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_26"
                    android:layout_centerVertical="true"
                    android:background="@drawable/img_play_graph_bg" />

                <LinearLayout
                    android:id="@+id/layout_random_play_join_rate_total"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <RelativeLayout
                        android:id="@+id/layout_random_play_join_rate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0">

                        <View
                            android:id="@+id/view_random_play_graph"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_26"
                            android:layout_centerVertical="true"
                            android:background="@drawable/img_play_graph_full" />

                        <ImageView
                            android:id="@+id/image_random_play_graph"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/img_play_graph_full_icon" />

                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_9">

                <TextView
                    android:id="@+id/text_random_play_join_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_232323"
                    android:textSize="@dimen/textSize_28pt"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_random_play_join_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/color_808080"
                    android:textSize="@dimen/textSize_28pt"
                    android:textStyle="bold" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/layout_random_play_announce_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_30"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="@dimen/height_60"
                    android:layout_height="@dimen/height_60"
                    android:layout_marginEnd="@dimen/width_24"
                    android:background="@drawable/bg_border_808080_6px_circle"
                    android:gravity="center"
                    android:text="!"
                    android:textColor="@color/color_808080"
                    android:textEditSideNoPasteWindowLayout="@dimen/textSize_45pt"
                    android:textSize="@dimen/textSize_39pt"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_random_play_announce_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_232323"
                    android:textSize="@dimen/textSize_39pt" />


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</RelativeLayout>