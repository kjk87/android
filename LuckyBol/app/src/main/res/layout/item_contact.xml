<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_225"
    android:orientation="vertical"
    android:paddingLeft="@dimen/width_60"
    android:paddingRight="@dimen/width_60">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height_48"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.pplus.luckybol.apps.common.ui.custom.MaskableFrameLayout
            android:layout_width="@dimen/width_120"
            android:layout_height="@dimen/width_120"
            android:layout_marginEnd="@dimen/width_42"
            app:mask="@drawable/bg_circle_000000"
            app:porterduffxfermode="DST_IN">

            <ImageView
                android:id="@+id/image_contact_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_contact_profile_default" />


        </com.pplus.luckybol.apps.common.ui.custom.MaskableFrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_contact_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_373c42"
                android:textSize="@dimen/textSize_42pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_contact_buff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_6e7780"
                android:textSize="@dimen/textSize_36pt"
                android:textStyle="bold"
                android:visibility="gone" />

        </LinearLayout>

        <ImageView
            android:id="@+id/image_contact_check"
            android:layout_width="@dimen/width_72"
            android:layout_height="@dimen/width_72"
            android:src="@drawable/btn_buff_check"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/text_contact_invite"
            android:layout_width="@dimen/width_183"
            android:layout_height="@dimen/height_78"
            android:background="@drawable/bg_fc5c57_radius_15"
            android:gravity="center"
            android:text="@string/word_invite2"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_39pt"
            android:textStyle="bold"
            android:visibility="gone" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_3"
        android:layout_alignParentBottom="true"
        android:background="@color/color_eef2f6" />

</RelativeLayout>