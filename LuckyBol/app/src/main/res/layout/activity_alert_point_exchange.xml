<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bf000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/height_200"
        android:layout_marginStart="@dimen/width_90"
        android:layout_marginEnd="@dimen/width_90"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_180">

            <ImageView
                android:id="@+id/image_point_exchange_close"
                android:layout_width="@dimen/width_122"
                android:layout_height="@dimen/height_134"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/height_20"
                android:layout_marginEnd="@dimen/height_20"
                android:src="@drawable/ic_top_close" />
        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/word_point_exchange"
            android:textColor="@color/color_232323"
            android:textSize="@dimen/textSize_64pt"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/width_60"
            android:layout_marginTop="@dimen/height_130"
            android:layout_marginEnd="@dimen/width_60">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/word_retention_bol"
                android:textColor="@color/color_232323"
                android:textSize="@dimen/textSize_48pt" />

            <TextView
                android:id="@+id/text_alert_point_exchange_retention_bol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:textColor="@color/color_232323"
                android:textSize="@dimen/textSize_48pt"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/width_60"
            android:layout_marginTop="@dimen/height_10"
            android:layout_marginEnd="@dimen/width_60">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/word_exchange_point"
                android:textColor="@color/color_fc5c57"
                android:textSize="@dimen/textSize_48pt" />

            <LinearLayout
                android:layout_width="@dimen/width_360"
                android:layout_height="@dimen/height_80"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/border_color_dcdcdc_4px"
                android:orientation="horizontal"
                android:paddingStart="@dimen/width_10"
                android:paddingEnd="@dimen/width_10">

                <EditText
                    android:id="@+id/edit_alert_point_exchange"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/width_10"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:inputType="number"
                    android:gravity="center"
                    android:textColor="@color/color_fc5c57"
                    android:textSize="@dimen/textSize_48pt"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/word_point_unit"
                    android:textColor="@color/color_fc5c57"
                    android:textSize="@dimen/textSize_48pt" />

            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_4"
            android:layout_marginStart="@dimen/width_60"
            android:layout_marginTop="@dimen/height_60"
            android:layout_marginEnd="@dimen/width_60"
            android:background="@color/color_f0f0f0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_60"
            android:text="@string/msg_point_exchange_desc1"
            android:textColorHint="@color/color_232323"
            android:textSize="@dimen/textSize_40pt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_4"
            android:text="@string/msg_point_exchange_desc2"
            android:textColor="@color/color_ff4646"
            android:textSize="@dimen/textSize_29pt" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_171"
            android:layout_marginTop="@dimen/height_100"
            android:background="@color/color_fc5c57"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/text_alert_point_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color_fc5c57"
                android:gravity="center"
                android:text="@string/word_confirm"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_39pt" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>