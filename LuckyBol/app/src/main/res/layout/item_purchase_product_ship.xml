<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingStart="@dimen/width_54"
    android:paddingEnd="@dimen/width_54"
    android:paddingTop="@dimen/height_60">

    <com.pplus.luckybol.apps.common.ui.custom.MaskableFrameLayout
        android:layout_width="@dimen/width_270"
        android:layout_height="@dimen/width_270"
        android:layout_marginEnd="@dimen/width_40"
        app:mask="@drawable/img_page_profile_mask"
        app:porterduffxfermode="DST_IN">

        <ImageView
            android:id="@+id/image_purchase_product_ship"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_page_profile_default"
            android:scaleType="centerCrop" />

    </com.pplus.luckybol.apps.common.ui.custom.MaskableFrameLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_purchase_product_ship_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_232323"
            android:textSize="@dimen/textSize_48pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_purchase_product_ship_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_737373"
            android:textSize="@dimen/textSize_34pt" />


        <TextView
            android:id="@+id/text_purchase_product_ship_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_737373"
            android:textSize="@dimen/textSize_34pt" />

        <TextView
            android:id="@+id/text_purchase_product_ship_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_232323"
            android:textSize="@dimen/textSize_34pt"
            android:textStyle="bold"/>

    </LinearLayout>


</LinearLayout>