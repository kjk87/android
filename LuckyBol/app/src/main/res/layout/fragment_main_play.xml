<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f4f6f8"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                app:elevation="0dp"
                app:expanded="true">

                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:fitsSystemWindows="true"
                    app:contentScrim="@color/white"
                    app:expandedTitleTextAppearance="@style/TransparentText"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_861"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_bol_banner" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/width_60"
                            android:layout_marginTop="@dimen/height_420"
                            android:layout_marginEnd="@dimen/width_72">

                            <RelativeLayout
                                android:layout_width="356dp"
                                android:layout_height="82dp"
                                android:layout_marginStart="@dimen/width_12"
                                android:layout_marginTop="@dimen/height_36"
                                android:background="@drawable/bg_ffffff_radius_24">

                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="@string/msg_bol_play_title"
                                        android:textColor="@color/color_212529"
                                        android:textSize="@dimen/textSize_48pt"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/height_12"
                                        android:gravity="center"
                                        android:text="@string/msg_bol_play_desc"
                                        android:textColor="@color/color_373c42"
                                        android:textSize="@dimen/textSize_42pt" />

                                </androidx.appcompat.widget.LinearLayoutCompat>

                            </RelativeLayout>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_luckybol" />

                        </RelativeLayout>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/layout_lucky_lotto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/height_36"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/width_72"
                                    android:layout_marginEnd="@dimen/width_72"
                                    android:background="@drawable/bg_ffffff_radius_top_24"
                                    android:elevation="@dimen/height_10"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:paddingTop="@dimen/height_54"
                                    android:paddingBottom="@dimen/height_54">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="@string/msg_lotto_title"
                                        android:textColor="@color/color_212529"
                                        android:textSize="@dimen/textSize_48pt"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/text_main_play_lotto_desc"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/height_12"
                                        android:gravity="center"
                                        android:text="@string/html_msg_lotto_desc"
                                        android:textColor="@color/color_373c42"
                                        android:textSize="@dimen/textSize_42pt" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/height_120"
                                    android:layout_marginStart="@dimen/width_72"
                                    android:layout_marginEnd="@dimen/width_72"
                                    android:background="@drawable/bg_fc5c57_radius_bottom_15"
                                    android:elevation="@dimen/height_10"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/text_main_play_lotto_win_history"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:text="@string/msg_view_lotto_winner_history"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/textSize_36pt"
                                        android:textStyle="bold" />

                                    <View
                                        android:layout_width="@dimen/width_3"
                                        android:layout_height="@dimen/height_84"
                                        android:layout_gravity="center"
                                        android:background="@color/color_33eef2f6" />

                                    <TextView
                                        android:id="@+id/text_main_play_lotto_view_detail"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:text="@string/msg_view_detail"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/textSize_36pt"
                                        android:textStyle="bold" />

                                </LinearLayout>


                            </androidx.appcompat.widget.LinearLayoutCompat>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/height_144"
                                android:layout_marginStart="@dimen/width_72"
                                android:layout_marginTop="@dimen/height_111"
                                android:layout_marginEnd="@dimen/width_72"
                                android:layout_marginBottom="@dimen/height_10"
                                android:background="@drawable/bg_ffffff_radius_15"
                                android:elevation="@dimen/height_10"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <RelativeLayout
                                    android:id="@+id/layout_main_view_win_impression"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:text="@string/msg_view_impression"
                                        android:textColor="@color/color_373c42"
                                        android:textSize="@dimen/textSize_39pt" />

                                </RelativeLayout>

                                <View
                                    android:id="@+id/view_main_winner_bar"
                                    android:layout_width="@dimen/width_3"
                                    android:layout_height="@dimen/height_60"
                                    android:layout_gravity="center_vertical"
                                    android:background="@color/color_d3d7db" />

                                <RelativeLayout
                                    android:id="@+id/layout_main_my_win"
                                    android:layout_width="@dimen/width_480"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/bg_ffffff_radius_15">

                                    <TextView
                                        android:id="@+id/text_main_my_win"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:text="@string/word_my_win_history"
                                        android:textColor="@color/color_373c42"
                                        android:textSize="@dimen/textSize_39pt" />

                                    <ImageView
                                        android:id="@+id/image_win_history_new"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_toRightOf="@id/text_main_my_win"
                                        android:paddingBottom="@dimen/height_30"
                                        android:src="@drawable/ic_event_new"
                                        android:visibility="gone" />


                                </RelativeLayout>
                            </LinearLayout>


                        </androidx.appcompat.widget.LinearLayoutCompat>



                    </androidx.appcompat.widget.LinearLayoutCompat>


                </com.google.android.material.appbar.CollapsingToolbarLayout>


            </com.google.android.material.appbar.AppBarLayout>

            <androidx.core.widget.NestedScrollView
                android:id="@+id/scroll_point_buy_with_event"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/layout_main_play_lotto"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_660"
                        android:layout_marginStart="@dimen/width_72"
                        android:layout_marginTop="@dimen/height_36"
                        android:layout_marginEnd="@dimen/width_72">

                        <androidx.viewpager2.widget.ViewPager2
                            android:id="@+id/pager_main_play_lotto"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <com.pplus.luckybol.apps.common.ui.custom.DirectionIndicator
                            android:id="@+id/indicator_main_play_lotto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="@dimen/height_42" />

                        <TextView
                            android:id="@+id/text_main_play_lotto_page"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/height_60"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_margin="@dimen/width_30"
                            android:background="@drawable/bg_cc212529_radius_300"
                            android:gravity="center"
                            android:paddingStart="@dimen/width_30"
                            android:paddingEnd="@dimen/width_30"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textSize_33pt"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/image_main_play_a"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_465"
                        android:src="@drawable/img_bol_play_a_banner" />

                    <ImageView
                        android:id="@+id/image_main_play_b"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_465"
                        android:src="@drawable/img_bol_play_b_banner" />

                    <ImageView
                        android:id="@+id/image_main_play_c"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_465"
                        android:src="@drawable/img_bol_play_c_banner" />

                    <ImageView
                        android:id="@+id/image_main_play_d"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_465"
                        android:src="@drawable/img_bol_play_d_banner" />


                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </LinearLayout>

</RelativeLayout>