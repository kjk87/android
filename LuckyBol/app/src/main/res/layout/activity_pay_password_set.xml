<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_pay_password_set"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_pay_password_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/height_300"
            android:text="@string/msg_set_pay_password"
            android:textColor="@color/color_232323"
            android:gravity="center"
            android:textSize="@dimen/textSize_54pt" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/height_40"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edit_pay_password1"
                android:layout_width="@dimen/width_140"
                android:layout_height="@dimen/width_140"
                android:background="@drawable/bg_card_password"
                android:gravity="center"
                android:inputType="none"
                android:maxLength="1" />

            <EditText
                android:id="@+id/edit_pay_password2"
                android:layout_width="@dimen/width_140"
                android:layout_height="@dimen/width_140"
                android:background="@drawable/bg_card_password"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1" />

            <EditText
                android:id="@+id/edit_pay_password3"
                android:layout_width="@dimen/width_140"
                android:layout_height="@dimen/width_140"
                android:background="@drawable/bg_card_password"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1" />

            <EditText
                android:id="@+id/edit_pay_password4"
                android:layout_width="@dimen/width_140"
                android:layout_height="@dimen/width_140"
                android:background="@drawable/bg_card_password"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1" />
            <EditText
                android:id="@+id/edit_pay_password5"
                android:layout_width="@dimen/width_140"
                android:layout_height="@dimen/width_140"
                android:background="@drawable/bg_card_password"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1" />
            <EditText
                android:id="@+id/edit_pay_password6"
                android:layout_width="@dimen/width_140"
                android:layout_height="@dimen/width_140"
                android:background="@drawable/bg_card_password"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1" />

        </LinearLayout>

        <TextView
            android:id="@+id/text_pay_password_invalid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize_32pt"
            android:textColor="@color/color_ff4646"
            android:layout_marginTop="@dimen/height_30"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            android:text="@string/msg_invalid_pay_password"/>

    </LinearLayout>

    <com.pplus.luckybol.apps.common.component.RandomPadView
        android:id="@+id/random_pad_pay_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_720"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>