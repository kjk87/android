<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <com.buzzvil.buzzad.benefit.presentation.nativead.NativeAdView
        android:id="@+id/native_ad_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.buzzvil.buzzad.benefit.presentation.media.MediaView
                android:id="@+id/media_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_564" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/width_60"
                android:layout_marginEnd="@dimen/width_60"
                android:layout_marginTop="@dimen/height_10"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/image_buzzvil_icon"
                    android:layout_width="@dimen/width_84"
                    android:layout_height="@dimen/width_84"
                    android:layout_marginEnd="@dimen/width_24"/>

                <TextView
                    android:id="@+id/text_buzzvil_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSize_39pt"
                    android:textColor="@color/color_373c42"
                    android:textStyle="bold"/>

            </LinearLayout>

            <TextView
                android:id="@+id/text_buzzvil_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/width_60"
                android:layout_marginEnd="@dimen/width_60"
                android:layout_marginTop="@dimen/height_10"
                android:textSize="@dimen/textSize_39pt"
                android:textColor="@color/color_373c42"/>


            <com.buzzvil.buzzad.benefit.presentation.media.DefaultCtaView
                android:id="@+id/cta_view_buzzvil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/width_60"
                android:layout_marginBottom="@dimen/height_48"
                android:layout_marginTop="@dimen/height_10"/>
        </LinearLayout>

    </com.buzzvil.buzzad.benefit.presentation.nativead.NativeAdView>


</RelativeLayout>