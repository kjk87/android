<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bf000000"
    android:fitsSystemWindows="true"
    tools:context=".apps.goods.ui.AlertCancelCompleteActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_600"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_3"
            android:background="@color/color_d8d8d8"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_100"
            android:layout_marginTop="@dimen/height_30"
            android:layout_marginStart="@dimen/width_54"
            android:layout_marginEnd="@dimen/width_54">

            <TextView
                android:id="@+id/text_alert_goods_option_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/btn_commerce_popup_back"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:textSize="@dimen/textSize_38pt"
                android:textColor="@color/color_232323"
                android:textStyle="bold" />


        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_alert_goods_option"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/width_54"
            android:layout_marginEnd="@dimen/width_54"/>

    </LinearLayout>

</RelativeLayout>