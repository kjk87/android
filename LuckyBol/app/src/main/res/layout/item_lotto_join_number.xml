<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_207">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/width_66"
        android:layout_marginEnd="@dimen/width_66"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_lotto_join_date"
            android:layout_width="@dimen/width_384"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize_42pt"
            android:textColor="@color/color_212529"/>


        <LinearLayout
            android:id="@+id/layout_lotto_join_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_3"
        android:background="@color/color_eef2f6"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>