<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/height_120"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/width_54"
        android:layout_marginTop="@dimen/height_42"
        android:layout_marginEnd="@dimen/width_54"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_product_notice_title"
            android:layout_width="@dimen/width_240"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/word_as_ment"
            android:textColor="@color/color_808080"
            android:textSize="@dimen/textSize_45pt" />

        <TextView
            android:id="@+id/text_product_notice_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_232323"
            android:textSize="@dimen/textSize_45pt" />

    </LinearLayout>


</RelativeLayout>