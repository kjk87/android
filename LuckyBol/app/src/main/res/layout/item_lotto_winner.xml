<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:paddingLeft="@dimen/width_60"
              android:paddingRight="@dimen/width_60">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height_30"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.pplus.luckybol.apps.common.ui.custom.MaskableFrameLayout
            android:layout_width="@dimen/width_96"
            android:layout_height="@dimen/width_96"
            android:layout_marginEnd="@dimen/width_30"
            app:mask="@drawable/ic_event_profile_default_mask"
            app:porterduffxfermode="DST_IN">

            <ImageView
                android:id="@+id/image_lotto_winner_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_event_profile_default"/>
        </com.pplus.luckybol.apps.common.ui.custom.MaskableFrameLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_lotto_winner_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_212529"
                android:textSize="@dimen/textSize_42pt"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text_lotto_winner_impression"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_212529"
                android:textSize="@dimen/textSize_42pt"
                android:layout_marginTop="@dimen/height_15"/>


            <TextView
                android:id="@+id/text_lotto_winner_gift_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_15"
                android:textColor="@color/color_fc5c57"
                android:textSize="@dimen/textSize_39pt"
                android:textStyle="bold"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/layout_lotto_winner_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/height_15"/>
        </LinearLayout>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_3"
        android:layout_marginTop="@dimen/height_60"
        android:background="@color/color_eef2f6"/>

</LinearLayout>
