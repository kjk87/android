<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_162"
        android:layout_marginStart="@dimen/width_60"
        android:layout_marginEnd="@dimen/width_60">

        <TextView
            android:id="@+id/text_event_result_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_6e7780"
            android:textSize="@dimen/textSize_42pt"
            android:layout_marginEnd="@dimen/width_40"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/text_event_result_gift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_fc5c57"
            android:layout_toRightOf="@id/text_event_result_msg"
            android:textSize="@dimen/textSize_42pt"
            android:gravity="end"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textStyle="bold"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_3"
        android:background="@color/color_e8ecf0"/>
</LinearLayout>