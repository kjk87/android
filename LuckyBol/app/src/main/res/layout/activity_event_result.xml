<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_event_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bf000000"
    tools:context="com.pplus.luckybol.apps.event.ui.EventResultActivity">


    <LinearLayout
        android:id="@+id/layout_event_result1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/width_90"
        android:layout_marginStart="@dimen/width_90"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="@dimen/height_50"
        android:visibility="visible">

        <ImageView
            android:id="@+id/image_event_result_loose"
            android:layout_width="@dimen/width_400"
            android:layout_height="@dimen/width_400"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/text_event_result_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/msg_celebration"
            android:textColor="@color/color_232323"
            android:textSize="@dimen/textSize_84pt"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/text_event_result_description1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/width_54"
            android:layout_marginStart="@dimen/width_54"
            android:layout_marginTop="@dimen/height_30"
            android:gravity="center"
            android:textColor="@color/color_505050"
            android:textSize="@dimen/textSize_42pt"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/image_event_result"
            android:layout_width="@dimen/width_580"
            android:layout_height="@dimen/width_580"
            android:layout_marginTop="@dimen/height_40"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/text_event_result_description2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/width_54"
            android:layout_marginStart="@dimen/width_54"
            android:layout_marginTop="@dimen/height_40"
            android:gravity="center"
            android:text="@string/msg_write_winner_description"
            android:textColor="@color/color_ff4646"
            android:textSize="@dimen/textSize_33pt"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_171"
            android:layout_marginTop="@dimen/height_100"
            android:background="@color/color_fc5c57"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_event_result_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color_fc5c57"
                android:gravity="center"
                android:text="@string/word_cancel"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_39pt"
                android:visibility="gone"/>

            <View
                android:id="@+id/text_event_result_bar"
                android:layout_width="@dimen/width_2"
                android:layout_height="@dimen/height_45"
                android:layout_gravity="center_vertical"
                android:background="@color/color_8bbbf8"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/text_event_result_impression"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color_fc5c57"
                android:gravity="center"
                android:text="@string/msg_write_winner_impression"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_39pt"/>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_event_result2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/height_368"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/text_event_result2_alert"
            android:layout_width="@dimen/width_727"
            android:layout_height="wrap_content"
            android:background="@drawable/img_popup_chat"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_51pt"/>

        <ImageView
            android:id="@+id/image_event_result2_rto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/height_46"
            android:src="@drawable/ic_event_popup_character"/>

        <TextView
            android:id="@+id/text_event_result2_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/height_80"
            android:background="@drawable/underbar_ffffff_transparent"
            android:text="@string/word_confirm"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_51pt"/>

<!--        <TextView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginEnd="@dimen/width_54"-->
<!--            android:layout_marginStart="@dimen/width_54"-->
<!--            android:layout_marginTop="@dimen/height_60"-->
<!--            android:gravity="center"-->
<!--            android:layout_gravity="center_horizontal"-->
<!--            android:text="@string/word_warning2"-->
<!--            android:textColor="@color/color_ff4646"-->
<!--            android:textSize="@dimen/textSize_46pt"-->
<!--            android:textStyle="bold"/>-->


<!--        <TextView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginEnd="@dimen/width_54"-->
<!--            android:layout_marginStart="@dimen/width_54"-->
<!--            android:gravity="center"-->
<!--            android:text="@string/msg_event_join_desc"-->
<!--            android:textColor="@color/color_ff4646"-->
<!--            android:textSize="@dimen/textSize_42pt"/>-->


    </LinearLayout>

    <WebView
        android:id="@+id/webview_event_result"
        android:layout_width="@dimen/width_540"
        android:layout_height="@dimen/height_960"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

</RelativeLayout>
