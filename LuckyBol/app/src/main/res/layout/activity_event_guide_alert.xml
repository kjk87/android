<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bf000000"
    android:fitsSystemWindows="true"
    tools:context=".apps.event.ui.EventAlertActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/width_90"
        android:layout_marginEnd="@dimen/width_90"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_event_guide_alert_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/width_54"
            android:layout_marginTop="@dimen/height_120"
            android:layout_marginEnd="@dimen/width_54"
            android:gravity="center"
            android:text="@string/msg_question_time_event"
            android:textColor="@color/color_232323"
            android:textSize="@dimen/textSize_70pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_event_guide_alert_contents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/width_54"
            android:layout_marginEnd="@dimen/width_54"
            android:gravity="center"
            android:text="@string/msg_time_event_description"
            android:textColor="@color/color_737373"
            android:textSize="@dimen/textSize_40pt" />

        <ImageView
            android:id="@+id/image_event_guide_alert"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_900"
            android:layout_marginTop="@dimen/height_40"
            android:src="@drawable/img_popup_timeevent_guide" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_171"
            android:background="@color/color_fc5c57"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_event_guide_alert_confirm"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/color_fc5c57"
                android:gravity="center"
                android:text="@string/word_confirm"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_39pt"/>

            <View
                android:layout_width="@dimen/width_2"
                android:layout_height="@dimen/height_45"
                android:background="@color/white"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/text_event_guide_alert_do_not_again"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/color_fc5c57"
                android:gravity="center"
                android:text="@string/msg_do_not_show_again"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_39pt"/>


        </LinearLayout>
    </LinearLayout>

</RelativeLayout>