<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bf000000"
    tools:context=".apps.event.ui.EventAlertActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginEnd="@dimen/width_90"
        android:layout_marginStart="@dimen/width_90"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/width_677"
            android:layout_height="@dimen/height_413"
            android:src="@drawable/img_lotto_event_popup_character_2"
            android:layout_marginTop="@dimen/height_180"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_40"
            android:textSize="@dimen/textSize_64pt"
            android:textColor="@color/color_232323"
            android:textStyle="bold"
            android:text="@string/msg_lotto_ticket_charge_desc1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_8"
            android:textSize="@dimen/textSize_46pt"
            android:textColor="@color/color_232323"
            android:text="@string/msg_lotto_ticket_charge_desc2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_171"
            android:layout_marginTop="@dimen/height_180"
            android:background="@color/color_fc5c57"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_lotto_ticket_charge_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color_fc5c57"
                android:gravity="center"
                android:text="@string/word_cancel"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_39pt"/>

            <View
                android:layout_width="@dimen/width_2"
                android:layout_height="@dimen/height_45"
                android:layout_gravity="center_vertical"
                android:background="@color/white"/>

            <TextView
                android:id="@+id/text_lotto_ticket_charge_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color_fc5c57"
                android:gravity="center"
                android:text="@string/word_confirm"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_39pt"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>