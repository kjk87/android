<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".apps.event.ui.NumberEventDetailActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_0"
            android:layout_weight="2" />

        <ImageView
            android:id="@+id/image_number_event"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_600"
            android:layout_marginStart="@dimen/width_40"
            android:layout_marginEnd="@dimen/width_40"
            android:scaleType="centerCrop"
            android:src="@drawable/img_number_event_default"/>

        <LinearLayout
            android:id="@+id/layout_number_event_win_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/height_50"
            android:orientation="horizontal"></LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_0"
            android:layout_weight="1" />


        <com.pplus.luckybol.apps.common.ui.custom.dial.NumberEventPadView
            android:id="@+id/view_number_event_pad"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_600"
            android:layout_marginStart="@dimen/width_60"
            android:layout_marginEnd="@dimen/width_60" />

        <TextView
            android:id="@+id/text_number_event_detail_join"
            android:layout_width="@dimen/width_760"
            android:layout_height="@dimen/height_140"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/height_50"
            android:background="@drawable/bg_fc5c57_radius_66"
            android:gravity="center"
            android:text="@string/msg_join_event"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_39pt"
            android:textStyle="bold" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_0"
            android:layout_weight="7" />

    </LinearLayout>

</RelativeLayout>