<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".apps.buff.ui.ForcedExitReasonActivity">

    <EditText
        android:id="@+id/edit_forced_exit_reason"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:gravity="top"
        android:hint="@string/hint_buff_forced_exit"
        android:paddingStart="@dimen/width_60"
        android:paddingTop="@dimen/height_72"
        android:paddingEnd="@dimen/width_60"
        android:textColor="@color/color_373c42"
        android:textColorHint="@color/color_a9b0b7"
        android:textSize="@dimen/textSize_42pt"
        android:maxLength="100"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_forced_exit_reason"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_168"
        android:background="@color/color_c0c6cc"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_48pt"
        android:textStyle="bold" />


</androidx.appcompat.widget.LinearLayoutCompat>