<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/layout_card_select"
        android:layout_width="@dimen/width_510"
        android:layout_height="@dimen/height_310"
        android:layout_marginEnd="@dimen/width_30"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_card_card_select"
            android:layout_width="@dimen/width_100"
            android:layout_height="@dimen/width_100"
            android:layout_marginEnd="@dimen/width_10"
            android:layout_marginTop="@dimen/width_10"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            android:src="@drawable/btn_card_select" />

        <TextView
            android:id="@+id/text_card_select_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/width_40"
            android:layout_marginTop="@dimen/height_40"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_28pt"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/text_card_select_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:textSize="@dimen/textSize_32pt" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_card_select_not_exist"
        android:layout_width="@dimen/width_510"
        android:layout_height="@dimen/height_310"
        android:layout_marginEnd="@dimen/width_30"
        android:background="@drawable/bg_card_default">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableTop="@drawable/ic_card_add"
            android:drawablePadding="@dimen/height_20"
            android:textSize="@dimen/textSize_28pt"
            android:textColor="@color/color_b7b7b7"
            android:textStyle="bold"
            android:text="@string/word_card_reg"/>


    </RelativeLayout>

</RelativeLayout>