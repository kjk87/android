<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bf000000"
    android:fitsSystemWindows="true"
    tools:context=".apps.event.ui.EventAlertActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/width_90"
        android:layout_marginEnd="@dimen/width_90"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/width_54"
            android:layout_marginTop="@dimen/height_60"
            android:layout_marginEnd="@dimen/width_54"
            android:gravity="center"
            android:text="@string/word_bol_save"
            android:textColor="@color/color_232323"
            android:textSize="@dimen/textSize_60pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_event_lose_alert_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_90"
            android:gravity="center"
            android:text="@string/msg_event_lose_desc"
            android:textColor="@color/color_070707"
            android:textSize="@dimen/textSize_45pt" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_240"
            android:layout_marginStart="@dimen/width_54"
            android:layout_marginTop="@dimen/height_60"
            android:layout_marginEnd="@dimen/width_54"
            android:background="@drawable/bg_border_e8e8e8_radius_27">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/word_bol_save"
                    android:textColor="@color/color_070707"
                    android:textSize="@dimen/textSize_36pt" />

                <TextView
                    android:id="@+id/text_event_lose_alert_reward_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_18"
                    android:textColor="@color/color_fc5c57"
                    android:textSize="@dimen/textSize_96pt"
                    android:textStyle="bold" />

            </LinearLayout>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_171"
            android:layout_marginTop="@dimen/height_180"
            android:background="@color/color_fc5c57"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_event_lose_alert_close"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_fc5c57"
                android:gravity="center"
                android:text="@string/word_confirm"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_39pt" />


        </LinearLayout>
    </LinearLayout>

</RelativeLayout>