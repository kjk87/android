<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".apps.buff.ui.BuffMakeActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/width_60"
            android:paddingEnd="@dimen/width_60"
            android:paddingBottom="@dimen/height_288">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_72"
                android:text="@string/word_buff_make_image_title"
                android:textColor="@color/color_373c42"
                android:textSize="@dimen/textSize_48pt"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_492"
                android:layout_marginTop="@dimen/height_36"
                android:background="@drawable/bg_border_eef2f6_radius_12">

                <ImageView
                    android:id="@+id/image_buff_make_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/image_buff_make_image_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="@dimen/width_36"
                    android:visibility="gone"
                    android:src="@drawable/btn_buff_image_delete"/>

                <TextView
                    android:id="@+id/text_buff_make_background_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableTop="@drawable/ic_buff_add_image"
                    android:drawablePadding="@dimen/height_12"
                    android:gravity="center"
                    android:text="@string/msg_buff_make_image_desc"
                    android:textColor="@color/color_a9b0b7"
                    android:textSize="@dimen/textSize_39pt"
                    android:textStyle="bold" />


            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_72"
                android:text="@string/word_buff_make_tile_title"
                android:textColor="@color/color_373c42"
                android:textSize="@dimen/textSize_48pt"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edit_buff_make_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_132"
                android:layout_marginTop="@dimen/height_36"
                android:background="@drawable/bg_border_eef2f6_radius_12"
                android:gravity="center_vertical"
                android:hint="@string/hint_input_group_name"
                android:maxLength="12"
                android:paddingStart="@dimen/width_48"
                android:paddingEnd="@dimen/width_48"
                android:textColor="@color/color_373c42"
                android:textColorHint="@color/color_a9b0b7"
                android:textSize="@dimen/textSize_42pt"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_72"
                android:text="@string/word_buff_make_catchphrase_title"
                android:textColor="@color/color_373c42"
                android:textSize="@dimen/textSize_48pt"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edit_buff_make_catchphrase"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_132"
                android:layout_marginTop="@dimen/height_36"
                android:background="@drawable/bg_border_eef2f6_radius_12"
                android:gravity="center_vertical"
                android:hint="@string/hint_input_catchphrase"
                android:paddingStart="@dimen/width_48"
                android:paddingEnd="@dimen/width_48"
                android:textColor="@color/color_373c42"
                android:textColorHint="@color/color_a9b0b7"
                android:textSize="@dimen/textSize_42pt"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_72"
                android:text="@string/word_buff_make_group_count_title"
                android:textColor="@color/color_373c42"
                android:textSize="@dimen/textSize_48pt"
                android:textStyle="bold" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_51"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_buff_make_group_max_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/width_120"
                    android:drawableStart="@drawable/btn_buff_radio"
                    android:drawablePadding="@dimen/width_18"
                    android:gravity="center"
                    android:text="@string/word_max_group_count"
                    android:textColor="@color/color_373c42"
                    android:textSize="@dimen/textSize_42pt"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_buff_make_group_setting_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/btn_buff_radio"
                    android:drawablePadding="@dimen/width_18"
                    android:gravity="center"
                    android:text="@string/word_setting_group_count"
                    android:textColor="@color/color_373c42"
                    android:textSize="@dimen/textSize_42pt"
                    android:textStyle="bold" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <EditText
                android:id="@+id/edit_buff_make_group_count"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_132"
                android:layout_marginTop="@dimen/height_36"
                android:background="@drawable/bg_border_eef2f6_radius_12"
                android:gravity="center_vertical"
                android:hint="@string/hint_input_group_count"
                android:inputType="number"
                android:maxLength="2"
                android:paddingStart="@dimen/width_48"
                android:paddingEnd="@dimen/width_48"
                android:textColor="@color/color_373c42"
                android:textColorHint="@color/color_a9b0b7"
                android:textSize="@dimen/textSize_42pt"
                android:textStyle="bold"
                android:visibility="gone" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>

    <TextView
        android:id="@+id/text_buff_make_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_168"
        android:layout_alignParentBottom="true"
        android:background="@color/color_c0c6cc"
        android:gravity="center"
        android:text="@string/word_confirm"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_48pt"
        android:textStyle="bold" />

</RelativeLayout>