<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_bf000000"
    android:fitsSystemWindows="true"
    tools:context=".apps.event.ui.EventAlertActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_lotto_win"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:lottie_autoPlay="true"
        app:lottie_loop="false"
        android:scaleX="1.8"
        android:scaleY="1.8"
        app:lottie_rawRes="@raw/lotto_win"/>

     <androidx.appcompat.widget.LinearLayoutCompat
         android:id="@+id/layout_lotto_win_gift"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:layout_marginTop="@dimen/height_620"
         android:layout_centerHorizontal="true"
         android:visibility="gone"
         android:gravity="center_horizontal">
         
         <ImageView
             android:id="@+id/image_alert_lotto_win_gift"
             android:layout_width="@dimen/width_696"
             android:layout_height="@dimen/height_450"/>

         <TextView
             android:id="@+id/text_alert_lotto_win_gift_title"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="@dimen/textSize_45pt"
             android:textColor="@color/color_fc5c57"
             android:layout_marginTop="@dimen/height_36"
             android:textStyle="bold"/>


         <TextView
             android:id="@+id/text_alert_lotto_win_write_impression"
             android:layout_width="@dimen/width_500"
             android:layout_height="@dimen/height_120"
             android:textSize="@dimen/textSize_42pt"
             android:textColor="@color/white"
             android:gravity="center"
             android:layout_marginTop="@dimen/height_42"
             android:textStyle="bold"
             android:background="@drawable/bg_fc5c57_radius_66"
             android:text="@string/msg_write_win_impression"/>

     </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/text_alert_lotto_win_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSize_36pt"
        android:textColor="@color/color_ff4026"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/height_240"
        android:gravity="center"
        android:visibility="gone"
        android:textStyle="bold"/>

</RelativeLayout>