<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bf000000"
    android:fitsSystemWindows="true"
    tools:context=".apps.event.ui.EventAlertActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginEnd="@dimen/width_90"
        android:layout_marginStart="@dimen/width_90"
        android:background="@drawable/bg_ffffff_radius_24"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_alert_lotto_join_result"
            android:layout_width="@dimen/width_208"
            android:layout_height="@dimen/width_208"
            android:layout_marginTop="@dimen/height_108"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_lotto_join"/>

        <TextView
            android:id="@+id/text_alert_lotto_join_result_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_40"
            android:gravity="center"
            android:textColor="@color/color_4694fb"
            android:textSize="@dimen/textSize_60pt"
            android:text="@string/msg_lotto_join_alert_title"
            android:visibility="invisible"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/text_alert_lotto_join_result_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/width_27"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="@string/msg_lotto_join_alert_desc"
            android:visibility="invisible"
            android:textSize="@dimen/textSize_45pt"/>

        <TextView
            android:id="@+id/text_alert_lotto_join_result_confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_156"
            android:layout_marginTop="@dimen/height_90"
            android:background="@drawable/bg_fc5c57_radius_bottom_24"
            android:gravity="center"
            android:text="@string/word_confirm"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_48pt"
            android:textStyle="bold"/>

    </LinearLayout>

</RelativeLayout>