<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:res="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/width_54"
        android:layout_marginEnd="@dimen/width_54"
        android:layout_marginTop="@dimen/height_50"
        android:orientation="horizontal">

        <com.pplus.luckybol.apps.common.ui.custom.MaskableFrameLayout
            android:layout_width="@dimen/width_80"
            android:layout_height="@dimen/width_80"
            android:layout_marginEnd="@dimen/width_30"
            app:mask="@drawable/bg_circle_000000"
            app:porterduffxfermode="DST_IN">

            <ImageView
                android:id="@+id/image_buff_post_reply_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/img_commerce_user_profile_default" />

        </com.pplus.luckybol.apps.common.ui.custom.MaskableFrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_buff_post_reply_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_232323"
                android:textSize="@dimen/textSize_32pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_buff_post_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_565656"
                android:textSize="@dimen/textSize_32pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_buff_post_reply_reg_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_32pt"
                android:textColor="@color/color_bbbbbb"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_2"
        android:background="@color/color_e4e4e4"
        android:layout_marginTop="@dimen/height_50"/>
</LinearLayout>