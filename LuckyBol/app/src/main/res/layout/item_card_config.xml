<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:res="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_220"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/width_54"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_card_config"
            android:layout_width="@dimen/width_220"
            android:layout_height="@dimen/height_138"
            android:layout_marginEnd="@dimen/width_30"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_card_config_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_232323"
                android:textSize="@dimen/textSize_40pt"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/text_card_config_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_737373"
                android:textSize="@dimen/textSize_34pt" />


        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/image_card_config_delete"
        android:layout_width="@dimen/width_116"
        android:layout_height="@dimen/width_116"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/width_54"
        android:src="@drawable/ic_card_delete"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_2"
        android:background="@color/color_f0f0f0"
        android:layout_marginStart="@dimen/width_54"
        android:layout_marginEnd="@dimen/width_54"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>