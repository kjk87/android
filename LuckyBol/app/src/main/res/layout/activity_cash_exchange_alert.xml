<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bf000000"
    tools:context=".apps.event.ui.EventAlertActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/width_90"
        android:layout_marginEnd="@dimen/width_90"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_180">

            <ImageView
                android:id="@+id/image_cash_exchange_alert_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/width_20"
                android:layout_marginEnd="@dimen/width_20"
                android:src="@drawable/ic_top_close" />

        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/width_54"
            android:layout_marginEnd="@dimen/width_54"
            android:gravity="center"
            android:text="@string/word_notice_alert"
            android:textColor="@color/color_232323"
            android:textSize="@dimen/textSize_64pt"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_3"
            android:gravity="center"
            android:text="@string/msg_cash_exchange_alert_description"
            android:textColor="@color/color_737373"
            android:textSize="@dimen/textSize_46pt" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_110"
            android:layout_marginStart="@dimen/width_54"
            android:layout_marginEnd="@dimen/width_54">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_48pt"
                android:textColor="@color/color_232323"
                android:layout_centerVertical="true"
                android:text="@string/word_change_cash_request_amount"/>

            <TextView
                android:id="@+id/text_cash_exchange_alert_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_48pt"
                android:textColor="@color/color_232323"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:textStyle="bold"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize_29pt"
            android:layout_gravity="start"
            android:layout_marginStart="@dimen/width_54"
            android:layout_marginTop="@dimen/height_15"
            android:textColor="@color/color_ff4646"
            android:text="@string/msg_cash_exchange_alert_description2"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_2"
            android:background="@color/color_f0f0f0"
            android:layout_marginStart="@dimen/width_54"
            android:layout_marginEnd="@dimen/width_54"
            android:layout_marginTop="@dimen/height_30"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_30"
            android:layout_marginStart="@dimen/width_54"
            android:layout_marginEnd="@dimen/width_54">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_48pt"
                android:textColor="@color/color_fc5c57"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:text="@string/word_withdraw_amount"/>

            <TextView
                android:id="@+id/text_cash_exchange_alert_withdraw_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_48pt"
                android:textColor="@color/color_fc5c57"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:textStyle="bold"/>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_171"
            android:layout_marginTop="@dimen/height_180"
            android:background="@color/color_3c3c3c"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_cash_exchange_alert_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color_fc5c57"
                android:gravity="center"
                android:text="@string/word_confirm"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_39pt" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>