<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".apps.point.ui.PointBuyWithEventCompleteActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/height_120"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.pplus.luckybol.apps.common.ui.custom.MaskableFrameLayout
            android:layout_width="@dimen/width_660"
            android:layout_height="@dimen/width_660"
            app:mask="@drawable/ic_mypage_profile_mask"
            app:porterduffxfermode="DST_IN">

            <ImageView
                android:id="@+id/image_point_buy_with_event_complete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/luckybol_default_img"/>

        </com.pplus.luckybol.apps.common.ui.custom.MaskableFrameLayout>

        <TextView
            android:id="@+id/text_point_buy_with_event_complete_event_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_30"
            android:textSize="@dimen/textSize_60pt"
            android:layout_marginStart="@dimen/width_54"
            android:layout_marginEnd="@dimen/width_54"
            android:gravity="center"
            android:textColor="@color/color_232323"/>

        <TextView
            android:id="@+id/text_point_buy_with_event_complete_join_count_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_36"
            android:textSize="@dimen/textSize_60pt"
            android:textColor="@color/color_fc5c57"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/text_point_buy_with_event_complete_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_36"
            android:textSize="@dimen/textSize_60pt"
            android:textColor="@color/color_fc5c57"
            android:textStyle="bold"/>

        <RelativeLayout
            android:id="@+id/layout_point_buy_with_event_complete_graph"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_50"
            android:layout_marginStart="@dimen/width_54"
            android:layout_marginEnd="@dimen/width_54"
            android:layout_marginTop="@dimen/height_40">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_26"
                android:layout_centerVertical="true"
                android:background="@drawable/img_play_graph_bg" />

            <LinearLayout
                android:id="@+id/layout_point_buy_with_event_complete_join_rate_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:weightSum="1">

                <RelativeLayout
                    android:id="@+id/layout_point_buy_with_event_complete_join_rate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0">

                    <View
                        android:id="@+id/view_random_play_graph"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_26"
                        android:layout_centerVertical="true"
                        android:background="@drawable/img_play_graph_full" />

                    <ImageView
                        android:id="@+id/image_point_buy_with_event_complete_graph"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/img_play_graph_full_icon" />

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/width_54"
            android:layout_marginEnd="@dimen/width_54"
            android:layout_marginTop="@dimen/height_12">

            <TextView
                android:id="@+id/text_point_buy_with_event_complete_join_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/color_808080"
                android:textSize="@dimen/textSize_28pt"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_point_buy_with_event_complete_announce_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_30"
            android:layout_marginStart="@dimen/width_54"
            android:layout_marginEnd="@dimen/width_54"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/height_60"
                android:layout_height="@dimen/height_60"
                android:layout_marginEnd="@dimen/width_24"
                android:background="@drawable/bg_border_808080_6px_circle"
                android:gravity="center"
                android:text="!"
                android:textColor="@color/color_808080"
                android:textEditSideNoPasteWindowLayout="@dimen/textSize_45pt"
                android:textSize="@dimen/textSize_39pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_point_buy_with_event_complete_announce_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_232323"
                android:textSize="@dimen/textSize_39pt" />


        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/text_point_buy_with_event_complete_join_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_140"
        android:background="@drawable/bg_fc5c57_radius_66"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/width_54"
        android:layout_marginEnd="@dimen/width_54"
        android:text="@string/word_confirm"
        android:textColor="@color/white"
        android:layout_marginBottom="@dimen/height_60"
        android:textSize="@dimen/textSize_39pt" />


</RelativeLayout>