<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_100"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_selected_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/width_54"
            android:textSize="@dimen/textSize_34pt"
            android:textColor="@color/color_232323"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/image_selected_option_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/width_54"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/btn_commerce_popup_close" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/height_40">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/width_54"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_selected_option_minus"
                android:layout_width="@dimen/height_84"
                android:layout_height="@dimen/height_84"
                android:src="@drawable/btn_commerce_minus" />

            <TextView
                android:id="@+id/text_selected_option_count"
                android:layout_width="@dimen/width_210"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/color_fc5c57"
                android:textSize="@dimen/textSize_34pt" />

            <ImageView
                android:id="@+id/image_selected_option_plus"
                android:layout_width="@dimen/height_84"
                android:layout_height="@dimen/height_84"
                android:src="@drawable/btn_commerce_plus" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_selected_option_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize_34pt"
            android:textColor="@color/color_232323"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/width_54"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_10"
        android:background="@color/color_f0f0f0"/>


</LinearLayout>