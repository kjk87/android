<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/width_44"
        android:layout_marginTop="@dimen/height_47"
        android:layout_marginEnd="@dimen/width_44"
        android:layout_marginBottom="@dimen/height_41"
        android:background="@drawable/bg_232323_radius_55"
        android:orientation="vertical"
        android:paddingStart="@dimen/width_44"
        android:paddingTop="@dimen/height_55"
        android:paddingEnd="@dimen/width_44"
        android:paddingBottom="@dimen/height_60">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_373737_radius_27"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/height_33">

            <io.github.florent37.shapeofview.shapes.RoundRectView
                android:layout_width="@dimen/width_150"
                android:layout_height="@dimen/width_150"
                android:layout_marginEnd="@dimen/width_27"
                app:shape_roundRect_bottomLeftRadius="@dimen/width_13"
                app:shape_roundRect_bottomRightRadius="@dimen/width_13"
                app:shape_roundRect_topLeftRadius="@dimen/width_13"
                app:shape_roundRect_topRightRadius="@dimen/width_13">

                <ImageView
                    android:id="@+id/image_lucky_draw_win_gift"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

            </io.github.florent37.shapeofview.shapes.RoundRectView>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_lucky_draw_win_gift_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_dcdcdc"
                    android:textSize="@dimen/textSize_38pt"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_lucky_draw_win_gift_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/width_10"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_55pt"
                    android:textStyle="bold"
                    app:drawableStartCompat="@drawable/ic_lucky_draw_gift_dollar" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/height_44"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="@dimen/width_116"
                android:layout_height="@dimen/width_110"
                android:layout_marginEnd="@dimen/width_10">

                <io.github.florent37.shapeofview.shapes.CircleView
                    android:layout_width="@dimen/width_110"
                    android:layout_height="@dimen/width_110"
                    android:layout_marginEnd="@dimen/width_11">

                    <ImageView
                        android:id="@+id/image_lucky_draw_win_flag"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="center" />


                </io.github.florent37.shapeofview.shapes.CircleView>

                <io.github.florent37.shapeofview.shapes.CircleView
                    android:layout_width="@dimen/width_44"
                    android:layout_height="@dimen/width_44"
                    android:layout_gravity="end|bottom">

                    <ImageView
                        android:id="@+id/image_lucky_draw_win_profile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_profile_default" />

                </io.github.florent37.shapeofview.shapes.CircleView>


            </FrameLayout>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_lucky_draw_win_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_38pt" />

            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.appcompat.widget.LinearLayoutCompat>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_132"
            android:layout_marginTop="@dimen/height_13">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_38pt"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:text="@string/word_win_lucky_draw_number"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_lucky_draw_win_number_first"
                    android:layout_width="@dimen/width_99"
                    android:layout_height="@dimen/width_99"
                    android:layout_marginStart="@dimen/width_4"
                    android:layout_marginEnd="@dimen/width_4"
                    android:background="@drawable/bg_circle_ffc046"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_43pt"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_lucky_draw_win_number_second"
                    android:layout_width="@dimen/width_99"
                    android:layout_height="@dimen/width_99"
                    android:layout_marginStart="@dimen/width_4"
                    android:layout_marginEnd="@dimen/width_4"
                    android:background="@drawable/bg_circle_3278ff"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_43pt"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_lucky_draw_win_number_third"
                    android:layout_width="@dimen/width_99"
                    android:layout_height="@dimen/width_99"
                    android:layout_marginStart="@dimen/width_4"
                    android:layout_marginEnd="@dimen/width_4"
                    android:background="@drawable/bg_circle_ff5e5e"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_43pt"
                    android:textStyle="bold" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </RelativeLayout>

        <TextView
            android:id="@+id/text_lucky_draw_win_impression"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/width_33"
            android:paddingEnd="@dimen/width_33"
            android:paddingTop="@dimen/height_27"
            android:paddingBottom="@dimen/height_27"
            android:textSize="@dimen/textSize_38pt"
            android:textColor="@color/color_dcdcdc"
            android:layout_marginTop="@dimen/height_41"
            android:background="@drawable/bg_d6000000_radius_30"/>

        <TextView
            android:id="@+id/text_lucky_draw_win_reply_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize_33pt"
            android:textColor="@color/color_dcdcdc"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/height_16"
            android:drawablePadding="@dimen/width_10"
            android:gravity="center"
            app:drawableStartCompat="@drawable/ic_lucky_draw_reply"
            app:drawableEndCompat="@drawable/ic_my_arrow" />

    </androidx.appcompat.widget.LinearLayoutCompat>


</FrameLayout>