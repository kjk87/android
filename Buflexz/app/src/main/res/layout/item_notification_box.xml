<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_0f0f0f"
    android:orientation="vertical">
    
    <TextView
        android:id="@+id/text_notification_box_delete"
        android:layout_width="@dimen/width_240"
        android:layout_height="@dimen/height_221"
        android:layout_gravity="end"
        android:textColor="@color/color_ff5454"
        android:text="@string/word_delete"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="@dimen/textSize_44pt"
        android:background="@color/color_0f0f0f"/>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layout_notification_box"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_221"
        android:paddingStart="@dimen/width_44"
        android:paddingEnd="@dimen/width_44"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/color_232323">

        <ImageView
            android:id="@+id/image_notification_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_alarm_un_read"
            android:layout_marginEnd="@dimen/width_33"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/text_notification_box_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_44pt"
                    android:layout_marginEnd="@dimen/width_22"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/text_notification_box_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_dcdcdc"
                    android:textSize="@dimen/textSize_33pt"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                android:id="@+id/text_notification_box_contents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_dcdcdc"
                android:layout_marginTop="@dimen/height_16"
                android:textSize="@dimen/textSize_38pt"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
        

    </androidx.appcompat.widget.LinearLayoutCompat>

</FrameLayout>