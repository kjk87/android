<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".apps.terms.ui.AddTermsAgreeActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height_40"
        android:background="@drawable/bg_232323_radius_33"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingStart="@dimen/width_28"
        android:paddingEnd="@dimen/width_28">

        <CheckBox
            android:id="@+id/check_add_terms_agree_total_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/ic_check"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/width_16"
            android:layout_marginTop="@dimen/height_40"
            android:text="@string/word_total_agree"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_44pt" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_1"
            android:background="@color/color_3d3d3d"
            android:layout_marginTop="@dimen/height_26"/>

        <LinearLayout
            android:id="@+id/layout_add_terms_agree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_38"
            android:orientation="vertical" />


    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/text_add_terms_agree"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_135"
        android:layout_marginStart="@dimen/width_44"
        android:layout_marginEnd="@dimen/width_44"
        android:layout_marginTop="@dimen/height_55"
        android:background="@drawable/bg_48b778_radius_27"
        android:gravity="center"
        android:text="@string/word_complete"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_44pt"
        android:textStyle="bold" />



</androidx.appcompat.widget.LinearLayoutCompat>