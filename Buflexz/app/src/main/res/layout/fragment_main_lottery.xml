<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".apps.main.ui.MainLotteryFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/height_200">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_135"
                android:layout_marginStart="@dimen/width_44"
                android:layout_marginEnd="@dimen/width_44">

                <TextView
                    android:id="@+id/text_main_lottery_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawablePadding="@dimen/width_10"
                    android:gravity="center_vertical"
                    android:text="@string/word_login_join"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_33pt"
                    android:visibility="gone"
                    app:drawableEndCompat="@drawable/ic_my_arrow"
                    app:drawableStartCompat="@drawable/ic_profile_default" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/layout_main_lottery_member"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="@dimen/width_116"
                        android:layout_height="@dimen/width_110"
                        android:layout_marginEnd="@dimen/width_10">

                        <io.github.florent37.shapeofview.shapes.CircleView
                            android:layout_width="@dimen/width_110"
                            android:layout_height="@dimen/width_110"
                            android:layout_marginEnd="@dimen/width_11">


                            <ImageView
                                android:id="@+id/image_main_lottery_profile"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_profile_default" />

                        </io.github.florent37.shapeofview.shapes.CircleView>

                        <io.github.florent37.shapeofview.shapes.CircleView
                            android:layout_width="@dimen/width_44"
                            android:layout_height="@dimen/width_44"
                            android:layout_gravity="end|bottom">

                            <ImageView
                                android:id="@+id/image_main_lottery_flag"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="center" />

                        </io.github.florent37.shapeofview.shapes.CircleView>
                    </FrameLayout>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_main_lottery_nickname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textSize_38pt" />

                        <TextView
                            android:id="@+id/text_main_lottery_nation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textSize_36pt" />

                    </androidx.appcompat.widget.LinearLayoutCompat>


                </androidx.appcompat.widget.LinearLayoutCompat>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/width_44"
                android:layout_marginEnd="@dimen/width_44"
                android:layout_marginTop="@dimen/height_66">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSize_55pt"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="@string/word_lotto_en"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/width_44"/>

                <RelativeLayout
                    android:id="@+id/layout_main_lottery_guide"
                    android:layout_width="@dimen/width_346"
                    android:layout_height="@dimen/height_91"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_3e4843_radius_16">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="@string/word_guide_en"
                        android:textColor="@color/color_77f5ae"
                        android:textSize="@dimen/textSize_38pt"
                        android:textStyle="bold" />

                </RelativeLayout>

            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_49"
                android:text="@string/word_this_week_win_price"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_38pt"
                android:layout_marginStart="@dimen/width_44"
                android:layout_marginEnd="@dimen/width_44"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/image_main_lottery_banner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_517"
                android:layout_marginTop="@dimen/height_30"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/text_main_lotto_join"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_135"
                android:layout_marginTop="@dimen/height_55"
                android:layout_marginBottom="@dimen/height_55"
                android:background="@drawable/bg_48b778_radius_33"
                android:gravity="center"
                android:text="@string/word_free_start_en"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_44pt"
                android:layout_marginStart="@dimen/width_44"
                android:layout_marginEnd="@dimen/width_44"
                android:textStyle="bold" />



            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_66"
                android:background="@drawable/bg_232323_radius_55"
                android:orientation="vertical"
                android:paddingStart="@dimen/width_49"
                android:paddingEnd="@dimen/width_49"
                android:paddingBottom="@dimen/height_55">

                <TextView
                    android:id="@+id/text_main_lottery_round"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_49"
                    android:textColor="@color/color_48b778"
                    android:textSize="@dimen/textSize_38pt"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_main_lottery_announce_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_60pt"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/layout_main_lottery_remain_time"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_249"
                    android:layout_marginTop="@dimen/height_45"
                    android:background="@drawable/bg_1d1d1d_radius_33"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/height_55"
                    android:paddingBottom="@dimen/height_55">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_main_lottery_remain_days"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textSize_60pt"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_55"
                            android:gravity="center"
                            android:text="@string/word_days_en"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textSize_33pt" />

                    </androidx.appcompat.widget.LinearLayoutCompat>


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_main_lotto_date_divider" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_main_lottery_remain_hours"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textSize_60pt"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_55"
                            android:gravity="center"
                            android:text="@string/word_hrs_en"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textSize_33pt" />

                    </androidx.appcompat.widget.LinearLayoutCompat>


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_main_lotto_date_divider" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_main_lottery_remain_mins"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textSize_60pt"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_55"
                            android:gravity="center"
                            android:text="@string/word_mins_en"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textSize_33pt" />

                    </androidx.appcompat.widget.LinearLayoutCompat>


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_main_lotto_date_divider" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_main_lottery_remain_seconds"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textSize_60pt"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_55"
                            android:gravity="center"
                            android:text="@string/word_secs_en"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textSize_33pt" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/layout_main_before_lottery_round"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_66"
                android:background="@drawable/bg_232323_radius_55"
                android:orientation="vertical"
                android:paddingStart="@dimen/width_49"
                android:paddingEnd="@dimen/width_49"
                android:paddingBottom="@dimen/height_55"
                android:layout_marginStart="@dimen/width_44"
                android:layout_marginEnd="@dimen/width_44">

                <TextView
                    android:id="@+id/text_main_before_lottery_round"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_49"
                    android:textColor="@color/color_48b778"
                    android:textSize="@dimen/textSize_38pt"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/word_before_round_winner"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_60pt"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/layout_main_lottery_win_history"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_249"
                    android:layout_marginTop="@dimen/height_45"
                    android:background="@drawable/bg_1d1d1d_radius_33"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/width_47"
                    android:paddingEnd="@dimen/width_47">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_main_lottery_random_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:id="@+id/text_main_lottery_winner_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/ic_my_arrow"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:textSize="@dimen/textSize_44pt"
                        android:textStyle="bold" />
                </RelativeLayout>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_66"
                android:background="@drawable/bg_232323_radius_55"
                android:orientation="vertical"
                android:paddingTop="@dimen/width_66"
                android:paddingBottom="@dimen/height_66"
                android:layout_marginStart="@dimen/width_44"
                android:layout_marginEnd="@dimen/width_44">

                <RelativeLayout
                    android:id="@+id/layout_main_lottery_join_history"
                    android:layout_width="match_parent"
                    android:paddingStart="@dimen/width_49"
                    android:paddingEnd="@dimen/width_49"
                    android:layout_height="@dimen/height_130">
                    
                    <View
                        android:layout_width="@dimen/width_13"
                        android:layout_height="@dimen/height_88"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_menu_bar_1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/word_join_history"
                        android:layout_marginStart="@dimen/width_57"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSize_44pt"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_main_lottery_join_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:paddingTop="@dimen/height_20"
                        android:paddingBottom="@dimen/height_20"
                        android:paddingStart="@dimen/width_40"
                        android:paddingEnd="@dimen/width_40"
                        android:gravity="center"
                        android:textColor="@color/color_77f5ae"
                        android:background="@drawable/bg_373737_radius_27"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_2"
                        android:background="@color/color_292929"
                        android:layout_alignParentBottom="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_main_lottery_use_method"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_130"
                    android:paddingStart="@dimen/width_49"
                    android:paddingEnd="@dimen/width_49">

                    <View
                        android:layout_width="@dimen/width_13"
                        android:layout_height="@dimen/height_88"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_menu_bar_2"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/word_use_method"
                        android:textColor="@color/white"
                        android:layout_marginStart="@dimen/width_57"
                        android:textSize="@dimen/textSize_44pt"
                        android:textStyle="bold" />



                </RelativeLayout>
            </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layout_main_lottery_invite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_66"
            android:background="@drawable/bg_232323_radius_55"
            android:layout_marginStart="@dimen/width_44"
            android:layout_marginEnd="@dimen/width_44"
            android:orientation="vertical"
            android:padding="@dimen/width_49">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/word_invite_friend"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_44pt"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/msg_lottery_invite_desc"
                android:layout_marginTop="@dimen/height_27"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_38pt" />

        </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>