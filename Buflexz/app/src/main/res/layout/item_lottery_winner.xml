<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_232323"
    android:paddingStart="@dimen/width_36"
    android:paddingEnd="@dimen/width_36"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height_40"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="@dimen/width_116"
            android:layout_height="@dimen/width_110"
            android:layout_marginEnd="@dimen/width_10">

            <io.github.florent37.shapeofview.shapes.CircleView
                android:layout_width="@dimen/width_110"
                android:layout_height="@dimen/width_110"
                android:layout_marginEnd="@dimen/width_11">

                <ImageView
                    android:id="@+id/image_lottery_winner_flag"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="center"/>

            </io.github.florent37.shapeofview.shapes.CircleView>

            <io.github.florent37.shapeofview.shapes.CircleView
                android:layout_width="@dimen/width_44"
                android:layout_height="@dimen/width_44"
                android:layout_gravity="end|bottom">

                <ImageView
                    android:id="@+id/image_lottery_winner_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_profile_default" />

            </io.github.florent37.shapeofview.shapes.CircleView>

        </FrameLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/text_lottery_winner_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSize_38pt"
                    android:textColor="@color/white"
                    android:layout_marginEnd="@dimen/width_5"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/text_lottery_winner_prize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSize_33pt"
                    android:textColor="@color/white"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                android:id="@+id/text_lottery_winner_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_33pt"
                android:textColor="@color/white"/>

        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layout_lottery_winner_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height_24"
        android:orientation="horizontal" />


</LinearLayout>
