<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height_30"
        android:background="@drawable/bg_d6000000_radius_30"
        android:orientation="horizontal"
        android:paddingTop="@dimen/height_30"
        android:paddingBottom="@dimen/height_30">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_lucky_draw_number_first"
                android:layout_width="@dimen/width_99"
                android:layout_height="@dimen/width_99"
                android:layout_marginStart="@dimen/width_29"
                android:layout_marginEnd="@dimen/width_29"
                android:background="@drawable/bg_circle_ffc046"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_43pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_lucky_draw_number_second"
                android:layout_width="@dimen/width_99"
                android:layout_height="@dimen/width_99"
                android:layout_marginStart="@dimen/width_29"
                android:layout_marginEnd="@dimen/width_29"
                android:background="@drawable/bg_circle_3278ff"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_43pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_lucky_draw_number_third"
                android:layout_width="@dimen/width_99"
                android:layout_height="@dimen/width_99"
                android:layout_marginStart="@dimen/width_29"
                android:layout_marginEnd="@dimen/width_29"
                android:background="@drawable/bg_circle_ff5e5e"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_43pt"
                android:textStyle="bold" />

        </androidx.appcompat.widget.LinearLayoutCompat>


    </RelativeLayout>


</FrameLayout>