<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_event_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bf000000">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/width_72"
        android:layout_marginEnd="@dimen/width_72"
        android:background="@drawable/bg_232323_radius_55"
        android:orientation="vertical"
        android:paddingTop="@dimen/height_69"
        android:paddingBottom="@dimen/height_69">


        <ImageView
            android:id="@+id/image_lotto_result_character"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_lotto_join_popup" />

        <TextView
            android:id="@+id/text_lotto_result_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/height_72"
            android:text="@string/msg_lotto_join_complete"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_55pt"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>
