<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bf000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginEnd="@dimen/width_90"
        android:layout_marginStart="@dimen/width_90"
        android:background="@drawable/bg_232323_radius_55"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_lotto_error_alert"
            android:layout_width="@dimen/width_300"
            android:layout_height="@dimen/width_300"
            android:layout_marginTop="@dimen/height_180"
            android:src="@drawable/img_main_lotto"/>

        <TextView
            android:id="@+id/text_lotto_error_alert_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/width_54"
            android:layout_marginStart="@dimen/width_54"
            android:layout_marginTop="@dimen/height_83"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_50pt"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/text_lotto_error_alert_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/width_54"
            android:layout_marginStart="@dimen/width_54"
            android:layout_marginTop="@dimen/height_10"
            android:gravity="center"
            android:textColor="@color/color_505050"
            android:textSize="@dimen/textSize_39pt"/>

        <TextView
            android:id="@+id/text_lotto_error_alert_confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_150"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/width_40"
            android:layout_marginEnd="@dimen/width_40"
            android:layout_marginBottom="@dimen/height_48"
            android:textSize="@dimen/textSize_44pt"
            android:layout_marginTop="@dimen/height_44"
            android:text="@string/word_confirm"
            android:background="@drawable/bg_48b778_radius_27"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>