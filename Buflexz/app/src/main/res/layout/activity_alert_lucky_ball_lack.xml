<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bf000000">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_232323_top_radius_55"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_66"
            android:gravity="center"
            android:text="@string/msg_lack_ball"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_60pt"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_130"
            android:layout_marginStart="@dimen/width_55"
            android:layout_marginTop="@dimen/height_44"
            android:layout_marginEnd="@dimen/width_55"
            android:background="@drawable/bg_1d1d1d_radius_33"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/width_44"
                android:text="@string/word_lack_ball"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_38pt" />

            <TextView
                android:id="@+id/text_alert_lucky_ball_lack_ball"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/width_44"
                android:drawablePadding="@dimen/width_10"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_38pt"
                app:drawableStartCompat="@drawable/ic_lucky_draw_ball_m" />

        </RelativeLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/width_44"
            android:layout_marginTop="@dimen/height_88"
            android:layout_marginEnd="@dimen/width_44"
            android:layout_marginBottom="@dimen/height_66"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_alert_lucky_ball_lack_cancel"
                android:layout_width="@dimen/width_240"
                android:layout_height="@dimen/height_135"
                android:layout_marginEnd="@dimen/width_33"
                android:background="@drawable/bg_595959_radius_30"
                android:gravity="center"
                android:text="@string/word_cancel"
                android:textColor="@color/white"
                android:visibility="gone"
                android:textSize="@dimen/textSize_44pt"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/text_alert_lucky_ball_lack_earn_method"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_135"
                android:background="@drawable/bg_48b778_radius_30"
                android:gravity="center"
                android:text="@string/word_confirm"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_44pt"
                android:textStyle="bold" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </LinearLayout>

</RelativeLayout>