<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/width_44"
        android:layout_marginTop="@dimen/height_47"
        android:layout_marginEnd="@dimen/width_44"
        android:layout_marginBottom="@dimen/height_41"
        android:background="@drawable/bg_232323_radius_55"
        android:orientation="vertical"
        android:paddingStart="@dimen/width_44"
        android:paddingTop="@dimen/height_55"
        android:paddingEnd="@dimen/width_44"
        android:paddingBottom="@dimen/height_60">

        <TextView
            android:id="@+id/text_my_lucky_draw_win_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize_49pt"
            android:textColor="@color/white"
            android:textStyle="bold"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_373737_radius_27"
            android:layout_marginTop="@dimen/height_44"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/height_33">

            <io.github.florent37.shapeofview.shapes.RoundRectView
                android:layout_width="@dimen/width_150"
                android:layout_height="@dimen/width_150"
                android:layout_marginEnd="@dimen/width_27"
                app:shape_roundRect_bottomLeftRadius="@dimen/width_13"
                app:shape_roundRect_bottomRightRadius="@dimen/width_13"
                app:shape_roundRect_topLeftRadius="@dimen/width_13"
                app:shape_roundRect_topRightRadius="@dimen/width_13">

                <ImageView
                    android:id="@+id/image_my_lucky_draw_win_gift"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

            </io.github.florent37.shapeofview.shapes.RoundRectView>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_my_lucky_draw_win_gift_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_dcdcdc"
                    android:textSize="@dimen/textSize_38pt"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_my_lucky_draw_win_gift_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/width_10"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_55pt"
                    android:textStyle="bold"
                    app:drawableStartCompat="@drawable/ic_lucky_draw_gift_dollar" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_my_lucky_draw_win_number_first"
                    android:layout_width="@dimen/width_66"
                    android:layout_height="@dimen/width_66"
                    android:layout_marginStart="@dimen/width_4"
                    android:layout_marginEnd="@dimen/width_4"
                    android:background="@drawable/bg_circle_ffc046"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_43pt"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_my_lucky_draw_win_number_second"
                    android:layout_width="@dimen/width_66"
                    android:layout_height="@dimen/width_66"
                    android:layout_marginStart="@dimen/width_4"
                    android:layout_marginEnd="@dimen/width_4"
                    android:background="@drawable/bg_circle_3278ff"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_43pt"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_my_lucky_draw_win_number_third"
                    android:layout_width="@dimen/width_66"
                    android:layout_height="@dimen/width_66"
                    android:layout_marginStart="@dimen/width_4"
                    android:layout_marginEnd="@dimen/width_4"
                    android:background="@drawable/bg_circle_ff5e5e"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_43pt"
                    android:textStyle="bold" />

            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>


</FrameLayout>