<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".apps.invite.ui.InviteActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/width_36"
        android:paddingEnd="@dimen/width_36"
        android:paddingBottom="@dimen/height_100"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_102">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_55pt"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="@string/word_invite_friend_event"/>

            <TextView
                android:id="@+id/text_invite_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_border_3px_ffffff_232323_radius_16"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:paddingTop="@dimen/height_16"
                android:paddingBottom="@dimen/height_16"
                android:paddingStart="@dimen/width_24"
                android:paddingEnd="@dimen/width_24"
                android:textSize="@dimen/textSize_33pt"
                android:textColor="@color/white"
                android:text="@string/word_my_invite_list"/>


        </RelativeLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_232323_radius_55"
            android:paddingTop="@dimen/height_55"
            android:paddingBottom="@dimen/height_55"
            android:layout_marginTop="@dimen/height_102"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_44pt"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="@string/msg_invite_gift_desc1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_60pt"
                android:textColor="@color/color_ff5e5e"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/height_44"
                android:text="@string/msg_invite_gift_desc2"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_44"
                android:src="@drawable/ic_lotto_join_popup"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_232323_radius_55"
            android:paddingTop="@dimen/height_55"
            android:paddingBottom="@dimen/height_55"
            android:layout_marginTop="@dimen/height_74"
            android:gravity="center_horizontal"
            android:visibility="gone"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_44pt"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="@string/msg_invite_gift_desc3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_60pt"
                android:textColor="@color/color_ff5e5e"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/height_44"
                android:text="@string/msg_invite_gift_desc4"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_44"
                android:src="@drawable/ic_invite_event2"/>

        </androidx.appcompat.widget.LinearLayoutCompat>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize_33pt"
            android:textStyle="bold"
            android:text="@string/word_my_recommend_key"
            android:textColor="@color/color_878787"
            android:layout_marginTop="@dimen/height_55"/>
        
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_130"
            android:layout_marginTop="@dimen/height_33"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_invite_recommend_key"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="@dimen/textSize_38pt"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:paddingStart="@dimen/width_44"
                android:paddingEnd="@dimen/width_44"
                android:gravity="center_vertical"
                android:layout_marginEnd="@dimen/width_27"
                android:background="@drawable/bg_232323_radius_33"/>

            <ImageView
                android:id="@+id/image_invite_recommend_key_copy"
                android:layout_width="@dimen/width_196"
                android:layout_height="match_parent"
                android:src="@drawable/ic_copy"
                android:scaleType="center"
                android:background="@drawable/bg_border_3px_ffffff_262626_radius_35"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <TextView
            android:id="@+id/text_invite"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_135"
            android:layout_marginTop="@dimen/height_83"
            android:background="@drawable/bg_48b778_radius_33"
            android:gravity="center"
            android:text="@string/msg_invite_receive_benefit"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_44pt"
            android:textStyle="bold" />


        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layout_lotto_winner_my"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_232323_radius_55"
            android:orientation="vertical"
            android:paddingStart="@dimen/width_36"
            android:paddingTop="@dimen/height_40"
            android:paddingEnd="@dimen/width_36"
            android:paddingBottom="@dimen/height_40"
            android:layout_marginTop="@dimen/height_50">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/word_invite_method"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_44pt"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_38pt"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/height_17"
                android:text="@string/msg_invite_method_desc"/>


    </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.core.widget.NestedScrollView>