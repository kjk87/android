<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/layout_faq_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_146"
        android:paddingStart="@dimen/width_44"
        android:paddingEnd="@dimen/width_44"
        android:paddingTop="@dimen/height_38"
        android:paddingBottom="@dimen/height_38"
        android:background="@color/color_232323">
        
        <TextView
            android:id="@+id/text_faq_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_dcdcdc"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/image_faq_arrow"
            android:layout_marginEnd="@dimen/width_30"
            android:textSize="@dimen/textSize_38pt"/>
        
        <ImageView
            android:id="@+id/image_faq_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_faq_arrow_down"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/text_faq_contents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_373737"
        android:paddingStart="@dimen/width_44"
        android:paddingEnd="@dimen/width_44"
        android:paddingTop="@dimen/height_30"
        android:paddingBottom="@dimen/height_30"
        android:textSize="@dimen/textSize_38pt"
        android:visibility="gone"
        android:textColor="@color/white"/>
</androidx.appcompat.widget.LinearLayoutCompat>