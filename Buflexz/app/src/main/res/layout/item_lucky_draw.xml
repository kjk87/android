<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_border_3px_373737_1b1b1b_radius_27"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/width_44"
        android:layout_marginEnd="@dimen/width_44"
        android:layout_marginBottom="@dimen/height_55"
        android:paddingTop="@dimen/height_44"
        android:paddingBottom="@dimen/height_44">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/width_47"
            android:layout_marginEnd="@dimen/width_47"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_lucky_draw_live"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_1fff5e5e_radius_10"
                android:drawableEnd="@drawable/ic_live_question"
                android:drawablePadding="@dimen/width_10"
                android:gravity="center_vertical"
                android:padding="@dimen/width_10"
                android:text="@string/word_live_en"
                android:layout_marginEnd="@dimen/width_16"
                android:textColor="@color/color_ff5e5e"
                android:textSize="@dimen/textSize_33pt"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/text_lucky_draw_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_49pt"
                android:textStyle="bold" />


        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_lucky_draw_gift"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_44"
            android:layout_marginStart="@dimen/width_47" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_72"
            android:layout_marginStart="@dimen/width_47"
            android:layout_marginTop="@dimen/height_55"
            android:layout_marginEnd="@dimen/width_47"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/width_22"
                android:layout_weight="1"
                android:background="@drawable/bg_232323_radius_10">

                <TextView
                    android:id="@+id/text_lucky_draw_join_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawablePadding="@dimen/width_10"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_33pt"
                    android:textStyle="bold"
                    app:drawableStartCompat="@drawable/ic_lucky_daw_join" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/width_22"
                android:layout_weight="1"
                android:background="@drawable/bg_232323_radius_10">

                <TextView
                    android:id="@+id/text_lucky_draw_end_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawablePadding="@dimen/width_10"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_33pt"
                    android:textStyle="bold"
                    app:drawableStartCompat="@drawable/ic_lucky_daw_date" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_lucky_draw_gift_count"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_232323_radius_10">

                <TextView
                    android:id="@+id/text_lucky_draw_end_gift_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawablePadding="@dimen/width_10"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_33pt"
                    android:drawableEnd="@drawable/ic_lucky_draw_gift_arrow"
                    android:textStyle="bold"
                    app:drawableStartCompat="@drawable/ic_lucky_daw_gift" />


            </RelativeLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <TextView
            android:id="@+id/text_lucky_draw_status"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_66"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/width_47"
            android:layout_marginTop="@dimen/height_27"
            android:layout_marginEnd="@dimen/width_47"
            android:textSize="@dimen/textSize_33pt"
            android:textStyle="bold" />
        
        <RelativeLayout
            android:id="@+id/layout_lucky_draw_join"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_138"
            android:layout_marginStart="@dimen/width_47"
            android:layout_marginTop="@dimen/height_27"
            android:layout_marginEnd="@dimen/width_47"
            android:background="@drawable/bg_48b778_radius_30">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/text_lucky_draw_status_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_49pt"
                    android:textStyle="bold" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </RelativeLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>


</FrameLayout>