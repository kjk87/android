<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_221"
        android:layout_marginBottom="@dimen/height_22"
        android:background="@color/color_232323"
        android:orientation="vertical"
        android:paddingStart="@dimen/width_44"
        android:paddingTop="@dimen/height_38"
        android:paddingEnd="@dimen/width_44"
        android:paddingBottom="@dimen/height_38">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="@dimen/width_116"
                android:layout_height="@dimen/width_110"
                android:layout_marginEnd="@dimen/width_10">

                <io.github.florent37.shapeofview.shapes.CircleView
                    android:layout_width="@dimen/width_110"
                    android:layout_height="@dimen/width_110"
                    android:layout_marginEnd="@dimen/width_11">


                    <ImageView
                        android:id="@+id/image_child_partner_profile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_profile_default" />

                </io.github.florent37.shapeofview.shapes.CircleView>

                <io.github.florent37.shapeofview.shapes.CircleView
                    android:layout_width="@dimen/width_44"
                    android:layout_height="@dimen/width_44"
                    android:layout_gravity="end|bottom">

                    <ImageView
                        android:id="@+id/image_child_partner_flag"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="center"/>

                </io.github.florent37.shapeofview.shapes.CircleView>

            </FrameLayout>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_child_partner_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_38pt" />

                <TextView
                    android:id="@+id/text_child_partner_nation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_33pt" />

            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.appcompat.widget.LinearLayoutCompat>

        <TextView
            android:id="@+id/text_child_partner_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textColor="@color/color_b0b0b0"
            android:textSize="@dimen/textSize_33pt" />

    </RelativeLayout>
</RelativeLayout>