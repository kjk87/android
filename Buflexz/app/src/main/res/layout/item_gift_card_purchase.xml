<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/width_44"
        android:layout_marginEnd="@dimen/width_44"
        android:background="@drawable/bg_232323_radius_55"
        android:layout_marginBottom="@dimen/height_33"
        android:orientation="vertical"
        android:paddingStart="@dimen/width_49"
        android:paddingTop="@dimen/height_55"
        android:paddingEnd="@dimen/width_49"
        android:paddingBottom="@dimen/height_55">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <io.github.florent37.shapeofview.shapes.RoundRectView
                android:layout_width="@dimen/width_174"
                android:layout_height="@dimen/width_174"
                android:layout_marginEnd="@dimen/width_55"
                app:shape_roundRect_bottomLeftRadius="@dimen/width_13"
                app:shape_roundRect_bottomRightRadius="@dimen/width_13"
                app:shape_roundRect_topLeftRadius="@dimen/width_13"
                app:shape_roundRect_topRightRadius="@dimen/width_13">

                <ImageView
                    android:id="@+id/image_gift_card_purchase"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </io.github.florent37.shapeofview.shapes.RoundRectView>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_gift_card_purchase_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_38pt" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/text_gift_card_purchase_point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/width_10"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSize_44pt"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/word_point_unit"
                        android:textColor="@color/color_dcdcdc"
                        android:textSize="@dimen/textSize_38pt" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <TextView
                    android:id="@+id/text_gift_card_purchase_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_33"
                    android:textColor="@color/color_b0b0b0"
                    android:textSize="@dimen/textSize_33pt" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                android:id="@+id/text_gift_card_purchase_status"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_66"
                android:background="@drawable/bg_dbb5b5b5_radius_20"
                android:gravity="center"
                android:paddingStart="@dimen/width_10"
                android:paddingEnd="@dimen/width_10"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_33pt"
                android:textStyle="bold" />


        </androidx.appcompat.widget.LinearLayoutCompat>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize_33pt"
            android:textColor="@color/color_b0b0b0"
            android:text="@string/word_sent_email"
            android:layout_marginTop="@dimen/height_33"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/text_gift_card_purchase_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_135"
            android:layout_marginTop="@dimen/height_33"
            android:paddingStart="@dimen/width_44"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_38pt"
            android:background="@drawable/bg_d6000000_radius_33"/>

    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.appcompat.widget.LinearLayoutCompat>
