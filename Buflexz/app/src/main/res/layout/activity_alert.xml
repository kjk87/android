<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/top_contents_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bf000000">

    <!--android:layout_alignParentBottom="true"-->
    <!--android:layout_centerHorizontal="true"-->
    <!--android:layout_marginBottom="@dimen/height_50"-->
    <!--android:layout_centerInParent="true"-->

    <LinearLayout
        android:id="@+id/layout_alert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/width_90"
        android:layout_marginEnd="@dimen/width_90"
        android:clickable="true"
        android:orientation="vertical">

        <!--<ImageView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:scaleType="fitXY"-->
        <!--android:src="@drawable/bg_popup_top"/>-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_232323_radius_55">

            <TextView
                android:id="@+id/text_alertTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:paddingTop="@dimen/height_66"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_49pt"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/text_alertContents_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_alertTitle"
                android:clickable="true"
                android:paddingStart="@dimen/width_54"
                android:paddingTop="@dimen/height_24"
                android:paddingEnd="@dimen/width_54"
                android:paddingBottom="@dimen/height_96">

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/layout_alert_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_alertContents_layout"
                android:layout_marginBottom="@dimen/height_48"
                android:layout_marginStart="@dimen/width_40"
                android:layout_marginEnd="@dimen/width_40"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_alertLeftBtn"
                    style="?attr/metaButtonBarStyle"
                    android:layout_width="@dimen/width_0"
                    android:layout_height="@dimen/height_150"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_marginEnd="@dimen/width_16"
                    android:textSize="@dimen/textSize_44pt"
                    android:textStyle="bold"
                    android:visibility="visible"
                    android:background="@drawable/bg_878787_radius_30"/>


                <TextView
                    android:id="@+id/text_alertRightBtn"
                    style="?attr/metaButtonBarStyle"
                    android:layout_width="@dimen/width_0"
                    android:layout_height="@dimen/height_150"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_44pt"
                    android:background="@drawable/bg_48b778_radius_27"
                    android:textStyle="bold" />

            </LinearLayout>



        </RelativeLayout>

        <!--<ImageView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:scaleType="fitXY"-->
        <!--android:src="@drawable/bg_popup_bottom"/>-->

    </LinearLayout>

</RelativeLayout>
