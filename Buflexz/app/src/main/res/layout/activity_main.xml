<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".apps.main.ui.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/main_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_254"
            android:background="@color/color_212121">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_254"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/width_98"
                android:paddingEnd="@dimen/width_98"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/layout_main_lottery_tab"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:paddingTop="@dimen/height_41"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="@string/word_lotto_en"
                        android:textColor="@color/color_cccccc_ffffff"
                        android:textSize="@dimen/textSize_33pt"
                        app:drawableTopCompat="@drawable/gnb_main_lotto" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/layout_main_lucky_draw_tab"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:paddingTop="@dimen/height_41"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="@string/word_lucky_draw_en"
                        android:textColor="@color/color_cccccc_ffffff"
                        android:textSize="@dimen/textSize_33pt"
                        app:drawableTopCompat="@drawable/gnb_main_lucky_draw" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_main_goods_shop_tab"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:paddingTop="@dimen/height_41"
                    android:visibility="gone"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="@string/word_luxury_hall_en"
                        android:textColor="@color/color_cccccc_ffffff"
                        android:textSize="@dimen/textSize_33pt"
                        app:drawableTopCompat="@drawable/gnb_main_lucky_draw" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_main_my_tab"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:paddingTop="@dimen/height_41"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="@string/word_my_en"
                        android:textColor="@color/color_cccccc_ffffff"
                        android:textSize="@dimen/textSize_33pt"
                        app:drawableTopCompat="@drawable/gnb_main_my" />

                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>



</RelativeLayout>