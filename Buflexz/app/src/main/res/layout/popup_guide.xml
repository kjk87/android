<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/width_96"
        android:layout_marginEnd="@dimen/width_96"
        android:background="@drawable/bg_373737_radius_27"
        android:orientation="vertical"
        android:padding="@dimen/width_55">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/width_66">

            <TextView
                android:id="@+id/text_popup_guide_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_44pt"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/image_popup_guide_close"
                android:layout_width="@dimen/width_66"
                android:layout_height="@dimen/width_66"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_popup_close" />

        </RelativeLayout>

        <TextView
            android:id="@+id/text_popup_guide_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_27"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_44pt" />


    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>