<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:paddingLeft="@dimen/width_54"
              android:paddingRight="@dimen/width_54">

    <LinearLayout
        android:id="@+id/layout_reply_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height_30"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <io.github.florent37.shapeofview.shapes.CircleView
            android:layout_width="@dimen/width_165"
            android:layout_height="@dimen/width_165"
            android:layout_marginEnd="@dimen/width_45"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/image_event_impression"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_profile_default"
                android:scaleType="fitXY"/>

        </io.github.florent37.shapeofview.shapes.CircleView>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_event_impression_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/color_232323"
                    android:textSize="@dimen/textSize_39pt"
                    android:textStyle="bold"/>

            </LinearLayout>

            <TextView
                android:id="@+id/text_event_impression_gift_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_4"
                android:textColor="@color/color_fc5c57"
                android:textSize="@dimen/textSize_33pt"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/text_event_impression"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/width_210"
        android:textColor="@color/color_737373"
        android:textSize="@dimen/textSize_42pt"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_2"
        android:layout_marginTop="@dimen/height_30"
        android:background="@color/color_eaeaea"/>

</LinearLayout>
