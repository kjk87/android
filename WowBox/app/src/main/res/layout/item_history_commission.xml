<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/width_44"
        android:paddingEnd="@dimen/width_44"
        android:paddingTop="@dimen/height_38"
        android:paddingBottom="@dimen/height_38"
        android:layout_marginBottom="@dimen/height_22"
        android:background="@color/color_232323">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_history_commission_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/width_11"
                android:paddingEnd="@dimen/width_11"
                android:paddingTop="@dimen/height_5"
                android:paddingBottom="@dimen/height_5"
                android:textSize="@dimen/textSize_27pt"
                android:textColor="@color/color_dcdcdc"
                android:background="@drawable/bg_border_3px_616161_232323_radius_20"/>

            <TextView
                android:id="@+id/text_history_commission_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_dcdcdc"
                android:textSize="@dimen/textSize_38pt"
                android:layout_marginTop="@dimen/height_16"/>


        </androidx.appcompat.widget.LinearLayoutCompat>


        <TextView
            android:id="@+id/text_history_commission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_38pt"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>
</RelativeLayout>