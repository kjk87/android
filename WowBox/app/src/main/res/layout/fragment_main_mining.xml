<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".apps.main.ui.MainMiningFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_135"
        android:layout_marginStart="@dimen/width_44"
        android:layout_marginEnd="@dimen/width_44">

        <TextView
            android:id="@+id/text_main_mining_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawablePadding="@dimen/width_10"
            android:gravity="center_vertical"
            android:text="@string/word_login_join"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_33pt"
            android:visibility="gone"
            app:drawableEndCompat="@drawable/ic_my_arrow"
            app:drawableStartCompat="@drawable/ic_profile_default" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layout_main_mining_member"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="@dimen/width_116"
                android:layout_height="@dimen/width_110"
                android:layout_marginEnd="@dimen/width_10">

                <io.github.florent37.shapeofview.shapes.CircleView
                    android:layout_width="@dimen/width_110"
                    android:layout_height="@dimen/width_110"
                    android:layout_marginEnd="@dimen/width_11">


                    <ImageView
                        android:id="@+id/image_main_mining_profile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_profile_default" />

                </io.github.florent37.shapeofview.shapes.CircleView>

            </FrameLayout>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_main_mining_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_38pt" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                android:id="@+id/text_main_mining_retention_buff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/width_10"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_44pt"
                android:textStyle="bold"
                android:visibility="gone"
                app:drawableStartCompat="@drawable/ic_my_buff_s" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSize_50pt"
        android:layout_marginTop="@dimen/height_50"
        android:layout_gravity="center_horizontal"
        android:text="@string/msg_mining_desc"
        android:textColor="@color/white"
        android:textStyle="bold"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/pager_main_mining"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_marginTop="@dimen/height_80"/>

    <TextView
        android:id="@+id/text_main_mining_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/width_25"
        android:paddingEnd="@dimen/width_25"
        android:layout_marginTop="@dimen/height_50"
        android:layout_marginBottom="@dimen/height_50"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="@dimen/height_13"
        android:paddingTop="@dimen/height_13"
        android:textColor="@color/color_dcdcdc"
        android:textSize="@dimen/textSize_33pt"
        android:background="@drawable/bg_373737_radius_16"/>

</androidx.appcompat.widget.LinearLayoutCompat>