<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/layout_lucky_box_not_open"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_150"
        android:layout_marginStart="@dimen/width_60"
        android:layout_marginEnd="@dimen/width_60"
        android:background="@drawable/bg_ffefea_radius_12"
        android:layout_marginTop="@dimen/height_42">


        <TextView
            android:id="@+id/text_lucky_box_not_open_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_30"
            android:drawablePadding="@dimen/width_24"
            android:gravity="bottom"
            android:layout_marginStart="@dimen/width_60"
            android:text="@string/msg_lucky_box_open"
            android:textColor="@color/color_2e2e2e"
            android:paddingBottom="@dimen/height_9"
            android:textSize="@dimen/textSize_36pt"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/ic_lucky_box_not_open" />

        <ImageView
            android:id="@+id/text_lucky_box_not_open_expire_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_36"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/width_60"
            android:src="@drawable/ic_lucky_box_not_open_arrow" />

    </RelativeLayout>

</LinearLayout>
