<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layout_lotto_join_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/height_66"
            android:textColor="@color/color_898989"
            android:textSize="@dimen/textSize_33pt"
            android:text="@string/word_lottery_join_date"/>


        <TextView
            android:id="@+id/text_lotto_join_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/textSize_55pt"
            android:textStyle="bold" />


    </androidx.appcompat.widget.LinearLayoutCompat>



    <LinearLayout
        android:id="@+id/layout_lotto_join_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/height_55"/>

</androidx.appcompat.widget.LinearLayoutCompat>