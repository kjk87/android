<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_f7f7f7_radius_55"
    android:layout_marginStart="@dimen/width_44"
    android:layout_marginEnd="@dimen/width_44"
    android:layout_marginBottom="@dimen/height_55"
    android:paddingStart="@dimen/width_50"
    android:paddingEnd="@dimen/width_50"
    android:paddingBottom="@dimen/height_38"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height_33">

        <io.github.florent37.shapeofview.shapes.CircleView
            android:id="@+id/circle_lucky_box_win_profile"
            android:layout_width="@dimen/width_98"
            android:layout_height="@dimen/width_98"
            android:layout_marginEnd="@dimen/width_21">

            <ImageView
                android:id="@+id/image_lucky_box_win_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_profile_default" />

        </io.github.florent37.shapeofview.shapes.CircleView>

        <TextView
            android:id="@+id/text_lucky_box_win_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/textSize_38pt"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/circle_lucky_box_win_profile"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height_36"
        android:orientation="horizontal">

        <io.github.florent37.shapeofview.shapes.RoundRectView
            android:layout_width="@dimen/width_174"
            android:layout_height="@dimen/width_174"
            app:shape_roundRect_bottomLeftRadius="@dimen/width_13"
            app:shape_roundRect_bottomRightRadius="@dimen/width_13"
            app:shape_roundRect_topLeftRadius="@dimen/width_13"
            app:shape_roundRect_topRightRadius="@dimen/width_13"
            android:layout_marginEnd="@dimen/width_55">

            <ImageView
                android:id="@+id/image_lucky_box_win_product"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

        </io.github.florent37.shapeofview.shapes.RoundRectView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_lucky_box_win_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333333"
                android:maxLines="2"
                android:textSize="@dimen/textSize_38pt" />

            <TextView
                android:id="@+id/text_lucky_box_win_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_898989"
                android:layout_marginTop="@dimen/height_38"
                android:textSize="@dimen/textSize_33pt"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text_lucky_box_win_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_ff5e5e"
                android:textSize="@dimen/textSize_44pt"
                android:layout_marginTop="@dimen/height_10"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_1"
        android:background="@color/color_29000000"
        android:layout_marginTop="@dimen/height_42"/>


    <TextView
        android:id="@+id/text_lucky_box_win_impression"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSize_36pt"
        android:layout_marginTop="@dimen/height_35"
        android:textColor="@color/color_2e2e2e"/>


    <TextView
        android:id="@+id/text_lucky_box_win_reply_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_898989"
        android:textSize="@dimen/textSize_38pt"
        android:layout_marginTop="@dimen/height_35"
        android:background="@drawable/underbar_898989_transparent"/>


</LinearLayout>