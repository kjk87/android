<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".apps.withdraw.ui.WithdrawActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_150"
                android:background="@drawable/bg_f7f7f7_radius_55"
                android:layout_marginStart="@dimen/width_44"
                android:layout_marginEnd="@dimen/width_44"
                android:layout_marginTop="@dimen/height_88"
                android:paddingStart="@dimen/width_41"
                android:paddingEnd="@dimen/width_41">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_withdraw_rp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/text_withdraw_retention_cash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/color_333333"
                    android:textStyle="bold"
                    android:textSize="@dimen/textSize_44pt"/>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/width_44"
                android:layout_marginTop="@dimen/height_66"
                android:text="@string/msg_input_withdraw_point_title"
                android:textColor="@color/color_898989"
                android:textSize="@dimen/textSize_33pt"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_132"
                android:layout_marginStart="@dimen/width_44"
                android:layout_marginTop="@dimen/height_33"
                android:layout_marginEnd="@dimen/width_44"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edit_withdraw_cash"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/width_27"
                    android:layout_weight="1"
                    android:background="@drawable/bg_f7f7f7_radius_33"
                    android:gravity="center_vertical"
                    android:hint="@string/msg_input_withdraw_point"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/width_30"
                    android:paddingEnd="@dimen/width_30"
                    android:inputType="number"
                    android:textColor="@color/color_333333"
                    android:textColorHint="@color/color_898989"
                    android:textSize="@dimen/textSize_38pt" />

                <TextView
                    android:id="@+id/text_withdraw_cash_all"
                    android:layout_width="@dimen/width_200"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_262626_radius_36"
                    android:gravity="center"
                    android:text="@string/word_all_en"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_38pt"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/width_44"
                android:layout_marginTop="@dimen/height_200"
                android:text="@string/word_bank_name"
                android:textColor="@color/color_898989"
                android:textSize="@dimen/textSize_33pt" />

            <TextView
                android:id="@+id/text_withdraw_bank"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_130"
                android:layout_marginStart="@dimen/width_44"
                android:layout_marginTop="@dimen/height_32"
                android:layout_marginEnd="@dimen/width_44"
                android:background="@drawable/bg_f7f7f7_radius_33"
                android:gravity="center_vertical"
                android:hint="@string/msg_input_bank_name"
                android:orientation="horizontal"
                android:paddingStart="@dimen/width_30"
                android:paddingEnd="@dimen/width_30"
                android:drawableEnd="@drawable/ic_faq_arrow_down"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_898989"
                android:textSize="@dimen/textSize_38pt" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/width_44"
                android:layout_marginTop="@dimen/height_55"
                android:text="@string/word_account_name"
                android:textColor="@color/color_898989"
                android:textSize="@dimen/textSize_33pt" />

            <EditText
                android:id="@+id/edit_withdraw_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_130"
                android:layout_marginStart="@dimen/width_44"
                android:layout_marginTop="@dimen/height_32"
                android:layout_marginEnd="@dimen/width_44"
                android:background="@drawable/bg_f7f7f7_radius_33"
                android:gravity="center_vertical"
                android:hint="@string/msg_input_account_name"
                android:orientation="horizontal"
                android:paddingStart="@dimen/width_30"
                android:paddingEnd="@dimen/width_30"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_898989"
                android:textSize="@dimen/textSize_38pt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/width_44"
                android:layout_marginTop="@dimen/height_55"
                android:text="@string/word_account_number"
                android:textColor="@color/color_898989"
                android:textSize="@dimen/textSize_33pt" />

            <EditText
                android:id="@+id/edit_withdraw_account"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_130"
                android:layout_marginStart="@dimen/width_44"
                android:layout_marginTop="@dimen/height_32"
                android:layout_marginEnd="@dimen/width_44"
                android:background="@drawable/bg_f7f7f7_radius_33"
                android:gravity="center_vertical"
                android:hint="@string/msg_input_account_number"
                android:orientation="horizontal"
                android:paddingStart="@dimen/width_30"
                android:paddingEnd="@dimen/width_30"
                android:inputType="number"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_898989"
                android:textSize="@dimen/textSize_38pt" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_200"
                android:orientation="vertical"
                android:padding="@dimen/width_44"
                android:background="@drawable/bg_f7f7f7_radius_41">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_ffffff_radius_27"
                    android:paddingStart="@dimen/width_44"
                    android:paddingEnd="@dimen/width_44"
                    android:paddingTop="@dimen/height_52"
                    android:paddingBottom="@dimen/height_52">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textSize_38pt"
                        android:textColor="@color/color_333333"
                        android:text="@string/msg_withdraw_desc"/>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_27">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/height_38"
                        android:layout_centerVertical="true"
                        android:text="@string/word_expect_withdraw_rp"/>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/width_60"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/word_rp_unit"
                            android:layout_marginEnd="@dimen/width_8"
                            android:textColor="@color/color_454545"
                            android:textSize="@dimen/textSize_44pt" />

                        <TextView
                            android:id="@+id/text_withdraw_cash"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_ea5506"
                            android:textSize="@dimen/textSize_44pt"
                            android:textStyle="bold" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </RelativeLayout>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                android:id="@+id/text_withdraw"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_155"
                android:background="@color/color_ea5506"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_44pt"
                android:textStyle="bold"
                android:gravity="center"
                android:text="@string/word_cash_exchange"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>