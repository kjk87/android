<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bf000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_1200"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/width_94"
        android:layout_marginEnd="@dimen/width_94"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <WebView
            android:id="@+id/webview_alert_main_popup"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clickable="true"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_135"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_alert_main_popup_do_not_again"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="@string/msg_do_not_show_again"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/textSize_44pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_alert_main_popup_close"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color_ea5506"
                android:gravity="center"
                android:text="@string/word_close"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_44pt"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>