<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/height_50"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/width_44"
        android:layout_marginEnd="@dimen/width_44"
        android:background="@drawable/bg_border_1a000000_radius_42"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_102"
            android:layout_marginStart="@dimen/width_47"
            android:layout_marginEnd="@dimen/width_47"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/text_lucky_draw_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_44pt"
                android:textStyle="bold" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <io.github.florent37.shapeofview.shapes.RoundRectView
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_434"
            android:layout_marginStart="@dimen/width_3"
            android:layout_marginEnd="@dimen/width_3"
            android:layout_marginBottom="@dimen/width_3"
            app:shape_roundRect_bottomLeftRadius="@dimen/width_42"
            app:shape_roundRect_bottomRightRadius="@dimen/width_42"
            app:shape_roundRect_topLeftRadius="@dimen/width_42"
            app:shape_roundRect_topRightRadius="@dimen/width_42">

            <ImageView
                android:id="@+id/image_lucky_draw_banner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"/>

        </io.github.florent37.shapeofview.shapes.RoundRectView>



    </androidx.appcompat.widget.LinearLayoutCompat>

    <RelativeLayout
        android:id="@+id/layout_lucky_draw_join_rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/width_44"
        android:layout_marginEnd="@dimen/width_44"
        android:gravity="center"
        android:textColor="@color/white">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_22"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_f1f1f1_radius_58"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layout_lucky_draw_join_rate_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:id="@+id/view_lucky_draw_join_rate"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_22"
                android:background="@drawable/bg_ea5506_radius_58" />

            <ImageView
                android:id="@+id/image_lucky_draw_graph"
                android:layout_width="@dimen/width_60"
                android:layout_height="@dimen/width_60"
                android:src="@drawable/ic_lucky_draw_rate" />


        </androidx.appcompat.widget.LinearLayoutCompat>

        <TextView
            android:id="@+id/text_lucky_draw_join_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize_16pt"
            android:textStyle="bold"/>

    </RelativeLayout>



</androidx.appcompat.widget.LinearLayoutCompat>