<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".apps.luckybox.ui.LuckyBoxContainerActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_150"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_lucky_box_container_not_open"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/textSize_48pt"
            android:textColor="@color/white"
            android:text="@string/word_not_open_box"
            android:background="@drawable/color_c2c2c2_ea5506"/>

        <TextView
            android:id="@+id/text_lucky_box_container_open"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/textSize_48pt"
            android:textColor="@color/white"
            android:text="@string/word_product_container"
            android:background="@drawable/color_c2c2c2_ea5506"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <FrameLayout
        android:id="@+id/container_lucky_box_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</androidx.appcompat.widget.LinearLayoutCompat>