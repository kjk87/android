<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_138"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/width_44"
            android:text="@string/word_play"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/textSize_60pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_main_play_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/width_44"
            android:background="@drawable/bg_ea5506_radius_13"
            android:gravity="center"
            android:paddingStart="@dimen/width_44"
            android:paddingTop="@dimen/height_15"
            android:paddingEnd="@dimen/width_44"
            android:paddingBottom="@dimen/height_15"
            android:text="@string/word_login"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_38pt"
            android:textStyle="bold"
            android:visibility="gone" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layout_play_retention_ball"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_86"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/width_44"
            android:background="@drawable/bg_0d000000_radius_17"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/width_22"
            android:paddingEnd="@dimen/width_22"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/width_28"
                android:drawablePadding="@dimen/width_16"
                android:gravity="center_vertical"
                android:text="@string/word_my_ball"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_38pt"
                app:drawableStartCompat="@drawable/ic_luckyball" />

            <TextView
                android:id="@+id/text_play_retention_ball"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:drawablePadding="@dimen/width_10"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_38pt"
                android:textStyle="bold"
                app:drawableEndCompat="@drawable/ic_lucky_ball_arrow" />

        </androidx.appcompat.widget.LinearLayoutCompat>


    </RelativeLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:elevation="0dp"
            app:expanded="true">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_lucky_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:contentScrim="@color/white"
                app:expandedTitleTextAppearance="@style/TransparentText"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/layout_play_banner"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_475"
                        android:visibility="gone">

                        <androidx.viewpager2.widget.ViewPager2
                            android:id="@+id/pager_play_banner"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/text_play_banner_page"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/height_60"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="@dimen/width_44"
                            android:layout_marginTop="@dimen/height_50"
                            android:layout_marginEnd="@dimen/width_44"
                            android:layout_marginBottom="@dimen/height_50"
                            android:background="@drawable/bg_4d000000_radius_300"
                            android:gravity="center"
                            android:paddingStart="@dimen/width_30"
                            android:paddingEnd="@dimen/width_30"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textSize_33pt"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/width_44"
                        android:layout_marginTop="@dimen/height_44"
                        android:text="@string/word_guide"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/textSize_44pt"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_150"
                        android:layout_marginStart="@dimen/width_70"
                        android:layout_marginTop="@dimen/height_22"
                        android:layout_marginEnd="@dimen/width_70"
                        android:layout_marginBottom="@dimen/height_5"
                        android:background="@drawable/bg_ffffff_radius_15"
                        android:elevation="@dimen/width_5"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/layout_lucky_ball_guide_play"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/image_play_guide_luckyball"
                                android:layout_width="@dimen/width_70"
                                android:layout_height="@dimen/width_70"
                                android:src="@drawable/ic_guide_luckyball" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/height_5"
                                android:text="@string/word_lucky_ball2"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textSize_29pt" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <View
                            android:layout_width="@dimen/width_1"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/height_20"
                            android:layout_marginBottom="@dimen/height_20"
                            android:background="@color/black" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/layout_play_guide_play"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/image_play_guide_play"
                                android:layout_width="@dimen/width_70"
                                android:layout_height="@dimen/width_70"
                                android:src="@drawable/ic_guide_play" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/height_5"
                                android:text="@string/word_lucky_play"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textSize_29pt" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <View
                            android:layout_width="@dimen/width_1"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/height_20"
                            android:layout_marginBottom="@dimen/height_20"
                            android:background="@color/black" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/layout_play_guide_get_lucky_ball"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/image_play_guide_get_lucky_ball"
                                android:layout_width="@dimen/width_70"
                                android:layout_height="@dimen/width_70"
                                android:src="@drawable/ic_guide_get_luckyball" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/height_5"
                                android:text="@string/word_extra_benefit"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textSize_29pt" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>


            </com.google.android.material.appbar.CollapsingToolbarLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_41">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/width_44"
                    android:text="@string/word_voucher"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/textSize_44pt"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_play_win_history"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_77"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/width_44"
                    android:background="@drawable/bg_border_3px_ea5506_transparent_radius_16"
                    android:drawableStart="@drawable/ic_lucky_ball_cup"
                    android:drawablePadding="@dimen/width_30"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/width_22"
                    android:paddingEnd="@dimen/width_22"
                    android:text="@string/word_prize_en"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/textSize_28pt" />

            </RelativeLayout>


        </com.google.android.material.appbar.AppBarLayout>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_refresh_play"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/width_30"
            android:layout_marginEnd="@dimen/width_30"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_play"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <RelativeLayout
            android:id="@+id/layout_play_not_exist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/height_300"
                android:gravity="center"
                android:text="@string/msg_not_exist_event"
                android:textColor="@color/color_737373"
                android:textSize="@dimen/textSize_44pt" />

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/layout_play_loading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_300"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <ProgressBar
                android:layout_width="@dimen/width_120"
                android:layout_height="@dimen/width_120"
                android:layout_gravity="center"
                android:layout_margin="@dimen/width_40"
                android:indeterminateDrawable="@drawable/rotate_data_loading"
                android:indeterminateOnly="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/height_30"
                android:gravity="center"
                android:text="@string/msg_data_loading"
                android:textColor="@color/color_b7b7b7"
                android:textSize="@dimen/textSize_32pt"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</androidx.appcompat.widget.LinearLayoutCompat>