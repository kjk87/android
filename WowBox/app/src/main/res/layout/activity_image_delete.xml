<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/width_72"
        android:paddingRight="@dimen/width_72"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_74"
            android:gravity="center"
            android:text="@string/msg_select_delete_image"
            android:textColor="@color/color_dcdcdc"
            android:textSize="@dimen/textSize_40pt"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_image_delete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/height_50"/>

    </LinearLayout>

</RelativeLayout>
