<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".apps.my.ui.VersionActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height_321"
        android:orientation="vertical">

        <io.github.florent37.shapeofview.shapes.RoundRectView
            android:layout_width="@dimen/width_500"
            android:layout_height="@dimen/width_500"
            android:layout_gravity="center_horizontal"
            app:shape_roundRect_bottomLeftRadius="@dimen/width_100"
            app:shape_roundRect_bottomRightRadius="@dimen/width_100"
            app:shape_roundRect_topLeftRadius="@dimen/width_100"
            app:shape_roundRect_topRightRadius="@dimen/width_100">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_version_log" />

        </io.github.florent37.shapeofview.shapes.RoundRectView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_94"
            android:background="@color/color_f7f7f7"
            android:paddingStart="@dimen/width_44"
            android:paddingTop="@dimen/height_50"
            android:paddingEnd="@dimen/width_44"
            android:paddingBottom="@dimen/height_50">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/width_38"
                android:text="@string/word_current_version"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/textSize_38pt" />


            <TextView
                android:id="@+id/text_version_current"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:textSize="@dimen/textSize_38pt"
                android:textColor="@color/color_ea5506"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_33"
            android:background="@color/color_f7f7f7"
            android:paddingStart="@dimen/width_44"
            android:paddingTop="@dimen/height_50"
            android:paddingEnd="@dimen/width_44"
            android:paddingBottom="@dimen/height_50">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/width_38"
                android:text="@string/word_latest_version"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/textSize_38pt" />


            <TextView
                android:id="@+id/text_version_latest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:textSize="@dimen/textSize_38pt"
                android:textColor="@color/color_ea5506"/>

        </RelativeLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/text_version_update"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_135"
        android:background="@drawable/bg_ea5506_radius_27"
        android:layout_marginStart="@dimen/width_44"
        android:layout_marginEnd="@dimen/width_44"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/height_99"
        android:text="@string/word_update"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_44pt"
        android:textStyle="bold"/>


</RelativeLayout>