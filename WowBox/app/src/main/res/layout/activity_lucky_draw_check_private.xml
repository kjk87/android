<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_lucky_draw_check_private"
    tools:context=".apps.luckydraw.ui.LuckyDrawCheckPrivateActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/width_44"
        android:layout_marginEnd="@dimen/width_44"
        android:orientation="vertical">
        
        <EditText
            android:id="@+id/edit_lucky_draw_check_private"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_150"
            android:layout_marginTop="@dimen/height_160"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/width_44"
            android:paddingEnd="@dimen/width_44"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/textSize_44pt"
            android:hint="@string/msg_input_private_number"
            android:textColorHint="@color/color_333333"
            android:background="@drawable/bg_border_3px_ea5506_transparent_radius_33"/>



    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <com.lejel.wowbox.apps.common.component.LuckyDrawPadView
            android:id="@+id/pad_lucky_draw_check_private"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/height_8"
            android:paddingBottom="@dimen/height_8"
            android:layout_marginStart="@dimen/width_44"
            android:layout_marginEnd="@dimen/width_44"
            android:background="@drawable/bg_f7f7f7_radius_33"/>

        <TextView
            android:id="@+id/text_lucky_draw_check_private_confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_138"
            android:background="@drawable/bg_ea5506_radius_27"
            android:layout_marginStart="@dimen/width_44"
            android:layout_marginEnd="@dimen/width_44"
            android:layout_marginBottom="@dimen/height_88"
            android:layout_marginTop="@dimen/height_69"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="@string/word_confirm"
            android:textSize="@dimen/textSize_44pt"
            android:layout_alignParentBottom="true"/>


    </androidx.appcompat.widget.LinearLayoutCompat>


</RelativeLayout>