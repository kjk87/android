<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/width_44"
    android:paddingEnd="@dimen/width_44">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height_44"
        android:text="@string/msg_daily_benefit_desc1"
        android:textColor="@color/color_dcdcdc"
        android:textSize="@dimen/textSize_38pt" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height_33"
        android:background="@drawable/bg_232323_radius_90"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/width_27"
        android:paddingTop="@dimen/height_13"
        android:paddingEnd="@dimen/width_27"
        android:paddingBottom="@dimen/height_13">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/width_10"
            android:text="@string/word_ex_en"
            android:textColor="@color/color_878787"
            android:textSize="@dimen/textSize_38pt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/msg_daily_benefit_desc2"
            android:textColor="@color/color_dcdcdc"
            android:textSize="@dimen/textSize_38pt" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_121"
        android:layout_marginTop="@dimen/height_116"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_history_benefit_start_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_232323_radius_13"
            android:drawableStart="@drawable/ic_calendar"
            android:drawablePadding="@dimen/width_16"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/width_33"
            android:textColor="@color/color_b0b0b0"
            android:textSize="@dimen/textSize_38pt" />

        <View
            android:layout_width="@dimen/width_22"
            android:layout_height="@dimen/height_3"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/width_20"
            android:layout_marginEnd="@dimen/width_20"
            android:background="@color/color_dcdcdc" />

        <TextView
            android:id="@+id/text_history_benefit_end_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/width_27"
            android:layout_weight="1"
            android:background="@drawable/bg_232323_radius_13"
            android:drawableStart="@drawable/ic_calendar"
            android:drawablePadding="@dimen/width_16"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/width_33"
            android:textColor="@color/color_b0b0b0"
            android:textSize="@dimen/textSize_38pt" />

        <TextView
            android:id="@+id/text_history_benefit_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/bg_48b778_radius_27"
            android:gravity="center"
            android:paddingStart="@dimen/width_41"
            android:paddingEnd="@dimen/width_41"
            android:text="@string/word_search"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_44pt" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layout_history_benefit_exist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_232323_radius_55"
        android:layout_marginTop="@dimen/height_44"
        android:paddingTop="@dimen/height_55"
        android:paddingBottom="@dimen/height_55"
        android:paddingStart="@dimen/width_49"
        android:paddingEnd="@dimen/width_49"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_history_benefit_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_33pt"
                android:textColor="@color/white"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/text_history_benefit_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/textSize_44pt"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_38pt"
                android:textColor="@color/color_dcdcdc"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/word_date"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_38pt"
                android:textColor="@color/color_dcdcdc"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/word_total_proceeds"/>


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_38pt"
                android:textColor="@color/color_dcdcdc"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/word_my_benefit"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_history_benefit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_36" />

    </androidx.appcompat.widget.LinearLayoutCompat>


    <TextView
        android:id="@+id/text_history_benefit_not_exist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/height_44"
        android:paddingTop="@dimen/height_55"
        android:paddingBottom="@dimen/height_55"
        android:paddingStart="@dimen/width_49"
        android:paddingEnd="@dimen/width_49"
        android:text="@string/msg_benefit_history_not_exist"
        android:textColor="@color/white"
        android:background="@drawable/bg_232323_radius_27"
        android:textSize="@dimen/textSize_33pt"
        android:visibility="gone" />


</androidx.appcompat.widget.LinearLayoutCompat>