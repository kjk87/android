<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bf000000">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/width_44"
        android:layout_marginEnd="@dimen/width_44"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/height_44"
            android:background="@drawable/bg_ffffff_radius_55"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="@dimen/height_44">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_66"
                android:gravity="center"
                android:text="@string/word_retention_ball"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/textSize_60pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_alert_lucky_ball_lack_ball"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_22"
                android:drawablePadding="@dimen/width_12"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_38pt"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_luckyball" />

            <RelativeLayout
                android:id="@+id/layout_alert_lucky_ball_invite"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_88"
                android:layout_marginStart="@dimen/width_44"
                android:layout_marginTop="@dimen/height_63"
                android:layout_marginEnd="@dimen/width_44"
                android:background="@drawable/bg_ea5506_radius_27">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/width_44"
                    android:text="@string/msg_alert_ball_lack_desc2"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_33pt" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/width_44"
                    android:src="@drawable/ic_ball_lack_invite" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_alert_lucky_ball_event"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_88"
                android:layout_marginStart="@dimen/width_44"
                android:layout_marginTop="@dimen/height_63"
                android:layout_marginEnd="@dimen/width_44"
                android:background="@drawable/bg_ea5506_radius_27">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/width_44"
                    android:text="@string/msg_alert_ball_lack_desc3"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_33pt" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/width_44"
                    android:src="@drawable/ic_ball_lack_event" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/layout_alert_lucky_ball_wow_ball"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_88"
                android:layout_marginStart="@dimen/width_44"
                android:layout_marginTop="@dimen/height_63"
                android:layout_marginEnd="@dimen/width_44"
                android:background="@drawable/bg_ea5506_radius_27">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/width_44"
                    android:text="@string/msg_alert_ball_lack_desc1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_33pt" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/width_44"
                    android:src="@drawable/ic_ball_lack_shopping" />

            </RelativeLayout>


        </LinearLayout>

        <ImageView
            android:id="@+id/image_alert_lucky_ball_lack_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:src="@drawable/ic_play_alert_close" />

    </FrameLayout>

</RelativeLayout>