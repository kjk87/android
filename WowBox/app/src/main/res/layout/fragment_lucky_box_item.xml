<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_lucky_box_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/width_48"
        android:layout_marginEnd="@dimen/width_48"/>

    <LinearLayout
        android:id="@+id/layout_lucky_box_item_loading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height_400"
        android:visibility="gone"
        android:orientation="vertical">

        <ProgressBar
            android:layout_width="@dimen/width_120"
            android:layout_height="@dimen/width_120"
            android:layout_gravity="center"
            android:layout_margin="@dimen/width_40"
            android:indeterminateDrawable="@drawable/rotate_data_loading"
            android:indeterminateOnly="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/height_30"
            android:gravity="center"
            android:textColor="@color/color_b7b7b7"
            android:textStyle="bold"
            android:textSize="@dimen/textSize_32pt"
            android:text="@string/msg_data_loading"/>

    </LinearLayout>

</RelativeLayout>