<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/top_contents_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bf000000">

    <FrameLayout
        android:id="@+id/layout_alert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/width_44"
        android:layout_marginEnd="@dimen/width_44"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_44"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_ffffff_radius_55">

                <TextView
                    android:id="@+id/text_alertTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:paddingTop="@dimen/height_66"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_49pt"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/text_alertContents_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_alertTitle"
                    android:clickable="true"
                    android:paddingStart="@dimen/width_54"
                    android:paddingTop="@dimen/height_24"
                    android:paddingEnd="@dimen/width_54"
                    android:paddingBottom="@dimen/height_96">

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/layout_alert_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_135"
                    android:layout_below="@id/text_alertContents_layout"
                    android:layout_marginBottom="@dimen/height_48"
                    android:layout_marginStart="@dimen/width_40"
                    android:layout_marginEnd="@dimen/width_40"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_alertLeftBtn"
                        style="?attr/metaButtonBarStyle"
                        android:layout_width="@dimen/width_0"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/color_333333"
                        android:layout_marginEnd="@dimen/width_16"
                        android:textSize="@dimen/textSize_44pt"
                        android:textStyle="bold"
                        android:visibility="visible"
                        android:background="@drawable/bg_f7f7f7_radius_27"/>


                    <TextView
                        android:id="@+id/text_alertRightBtn"
                        style="?attr/metaButtonBarStyle"
                        android:layout_width="@dimen/width_0"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSize_44pt"
                        android:background="@drawable/bg_ea5506_radius_27"
                        android:textStyle="bold" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/image_alert_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_play_alert_close"
            android:layout_gravity="end"/>


    </FrameLayout>


</RelativeLayout>
