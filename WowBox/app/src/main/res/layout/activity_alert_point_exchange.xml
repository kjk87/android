<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bf000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/width_55"
        android:layout_marginEnd="@dimen/width_55"
        android:background="@drawable/bg_ffffff_radius_55"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingStart="@dimen/width_44"
            android:paddingEnd="@dimen/width_44"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/textSize_49pt"
                android:textStyle="bold"
                android:gravity="center"
                android:text="@string/msg_alert_point_excahnge_title"
                android:layout_marginTop="@dimen/height_65"/>



            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_f7f7f7_radius_27"
                android:layout_marginStart="@dimen/width_11"
                android:layout_marginEnd="@dimen/width_11"
                android:layout_marginTop="@dimen/height_44"
                android:paddingStart="@dimen/width_22"
                android:paddingEnd="@dimen/width_22"
                android:paddingTop="@dimen/height_30"
                android:paddingBottom="@dimen/height_30"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSize_38pt"
                    android:textColor="@color/color_333333"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/word_expect_exchange_point"/>

                <TextView
                    android:id="@+id/text_alert_point_exchange_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/textSize_55pt"
                    android:textStyle="bold"
                    android:textColor="@color/color_333333"
                    android:layout_marginTop="@dimen/height_5"
                    android:drawableStart="@drawable/ic_exchange_point"/>

            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_135"
            android:layout_marginStart="@dimen/width_44"
            android:layout_marginEnd="@dimen/width_44"
            android:layout_marginBottom="@dimen/height_65"
            android:layout_marginTop="@dimen/height_65"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_alert_point_exchange_cancel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/bg_f7f7f7_radius_27"
                android:gravity="center"
                android:layout_marginEnd="@dimen/width_22"
                android:text="@string/word_cancel"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/textSize_44pt"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/text_alert_point_exchange_confirm"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/bg_ea5506_radius_27"
                android:gravity="center"
                android:text="@string/word_confirm"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_44pt"
                android:textStyle="bold" />


        </androidx.appcompat.widget.LinearLayoutCompat>
    </LinearLayout>

</RelativeLayout>