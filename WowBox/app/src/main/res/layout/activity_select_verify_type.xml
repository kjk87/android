<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".apps.verify.ui.VerifyWhatsAppActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height_55"
        android:text="@string/word_verify_method"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/textSize_55pt"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height_10"
        android:gravity="center"
        android:text="@string/msg_select_very_type_desc"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/textSize_38pt" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layout_select_verify_type_whatsapp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_194"
        android:layout_marginStart="@dimen/width_55"
        android:layout_marginTop="@dimen/height_113"
        android:layout_marginEnd="@dimen/width_55"
        android:background="@drawable/bg_border_5px_abb1bb_transparent_radius_22"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/width_44"
        android:paddingEnd="@dimen/width_44">

        <ImageView
            android:layout_width="@dimen/width_116"
            android:layout_height="@dimen/width_116"
            android:layout_marginEnd="@dimen/width_30"
            android:src="@drawable/ic_whatsapp" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/word_whatsapp"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/textSize_44pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_select_verify_type_mobile_number1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_10"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/textSize_33pt" />
        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layout_select_verify_type_sms"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_194"
        android:layout_marginStart="@dimen/width_55"
        android:layout_marginTop="@dimen/height_27"
        android:layout_marginEnd="@dimen/width_55"
        android:background="@drawable/bg_border_5px_abb1bb_transparent_radius_22"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/width_44"
        android:paddingEnd="@dimen/width_44"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/width_116"
            android:layout_height="@dimen/width_116"
            android:layout_marginEnd="@dimen/width_30"
            android:src="@drawable/ic_sms" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/word_sms"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/textSize_44pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_select_verify_type_mobile_number2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_10"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/textSize_33pt" />
        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>


</LinearLayout>