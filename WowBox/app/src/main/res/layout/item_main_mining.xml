            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/msg_mining3_desc1"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_88pt"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_55"
                android:background="@drawable/bg_29000000_radius_33"
                android:paddingStart="@dimen/width_50"
                android:paddingTop="@dimen/height_27"
                android:paddingEnd="@dimen/width_50"
                android:paddingBottom="@dimen/height_27"
                android:text="@string/msg_mining3_desc2"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_50pt"
                android:textStyle="bold" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/layout_main_mining3_recommend_key"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_63"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/word_recommend_code"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_38pt" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_110"
                    android:layout_marginTop="@dimen/height_22"
                    android:background="@drawable/bg_ffffff_radius_33">

                    <TextView
                        android:id="@+id/text_main_mining3_recommend_key"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/width_44"
                        android:textColor="@color/color_6f6f6f"
                        android:textSize="@dimen/textSize_38pt" />

                    <ImageView
                        android:id="@+id/image_main_mining3_recommend_key_copy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/width_44"
                        android:src="@drawable/ic_copy_mining" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_main_mining3_invite_mining"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_110"
                    android:layout_marginTop="@dimen/height_22"
                    android:background="@drawable/bg_ffffff_radius_33">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/width_44"
                        android:text="@string/word_invite_mining_history"
                        android:textColor="@color/color_373737"
                        android:textSize="@dimen/textSize_38pt" />

                    <TextView
                        android:id="@+id/text_main_mining3_invite_mining_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/width_44"
                        android:drawableEnd="@drawable/ic_arrow_mining"
                        android:drawablePadding="@dimen/width_16"
                        android:textColor="@color/color_373737"
                        android:textSize="@dimen/textSize_38pt"
                        android:textStyle="bold" />

                </RelativeLayout>


            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_63"
                android:text="@string/msg_mining3_desc3"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_38pt" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layout_main_mining4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/width_72"
            android:layout_marginTop="@dimen/height_88"
            android:layout_marginEnd="@dimen/width_72"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/msg_mining4_desc1"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_88pt"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_55"
                android:background="@drawable/bg_29000000_radius_33"
                android:paddingStart="@dimen/width_50"
                android:paddingTop="@dimen/height_27"
                android:paddingEnd="@dimen/width_50"
                android:paddingBottom="@dimen/height_27"
                android:text="@string/msg_mining4_desc2"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_50pt"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_63"
                android:text="@string/word_buff_channel"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_38pt" />

            <RelativeLayout
                android:id="@+id/layout_main_mining4_telegram"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_110"
                android:layout_marginTop="@dimen/height_22"
                android:background="@drawable/bg_ffffff_radius_33">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/width_44"
                    android:drawableStart="@drawable/ic_mining_telegram"
                    android:drawablePadding="@dimen/width_27"
                    android:gravity="center"
                    android:text="@string/word_telegram"
                    android:textColor="@color/color_1b1b1b"
                    android:textSize="@dimen/textSize_38pt" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/width_44"
                    android:src="@drawable/ic_arrow_mining" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_main_mining4_discord"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_110"
                android:layout_marginTop="@dimen/height_22"
                android:background="@drawable/bg_ffffff_radius_33">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/width_44"
                    android:drawableStart="@drawable/ic_mining_discord"
                    android:drawablePadding="@dimen/width_27"
                    android:gravity="center"
                    android:text="@string/word_discord"
                    android:textColor="@color/color_1b1b1b"
                    android:textSize="@dimen/textSize_38pt" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/width_44"
                    android:src="@drawable/ic_arrow_mining" />

            </RelativeLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layout_main_mining5"
