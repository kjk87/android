        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_mining1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_main_mining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/width_60"
            android:layout_marginBottom="@dimen/height_245"
            android:src="@drawable/ic_mining1" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layout_main_mining1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/width_72"
            android:layout_marginEnd="@dimen/width_72"
            android:layout_marginTop="@dimen/height_88"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/msg_mining1_desc1"
                android:textColor="@color/color_dcdcdc"
                android:textSize="@dimen/textSize_44pt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_22"
                android:text="@string/msg_mining1_desc2"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_88pt"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_55"
                android:background="@drawable/bg_29000000_radius_33"
                android:paddingStart="@dimen/width_50"
                android:paddingTop="@dimen/height_27"
                android:paddingEnd="@dimen/width_50"
                android:paddingBottom="@dimen/height_27"
                android:text="@string/msg_mining1_desc3"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_50pt"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_63"
                android:text="@string/msg_mining1_desc4"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_38pt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_24"
                android:text="@string/msg_mining1_desc5"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_38pt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_24"
                android:text="@string/msg_mining1_desc6"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_38pt" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layout_main_mining2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/width_72"
            android:layout_marginEnd="@dimen/width_72"
            android:layout_marginTop="@dimen/height_88"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/msg_mining2_desc1"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_88pt"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_55"
                android:background="@drawable/bg_29000000_radius_33"
                android:paddingStart="@dimen/width_50"
                android:paddingTop="@dimen/height_27"
                android:paddingEnd="@dimen/width_50"
                android:paddingBottom="@dimen/height_27"
                android:text="@string/msg_mining2_desc2"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_50pt"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_63"
                android:text="@string/msg_mining2_desc3"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_38pt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_24"
                android:text="@string/msg_mining2_desc4"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_38pt" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
