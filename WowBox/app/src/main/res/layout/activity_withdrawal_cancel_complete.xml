<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".apps.my.ui.WithdrawalCompleteActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/msg_complete_withdrawal_cancel"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_50pt"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_22"
            android:gravity="center"
            android:text="@string/msg_complete_withdrawal_cancel_desc"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_38pt" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/text_withdrawal_cancel_complete_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_135"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/width_44"
        android:layout_marginTop="@dimen/height_69"
        android:layout_marginEnd="@dimen/width_44"
        android:layout_marginBottom="@dimen/height_99"
        android:background="@drawable/bg_48b778_radius_30"
        android:gravity="center"
        android:text="@string/word_confirm"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_44pt"
        android:textStyle="bold" />


</RelativeLayout>