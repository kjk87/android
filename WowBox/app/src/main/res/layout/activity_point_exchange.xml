<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".apps.point.ui.PointExchangeActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/width_44"
            android:paddingEnd="@dimen/width_44"
            android:paddingBottom="@dimen/height_150"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_my_wowmall"
                android:layout_marginTop="@dimen/height_50"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/height_74"
                android:textSize="@dimen/textSize_44pt"
                android:textStyle="bold"
                android:textColor="@color/color_333333"
                android:text="@string/msg_wow_mall_point_exchange_desc"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_ea5506"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/height_160"
                android:text="@string/word_retention_point"
                android:textSize="@dimen/textSize_38pt"/>

            <TextView
                android:id="@+id/text_point_exchange_retention_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_60pt"
                android:textColor="@color/color_333333"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/height_22"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_88"
                android:text="@string/word_input_exchange_point"
                android:textColor="@color/color_898989"
                android:textSize="@dimen/textSize_33pt"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_132"
                android:layout_marginTop="@dimen/height_33"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edit_point_exchange_point"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/width_27"
                    android:layout_weight="1"
                    android:background="@drawable/bg_f7f7f7_radius_33"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/width_30"
                    android:paddingEnd="@dimen/width_30"
                    android:inputType="number"
                    android:textColor="@color/color_333333"
                    android:textColorHint="@color/color_898989"
                    android:textSize="@dimen/textSize_38pt" />

                <TextView
                    android:id="@+id/text_point_exchange_point_all"
                    android:layout_width="@dimen/width_200"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_border_3px_333333_transparent_radius_36"
                    android:gravity="center"
                    android:text="@string/word_all_en"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/textSize_38pt"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_387"
                android:background="@drawable/bg_f7f7f7_radius_41"
                android:padding="@dimen/width_44"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/check_point_exchange_agree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/ic_check"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/width_16"
                    android:text="@string/msg_point_exchange_terms_title"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/textSize_38pt"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSize_34pt"
                    android:textColor="@color/color_333333"
                    android:layout_marginTop="@dimen/height_33"
                    android:text="@string/msg_point_exchange_terms_desc"/>

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_44"
                android:background="@drawable/bg_f7f7f7_radius_41"
                android:padding="@dimen/width_44">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSize_38pt"
                    android:textColor="@color/color_6f6f6f"
                    android:layout_centerVertical="true"
                    android:text="@string/word_expect_exchange_point"/>

                <TextView
                    android:id="@+id/text_point_exchange_expect_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSize_44pt"
                    android:textColor="@color/color_333333"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/text_point_exchange"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_155"
                android:background="@drawable/bg_ea5506_radius_41"
                android:gravity="center"
                android:layout_marginTop="@dimen/height_44"
                android:text="@string/word_wow_mall_point_exchange"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_41pt"
                android:textStyle="bold" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>