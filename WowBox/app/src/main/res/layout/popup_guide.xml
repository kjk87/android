<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="@dimen/width_892"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_ffffff_radius_27"
        android:elevation="@dimen/width_10"
        android:layout_margin="@dimen/width_10"
        android:orientation="vertical"
        android:padding="@dimen/width_55">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/width_66">

            <TextView
                android:id="@+id/text_popup_guide_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/textSize_44pt"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/image_popup_guide_close"
                android:layout_width="@dimen/width_66"
                android:layout_height="@dimen/width_66"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_popup_close" />

        </RelativeLayout>

        <TextView
            android:id="@+id/text_popup_guide_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_27"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/textSize_44pt" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layout_popup_guide_desc_master_commission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_33"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/width_20"
                android:paddingEnd="@dimen/width_20"
                android:paddingTop="@dimen/height_13"
                android:paddingBottom="@dimen/height_13"
                android:textSize="@dimen/textSize_38pt"
                android:textColor="@color/color_333333"
                android:layout_marginEnd="@dimen/width_20"
                android:text="@string/word_master_profit_ratio"
                android:background="@drawable/bg_1a1a1a_radius_110"/>

            <TextView
                android:id="@+id/text_popup_guide_master_profile_commission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_49pt"
                android:textColor="@color/color_ea5506"
                android:textStyle="bold"/>

        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>