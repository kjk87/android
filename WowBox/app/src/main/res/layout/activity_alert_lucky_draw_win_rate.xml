<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bf000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_ffffff_top_radius_55"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/height_113"
            android:layout_marginStart="@dimen/width_94"
            android:layout_marginTop="@dimen/height_66"
            android:layout_marginEnd="@dimen/width_94"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_alert_lucky_draw_win_rate3_title"
                android:layout_width="@dimen/width_346"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/height_74"
                android:layout_marginEnd="@dimen/width_60"
                android:background="@drawable/bg_f7f7f7_radius_110"
                android:gravity="center"
                android:paddingTop="@dimen/height_13"
                android:paddingBottom="@dimen/height_13"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/textSize_38pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_alert_lucky_draw_win_rate3"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_85"
                android:layout_weight="1"
                android:background="@drawable/bg_border_3px_ea5506_f7f7f7_radius_33"
                android:gravity="center"
                android:textColor="@color/color_ea5506"
                android:textSize="@dimen/textSize_38pt"
                android:textStyle="bold" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/height_113"
            android:layout_marginStart="@dimen/width_94"
            android:layout_marginTop="@dimen/height_66"
            android:layout_marginEnd="@dimen/width_94"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_alert_lucky_draw_win_rate2_title"
                android:layout_width="@dimen/width_346"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/height_74"
                android:layout_marginEnd="@dimen/width_60"
                android:background="@drawable/bg_f7f7f7_radius_110"
                android:gravity="center"
                android:textColor="@color/color_333333"
                android:paddingTop="@dimen/height_13"
                android:paddingBottom="@dimen/height_13"
                android:textSize="@dimen/textSize_38pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_alert_lucky_draw_win_rate2"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_85"
                android:layout_weight="1"
                android:background="@drawable/bg_border_3px_ea5506_f7f7f7_radius_33"
                android:gravity="center"
                android:textColor="@color/color_ea5506"
                android:textSize="@dimen/textSize_38pt"
                android:textStyle="bold" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/height_113"
            android:layout_marginStart="@dimen/width_94"
            android:layout_marginTop="@dimen/height_66"
            android:layout_marginEnd="@dimen/width_94"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_alert_lucky_draw_win_rate1_title"
                android:layout_width="@dimen/width_346"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/height_74"
                android:layout_marginEnd="@dimen/width_60"
                android:background="@drawable/bg_f7f7f7_radius_110"
                android:gravity="center"
                android:paddingTop="@dimen/height_13"
                android:paddingBottom="@dimen/height_13"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/textSize_38pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_alert_lucky_draw_win_rate1"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_85"
                android:layout_weight="1"
                android:background="@drawable/bg_border_3px_ea5506_f7f7f7_radius_33"
                android:gravity="center"
                android:textColor="@color/color_ea5506"
                android:textSize="@dimen/textSize_38pt"
                android:textStyle="bold" />
        </androidx.appcompat.widget.LinearLayoutCompat>


        <TextView
            android:id="@+id/text_alert_lucky_draw_win_rate_confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_135"
            android:layout_marginStart="@dimen/width_44"
            android:layout_marginTop="@dimen/height_88"
            android:layout_marginEnd="@dimen/width_44"
            android:layout_marginBottom="@dimen/height_66"
            android:background="@drawable/bg_ea5506_radius_27"
            android:gravity="center"
            android:text="@string/word_confirm"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_44pt"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>