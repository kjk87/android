<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/width_44"
        android:layout_marginEnd="@dimen/width_44"
        android:layout_marginTop="@dimen/height_60"
        android:orientation="horizontal">

        <io.github.florent37.shapeofview.shapes.RoundRectView
            android:layout_width="@dimen/width_200"
            android:layout_height="@dimen/width_200"
            android:layout_marginEnd="@dimen/width_33"
            app:shape_roundRect_bottomLeftRadius="@dimen/width_13"
            app:shape_roundRect_bottomRightRadius="@dimen/width_13"
            app:shape_roundRect_topLeftRadius="@dimen/width_13"
            app:shape_roundRect_topRightRadius="@dimen/width_13">

            <ImageView
                android:id="@+id/image_event_win"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/luckybol_default_img" />

        </io.github.florent37.shapeofview.shapes.RoundRectView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:paddingTop="@dimen/width_40">

            <TextView
                android:id="@+id/text_event_win_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/textSize_38pt"
                android:textStyle="bold" />


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_16"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_event_win_gift_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/textSize_30pt"
                    android:layout_marginEnd="@dimen/width_50"/>

                <TextView
                    android:id="@+id/text_event_win_gift_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/textSize_30pt"
                    android:textStyle="bold"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_event_win_impression"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_959595"
                    android:textSize="@dimen/textSize_30pt"
                    android:layout_marginEnd="@dimen/width_44"
                    android:maxLines="2"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/text_event_win_reply_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/textSize_30pt"
                    android:drawableStart="@drawable/ic_reply"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:drawablePadding="@dimen/width_5"
                    android:background="@drawable/underbar_333333_transparent"/>

            </androidx.appcompat.widget.LinearLayoutCompat>


        </LinearLayout>


    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_3"
        android:layout_marginTop="@dimen/height_44"
        android:layout_marginStart="@dimen/width_44"
        android:layout_marginEnd="@dimen/width_44"
        android:background="@color/color_dedede"/>

</LinearLayout>