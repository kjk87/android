<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/width_44"
        android:layout_marginTop="@dimen/height_47"
        android:layout_marginEnd="@dimen/width_44"
        android:layout_marginBottom="@dimen/height_41"
        android:background="@drawable/bg_f7f7f7_radius_55"
        android:orientation="vertical"
        android:paddingStart="@dimen/width_44"
        android:paddingTop="@dimen/height_55"
        android:paddingEnd="@dimen/width_44"
        android:paddingBottom="@dimen/height_55">

        <TextView
            android:id="@+id/text_lucky_draw_purchase_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/textSize_49pt"
            android:textStyle="bold" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_55"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_lucky_draw_purchase_engage_ball_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/width_10"
                android:text="@string/word_join_price"
                android:textColor="@color/color_ea5506"
                android:textSize="@dimen/textSize_38pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_lucky_draw_purchase_engage_ball"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/width_10"
                android:gravity="center"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/textSize_44pt"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_lucky_draw_ball" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/text_lucky_draw_purchase_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_454545"
                android:textSize="@dimen/textSize_33pt" />


        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_55"
            android:background="@drawable/bg_eeeeee_radius_33"
            android:orientation="vertical"
            android:padding="@dimen/width_44">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/word_selected_lucky_draw_number"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/textSize_49pt"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_lucky_draw_purchase_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>


</FrameLayout>