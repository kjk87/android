<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_guide_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/textSize_66pt"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/height_379"/>

    <ImageView
        android:id="@+id/image_guide1"
        android:layout_width="@dimen/width_814"
        android:layout_height="@dimen/height_1485"
        android:layout_gravity="end"
        android:visibility="gone"
        android:layout_marginEnd="@dimen/width_44"
        android:src="@drawable/img_guide1"/>

    <ImageView
        android:id="@+id/image_guide2"
        android:layout_width="@dimen/width_850"
        android:layout_height="@dimen/height_1550"
        android:layout_marginTop="@dimen/height_100"
        android:layout_gravity="end"
        android:visibility="gone"
        android:src="@drawable/img_guide2"/>

    <ImageView
        android:id="@+id/image_guide3"
        android:layout_width="@dimen/width_881"
        android:layout_height="@dimen/height_1517"
        android:layout_marginTop="@dimen/height_35"
        android:layout_marginStart="@dimen/width_5"
        android:visibility="gone"
        android:src="@drawable/img_guide3"/>

    <ImageView
        android:id="@+id/image_guide4"
        android:layout_width="@dimen/width_800"
        android:layout_height="@dimen/height_1393"
        android:layout_marginTop="@dimen/height_135"
        android:layout_marginStart="@dimen/width_50"
        android:visibility="gone"
        android:src="@drawable/img_guide4"/>

    <ImageView
        android:id="@+id/image_guide5"
        android:layout_width="@dimen/width_950"
        android:layout_height="@dimen/height_1097"
        android:layout_marginTop="@dimen/height_100"
        android:layout_gravity="end"
        android:visibility="gone"
        android:src="@drawable/img_guide5"/>

</androidx.appcompat.widget.LinearLayoutCompat>