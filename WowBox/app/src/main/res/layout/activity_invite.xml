<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".apps.invite.ui.InviteActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/height_200">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_1261"
                android:src="@drawable/img_invite1" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_345"
                android:src="@drawable/img_invite2" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_55"
                android:text="@string/word_recommend_code"
                android:textColor="@color/color_ea5506"
                android:layout_marginStart="@dimen/width_44"
                android:textSize="@dimen/textSize_33pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_invite_url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_22"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/width_44"
                android:textSize="@dimen/textSize_33pt"
                android:textStyle="bold" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/width_55"
        android:layout_marginEnd="@dimen/width_55"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_invite_copy"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_110"
            android:layout_marginEnd="@dimen/width_108"
            android:layout_marginBottom="@dimen/height_22"
            android:layout_marginTop="@dimen/height_22"
            android:layout_weight="1"
            android:background="@drawable/bg_ffffff_radius_22"
            android:drawablePadding="@dimen/width_22"
            android:elevation="@dimen/width_5"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/width_88"
            android:text="@string/word_copy"
            android:textColor="@color/color_ea5506"
            android:textSize="@dimen/textSize_38pt"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/ic_invite_copy" />


        <TextView
            android:id="@+id/text_invite"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_110"
            android:layout_marginBottom="@dimen/height_22"
            android:layout_marginTop="@dimen/height_22"
            android:layout_weight="1"
            android:background="@drawable/gradient_ea5506_f47916_radius_22"
            android:drawableStart="@drawable/ic_share"
            android:drawablePadding="@dimen/width_22"
            android:elevation="@dimen/width_5"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/width_88"
            android:text="@string/msg_share"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_38pt"
            android:textStyle="bold" />


    </androidx.appcompat.widget.LinearLayoutCompat>

</RelativeLayout>