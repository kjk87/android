<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".apps.my.ui.SettingActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layout_setting_account_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_69"
                android:background="@color/color_f7f7f7"
                android:paddingStart="@dimen/width_44"
                android:paddingTop="@dimen/height_50"
                android:paddingEnd="@dimen/width_44"
                android:paddingBottom="@dimen/height_50">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/width_38"
                    android:text="@string/word_account_info"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/textSize_38pt" />

                <ImageView
                    android:id="@+id/image_setting_account_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_faq_arrow_down" />

            </RelativeLayout>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/layout_setting_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_eeeeee"
                android:orientation="vertical"
                android:paddingStart="@dimen/width_44"
                android:paddingTop="@dimen/height_30"
                android:paddingEnd="@dimen/width_44"
                android:paddingBottom="@dimen/height_30"
                android:visibility="gone">

                <TextView
                    android:id="@+id/text_setting_account_platform_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_ffffff_radius_24"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/height_99"
                    android:paddingStart="@dimen/width_22"
                    android:paddingEnd="@dimen/width_22"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/textSize_38pt" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_160"
                    android:layout_marginTop="@dimen/height_33"
                    android:background="@drawable/bg_ffffff_radius_24"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/width_22"
                    android:paddingTop="@dimen/height_16"
                    android:paddingEnd="@dimen/width_22"
                    android:paddingBottom="@dimen/height_16">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/word_id_en"
                            android:textColor="@color/color_898989"
                            android:textSize="@dimen/textSize_33pt" />

                        <TextView
                            android:id="@+id/text_setting_account_user_key"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/textSize_38pt" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <TextView
                        android:id="@+id/text_setting_account_withdrawal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_ff5e5e"
                        android:textSize="@dimen/textSize_38pt"
                        android:layout_alignParentEnd="true"
                        android:text="@string/word_withdrawal"
                        android:background="@drawable/underbar_ff5e5e_transparent"
                        android:layout_alignParentBottom="true"/>


                </RelativeLayout>


            </androidx.appcompat.widget.LinearLayoutCompat>

            <RelativeLayout
                android:id="@+id/layout_setting_terms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_33"
                android:background="@color/color_f7f7f7"
                android:paddingStart="@dimen/width_44"
                android:paddingTop="@dimen/height_50"
                android:paddingEnd="@dimen/width_44"
                android:paddingBottom="@dimen/height_50">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/width_38"
                    android:text="@string/word_terms"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/textSize_38pt" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_my_arrow" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_setting_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_33"
                android:background="@color/color_f7f7f7"
                android:paddingStart="@dimen/width_44"
                android:paddingTop="@dimen/height_50"
                android:paddingEnd="@dimen/width_44"
                android:paddingBottom="@dimen/height_50">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/width_38"
                    android:text="@string/word_version_info"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/textSize_38pt" />

                <ImageView
                    android:id="@+id/image_setting_version_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_my_arrow" />

                <TextView
                    android:id="@+id/text_setting_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/textSize_38pt"
                    android:layout_toStartOf="@id/image_setting_version_arrow"
                    android:textColor="@color/color_ea5506"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_setting_opensource_licence"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_33"
                android:background="@color/color_f7f7f7"
                android:paddingStart="@dimen/width_44"
                android:paddingTop="@dimen/height_50"
                android:paddingEnd="@dimen/width_44"
                android:paddingBottom="@dimen/height_50">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/width_38"
                    android:text="@string/word_opensource_licence"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/textSize_38pt" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_my_arrow" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_setting_alarm_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_33"
                android:background="@color/color_f7f7f7"
                android:paddingStart="@dimen/width_44"
                android:paddingTop="@dimen/height_50"
                android:paddingEnd="@dimen/width_44"
                android:paddingBottom="@dimen/height_50">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/width_38"
                    android:text="@string/word_alarm_setting"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/textSize_38pt" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_my_arrow" />

            </RelativeLayout>

            <TextView
                android:id="@+id/text_setting_log_out"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_135"
                android:background="@drawable/bg_eeeeee_radius_27"
                android:layout_marginStart="@dimen/width_44"
                android:layout_marginEnd="@dimen/width_44"
                android:layout_marginTop="@dimen/height_69"
                android:gravity="center"
                android:textColor="@color/color_454545"
                android:text="@string/word_log_out"
                android:textSize="@dimen/textSize_44pt"
                android:textStyle="bold"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>