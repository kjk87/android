<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/height_100"
    tools:context=".apps.luckybox.ui.LuckyBoxPayCompleteActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/height_330"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/width_120"
            android:layout_height="@dimen/width_120"
            android:src="@drawable/ic_lucky_box_pay_complete" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_42"
            android:text="@string/word_buy_complete"
            android:textColor="@color/color_ea5506"
            android:textSize="@dimen/textSize_48pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_lucky_box_pay_complete_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/color_333333"
            android:layout_marginTop="@dimen/height_49"
            android:textStyle="bold"
            android:textSize="@dimen/textSize_60pt"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_163"
            android:layout_marginTop="@dimen/height_85"
            android:layout_marginStart="@dimen/width_44"
            android:layout_marginEnd="@dimen/width_44"
            android:paddingStart="@dimen/width_44"
            android:paddingEnd="@dimen/width_44"
            android:background="@drawable/bg_f7f7f7_radius_55">

            <TextView
                android:id="@+id/text_lucky_box_pay_complete_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/color_898989"
                android:textSize="@dimen/textSize_38pt"
                android:text="@string/word_wow_box"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_lucky_box_pay_complete_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:textColor="@color/color_2e2e2e"
                android:textSize="@dimen/textSize_42pt"
                android:textStyle="bold" />

        </RelativeLayout>


    </androidx.appcompat.widget.LinearLayoutCompat>



    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/width_44"
        android:layout_marginEnd="@dimen/width_44"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_lucky_box_pay_complete_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_898989"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/textSize_38pt"
            android:gravity="center"
            android:text="@string/msg_lucky_box_pay_complete_desc" />


        <TextView
            android:id="@+id/text_lucky_box_pay_complete_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_135"
            android:layout_marginTop="@dimen/height_49"
            android:background="@drawable/bg_ea5506_radius_27"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="@string/word_go_container"
            android:textSize="@dimen/textSize_44pt" />


        <TextView
            android:id="@+id/text_lucky_box_pay_complete_confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_135"
            android:background="@drawable/bg_ffede5_radius_27"
            android:gravity="center"
            android:text="@string/word_confirm"
            android:textStyle="bold"
            android:visibility="gone"
            android:layout_marginTop="@dimen/height_33"
            android:textColor="@color/color_ea5506"
            android:textSize="@dimen/textSize_44pt"/>



    </androidx.appcompat.widget.LinearLayoutCompat>

</RelativeLayout>