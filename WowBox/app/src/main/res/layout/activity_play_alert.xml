<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bf000000"
    tools:context=".apps.event.ui.EventAlertActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/width_44"
        android:layout_marginEnd="@dimen/width_44"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/height_44"
            android:background="@drawable/bg_ffffff_radius_55"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/width_44"
                android:layout_marginTop="@dimen/height_110"
                android:layout_marginEnd="@dimen/width_44"
                android:gravity="center"
                android:text="@string/msg_question_play_join"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/textSize_44pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_play_alert_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_63"
                android:drawableStart="@drawable/ic_luckyball"
                android:drawablePadding="@dimen/width_12"
                android:gravity="center"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/textSize_38pt"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_63"
                android:text="@string/msg_alert_play_caution"
                android:textColor="@color/color_8d8d8d"
                android:textSize="@dimen/textSize_33pt" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_135"
                android:layout_marginStart="@dimen/width_44"
                android:layout_marginTop="@dimen/height_63"
                android:layout_marginEnd="@dimen/width_44"
                android:layout_marginBottom="@dimen/height_70"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/text_play_alert_confirm"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_ea5506_radius_27"
                    android:gravity="center"
                    android:text="@string/word_agree"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_39pt" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/image_play_alert_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_play_alert_close"
            android:layout_gravity="end"/>

    </FrameLayout>

</RelativeLayout>