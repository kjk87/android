<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/layout_faq_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_f7f7f7"
        android:minHeight="@dimen/height_146"
        android:paddingStart="@dimen/width_44"
        android:paddingTop="@dimen/height_38"
        android:paddingEnd="@dimen/width_44"
        android:paddingBottom="@dimen/height_38">

        <TextView
            android:id="@+id/text_faq_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/width_30"
            android:layout_toStartOf="@id/image_faq_arrow"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/textSize_38pt" />

        <ImageView
            android:id="@+id/image_faq_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_faq_arrow_down" />

    </RelativeLayout>

    <TextView
        android:id="@+id/text_faq_contents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_eeeeee"
        android:paddingStart="@dimen/width_44"
        android:paddingTop="@dimen/height_30"
        android:paddingEnd="@dimen/width_44"
        android:paddingBottom="@dimen/height_30"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/textSize_38pt"
        android:visibility="gone" />
</androidx.appcompat.widget.LinearLayoutCompat>