<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".apps.community.ui.CommunityApplyActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/width_44"
            android:paddingEnd="@dimen/width_44">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_182"
                android:layout_marginTop="@dimen/height_22"
                android:background="@drawable/bg_f7f7f7_radius_55"
                android:paddingStart="@dimen/width_49"
                android:paddingEnd="@dimen/width_49">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/word_auth_telegram_complete"
                    android:textColor="@color/color_ea5506"
                    android:textSize="@dimen/textSize_38pt"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:drawableStart="@drawable/ic_withdrawal_ball"
                    android:drawablePadding="@dimen/width_10"
                    android:gravity="center"
                    android:text="@string/word_give_1"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/textSize_38pt"
                    android:textStyle="bold" />

            </RelativeLayout>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_66"
                android:background="@drawable/bg_f7f7f7_radius_55"
                android:orientation="vertical"
                android:paddingStart="@dimen/width_49"
                android:paddingTop="@dimen/height_55"
                android:paddingBottom="@dimen/height_55"
                android:paddingEnd="@dimen/width_49">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/word_auth_telegram"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/textSize_44pt"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_41">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/msg_auth_telegram_desc1"
                            android:textColor="@color/color_373737"
                            android:textSize="@dimen/textSize_38pt" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/height_33"
                            android:text="@string/msg_auth_telegram_desc2"
                            android:textColor="@color/color_373737"
                            android:textSize="@dimen/textSize_38pt" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/img_auth_telegram" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_community_apply_move_telegram"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_144"
                    android:layout_marginTop="@dimen/height_47"
                    android:background="@drawable/bg_eeeeee_radius_33"
                    android:paddingStart="@dimen/width_49"
                    android:paddingEnd="@dimen/width_49">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:drawableEnd="@drawable/ic_my_arrow"
                        android:text="@string/word_buff_telegram_en"
                        android:textColor="@color/color_333333" />

                </RelativeLayout>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_66"
                android:text="@string/word_auth_image"
                android:textColor="@color/color_898989"
                android:textSize="@dimen/textSize_33pt"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_598"
                android:layout_marginTop="@dimen/height_33"
                android:background="@drawable/bg_eeeeee_radius_33">

                <TextView
                    android:id="@+id/text_community_apply_auth_image_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableTop="@drawable/ic_attach"
                    android:drawablePadding="@dimen/height_27"
                    android:text="@string/msg_attach_auth_image"
                    android:textColor="@color/color_898989"
                    android:textSize="@dimen/textSize_44pt"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/image_community_apply_auth_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="center" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_community_apply_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_66"
                android:paddingStart="@dimen/width_49"
                android:paddingEnd="@dimen/width_49"
                android:background="@drawable/bg_f7f7f7_radius_55"
                android:visibility="gone"
                android:paddingTop="@dimen/height_27"
                android:paddingBottom="@dimen/height_27">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/layout_community_apply_pending"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@drawable/ic_community_apply_pending"
                        android:drawablePadding="@dimen/height_27"
                        android:gravity="center"
                        android:text="@string/msg_auth_pending"
                        android:textColor="@color/color_ff5e5e"
                        android:textSize="@dimen/textSize_44pt"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/height_27"
                        android:gravity="center"
                        android:text="@string/msg_auth_pending_desc"
                        android:textColor="@color/color_ff5e5e"
                        android:textSize="@dimen/textSize_38pt" />


                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/layout_community_apply_return"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/height_27"
                        android:gravity="center"
                        android:text="@string/msg_auth_return"
                        android:textColor="@color/color_ff5e5e"
                        android:textSize="@dimen/textSize_38pt"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_community_apply_return_reason"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_105"
                        android:layout_marginTop="@dimen/height_27"
                        android:gravity="center"
                        android:background="@drawable/bg_24ff5e5e_radius_20"
                        android:text="@string/msg_view_return_reason"
                        android:textColor="@color/color_ff5e5e"
                        android:textStyle="bold"
                        android:textSize="@dimen/textSize_44pt" />


                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/layout_community_apply_normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/height_27"
                        android:gravity="center"
                        android:text="@string/msg_auth_complete"
                        android:textColor="@color/color_ea5506"
                        android:textSize="@dimen/textSize_38pt"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_105"
                        android:background="@drawable/bg_ffede5_radius_20"
                        android:layout_marginTop="@dimen/height_27">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_centerInParent="true"
                            android:text="@string/word_give_1_complete"
                            android:drawableStart="@drawable/ic_withdrawal_ball"
                            android:drawablePadding="@dimen/width_10"
                            android:textColor="@color/color_ea5506"
                            android:textSize="@dimen/textSize_44pt"
                            android:textStyle="bold" />

                    </RelativeLayout>


                </androidx.appcompat.widget.LinearLayoutCompat>


            </RelativeLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>

    <TextView
        android:id="@+id/text_community_apply"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_138"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/width_44"
        android:layout_marginTop="@dimen/height_65"
        android:layout_marginEnd="@dimen/width_44"
        android:layout_marginBottom="@dimen/height_65"
        android:background="@drawable/bg_ea5506_radius_27"
        android:gravity="center"
        android:text="@string/msg_auth_apply"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_44pt"
        android:textStyle="bold" />


</RelativeLayout>