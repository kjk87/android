<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layout_lottery_win_status"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_130"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_lottery_win_status_grade"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:gravity="center"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/textSize_38pt" />

        <TextView
            android:id="@+id/text_lottery_win_status_count"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.27"
            android:gravity="center"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/textSize_38pt" />

        <TextView
            android:id="@+id/text_lottery_win_status_total_prize"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:gravity="center"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/textSize_38pt" />

        <TextView
            android:id="@+id/text_lottery_win_status_prize"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.28"
            android:gravity="center"
            android:textColor="@color/color_ea5506"
            android:textStyle="bold"
            android:textSize="@dimen/textSize_38pt" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>