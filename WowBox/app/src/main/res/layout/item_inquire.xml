<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layout_faq_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/width_44"
        android:layout_marginEnd="@dimen/width_44"
        android:layout_marginBottom="@dimen/height_33"
        android:background="@drawable/bg_f7f7f7_radius_38"
        android:orientation="vertical"
        android:paddingStart="@dimen/width_44"
        android:paddingTop="@dimen/height_38"
        android:paddingEnd="@dimen/width_44"
        android:paddingBottom="@dimen/height_38">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_inquire_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/width_33"
                android:background="@drawable/bg_eeeeee_radius_11"
                android:padding="@dimen/width_16"
                android:textColor="@color/color_898989"
                android:textSize="@dimen/textSize_33pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_inquire_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/width_33"
                android:textColor="@color/color_454545"
                android:textSize="@dimen/textSize_33pt" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/text_inquire_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/width_33"
                android:textColor="@color/color_898989"
                android:textSize="@dimen/textSize_33pt" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <TextView
            android:id="@+id/text_inquire_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_33"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/textSize_50pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_inquire_contents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_22"
            android:textColor="@color/color_dcdcdc"
            android:textSize="@dimen/textSize_38pt" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_inquire_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_33"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/text_inquire_reply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_33"
            android:paddingStart="@dimen/width_44"
            android:paddingTop="@dimen/height_33"
            android:paddingEnd="@dimen/width_44"
            android:paddingBottom="@dimen/height_33"
            android:visibility="gone"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/textSize_38pt" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>